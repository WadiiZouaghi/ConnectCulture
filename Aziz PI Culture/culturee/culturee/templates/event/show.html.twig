{% extends 'baseA.html.twig' %}

{% block title %}Event Details{% endblock %}

{% block content %}
<div class="row">
    <div class="col-12">
        <div class="card mb-4">
            <div class="card-body">
                <div class="system-info mb-4">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h4 class="card-title mb-0">System Information</h4>
                        </div>
                        <div class="system-info-text">
                            <div>Current Date and Time (UTC): {{ "now"|date("Y-m-d H:i:s") }}</div>
                        </div>
                    </div>
                </div>

                <!-- Event Header -->
                <div class="event-header text-center mb-4">
                    <h2 class="text-primary">Event <span class="text-secondary">Details</span></h2>
                    <span class="badge bg-primary">{{ event.eventtype }}</span>
                </div>

                <div class="row">
                    <!-- Event Image Column -->
                    <div class="col-md-6 mb-4">
                        <div class="card">
                            <div class="card-body">
                                {% if event.image %}
                                    <img src="{{ asset('uploads/images/' ~ event.image) }}" 
                                         class="img-fluid rounded" 
                                         alt="{{ event.name }}">
                                {% else %}
                                    <div class="no-image d-flex flex-column align-items-center justify-content-center p-5 bg-light rounded">
                                        <i class="mdi mdi-image-off text-muted" style="font-size: 48px;"></i>
                                        <span class="mt-2">No image available</span>
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                    </div>

                    <!-- Event Details Column -->
                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-body">
                                <div class="event-info">
                                    <div class="info-item mb-4">
                                        <h5 class="text-primary"><i class="mdi mdi-format-title me-2"></i>Event Name</h5>
                                        <p class="mb-0">{{ event.name }}</p>
                                    </div>

                                    <div class="info-item mb-4">
                                        <h5 class="text-primary"><i class="mdi mdi-map-marker me-2"></i>Destination</h5>
                                        <p class="mb-0">{{ event.destination }}</p>
                                    </div>

                                    <div class="info-item mb-4">
                                        <h5 class="text-primary"><i class="mdi mdi-calendar me-2"></i>Date</h5>
                                        <p class="mb-0">{{ event.date ? event.date|date('Y-m-d H:i:s') : 'N/A' }}</p>
                                    </div>

                                    <div class="info-item mb-4">
                                        <h5 class="text-primary"><i class="mdi mdi-account-group me-2"></i>Number of Places</h5>
                                        <p class="mb-0">{{ event.nbplaces }}</p>
                                    </div>

                                    <div class="info-item mb-4">
                                        <h5 class="text-primary"><i class="mdi mdi-text me-2"></i>Description</h5>
                                        <p class="mb-0">{{ event.Description }}</p>
                                    </div>

                                    <div class="info-item mb-4">
                                        <h5 class="text-primary"><i class="mdi mdi-format-list-bulleted me-2"></i>Required Equipment</h5>
                                        <p class="mb-0">{{ event.equipment }}</p>
                                    </div>

                                    <div class="info-item mb-4">
                                        <h5 class="text-primary"><i class="mdi mdi-account me-2"></i>Organizer</h5>
                                        <p class="mb-0">{{ event.user.userIdentifier }}</p>
                                    </div>

                                    <div class="info-item mb-4">
                                        <h5 class="text-primary"><i class="mdi mdi-account-group me-2"></i>Participants</h5>
                                        {% if event.participations is empty %}
                                            <p class="mb-0">No participants yet</p>
                                        {% else %}
                                            <ul class="list-unstyled mb-0">
                                                {% for participation in event.participations %}
                                                    <li class="mb-1">
                                                        <i class="mdi mdi-account-circle me-2"></i>
                                                        {{ participation.user.userIdentifier }}
                                                    </li>
                                                {% endfor %}
                                            </ul>
                                        {% endif %}
                                    </div>
                                </div>

                                <!-- Action Buttons -->
                                <div class="event-actions d-flex gap-2 mt-4">
                                    <a href="{{ path('app_event_edit', {'id': event.id}) }}" 
                                       class="btn btn-primary">
                                        <i class="mdi mdi-pencil me-1"></i> Edit
                                    </a>
                                    
                                    <a href="{{ path('app_event_index') }}" 
                                       class="btn btn-secondary">
                                        <i class="mdi mdi-keyboard-return me-1"></i> Back
                                    </a>

                                    <form method="post" 
                                          action="{{ path('app_event_delete', {'id': event.id}) }}" 
                                          onsubmit="return confirm('Are you sure you want to delete this event?');"
                                          style="display: inline-block;">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ event.id) }}">
                                        <button class="btn btn-danger">
                                            <i class="mdi mdi-delete me-1"></i> Delete
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.event-header h2 {
    font-size: 2rem;
    font-weight: 600;
}

.no-image {
    min-height: 300px;
}

.info-item h5 {
    font-size: 1rem;
    font-weight: 600;
}

.info-item p {
    font-size: 0.95rem;
    color: #6c757d;
}

.event-actions {
    border-top: 1px solid #dee2e6;
    padding-top: 1rem;
}

.system-info {
    background-color: #f8f9fa;
    border-radius: 4px;
    padding: 15px;
}

.system-info-text {
    font-family: monospace;
    font-size: 0.9rem;
    color: #062264;
}

.badge {
    font-size: 0.9rem;
    padding: 0.5em 1em;
}

@media (max-width: 768px) {
    .event-actions {
        flex-direction: column;
    }
    
    .event-actions .btn {
        width: 100%;
        margin-bottom: 0.5rem;
    }
}
</style>
{% endblock %}