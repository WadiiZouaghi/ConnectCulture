{% extends 'baselog.html.twig' %}

{% block title %}Reset Password{% endblock %}

{% block body %}
<div class="container-scroller">
    <div class="container-fluid page-body-wrapper full-page-wrapper">
        <div class="content-wrapper d-flex align-items-center auth px-0">
            <div class="row w-100 mx-0">
                <div class="col-lg-4 mx-auto">
                    <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                        <div class="brand-logo text-center">
                            <span class="logo-text" style="font-size: 28px; color: #0d6efd; font-weight: bold;">Culture Connect</span>
                        </div>

                        <h4>Reset Password</h4>
                        <h6 class="fw-light">Enter your email to receive reset instructions.</h6>

                        {% for flash_error in app.flashes('reset_password_error') %}
                            <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                        {% endfor %}

                        {% for message in app.flashes('success') %}
                            <div class="alert alert-success">
                                {{ message }}
                            </div>
                        {% endfor %}

                        {{ form_start(requestForm, {'attr': {'class': 'pt-3'}}) }}
                            <div class="form-group">
                                {{ form_widget(requestForm.email, {
                                    'attr': {
                                        'class': 'form-control form-control-lg',
                                        'placeholder': 'Email'
                                    }
                                }) }}
                                {{ form_errors(requestForm.email) }}
                            </div>

                            <div class="mt-3">
                                <button type="submit" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn">
                                    Send Reset Link
                                </button>
                            </div>

                            <div class="text-center mt-4 fw-light">
                                <a href="{{ path('app_login') }}" class="text-primary">Back to login</a>
                            </div>
                        {{ form_end(requestForm) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}