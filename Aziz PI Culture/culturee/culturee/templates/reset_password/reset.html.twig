{% extends 'baselog.html.twig' %}

{% block title %}Reset Password{% endblock %}

{% block body %}
<div class="container-scroller">
    <div class="container-fluid page-body-wrapper full-page-wrapper">
        <div class="content-wrapper d-flex align-items-center auth px-0">
            <div class="row w-100 mx-0">
                <div class="col-lg-4 mx-auto">
                    <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                        <div class="brand-logo text-center">
                            <span class="logo-text" style="font-size: 28px; color: #0d6efd; font-weight: bold;">Culture Connect</span>
                        </div>

                        <h4>Reset Password</h4>
                        <h6 class="fw-light">Enter your new password.</h6>

                        {{ form_start(resetForm, {'attr': {'class': 'pt-3'}}) }}
                            <div class="form-group">
                                {{ form_widget(resetForm.plainPassword.first, {
                                    'attr': {
                                        'class': 'form-control form-control-lg',
                                        'placeholder': 'New Password'
                                    }
                                }) }}
                            </div>

                            <div class="form-group">
                                {{ form_widget(resetForm.plainPassword.second, {
                                    'attr': {
                                        'class': 'form-control form-control-lg',
                                        'placeholder': 'Confirm New Password'
                                    }
                                }) }}
                            </div>

                            <div class="mt-3">
                                <button type="submit" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn">
                                    Reset Password
                                </button>
                            </div>
                        {{ form_end(resetForm) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}