{% extends 'base.html.twig' %}

{% block title %}{{ blog.title }}{% endblock %}

{% block body %}
    <div class="blog-post">
        <h1>{{ blog.title }}</h1>
        <div class="metadata">
            <span class="date">{{ blog.createdAt ? blog.createdAt|date('F d, Y') : '' }}</span>
            {% if blog.author %}
                <span class="author">by {{ blog.author.fullName }}</span>
            {% endif %}
        </div>
        
        <div class="content mt-4">
            {{ blog.content|raw }}
        </div>
        
        <div class="actions mt-4">
            <a href="{{ path('blog_edit', {id: blog.id}) }}" class="btn btn-warning">Edit</a>
            <a href="{{ path('blog_index') }}" class="btn btn-secondary">Back to list</a>
            <form method="post" action="{{ path('blog_delete', {id: blog.id}) }}" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this blog?');">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ blog.id) }}">
                <button class="btn btn-danger">Delete</button>
            </form>
        </div>
    </div>
    
    <div class="comments-section mt-5">
        <h2>Comments ({{ blog.comments|length }})</h2>
        
        {% if blog.comments|length > 0 %}
            <div class="comments-list">
                {% for comment in blog.comments %}
                    <div class="comment card mb-3">
                        <div class="card-body">
                            <div class="comment-header d-flex justify-content-between">
                                <h5 class="card-title">
                                    {% if comment.author %}
                                        {{ comment.author.fullName }}
                                    {% else %}
                                        Anonymous
                                    {% endif %}
                                </h5>
                                <small class="text-muted">{{ comment.createdAt ? comment.createdAt|date('M d, Y H:i') : '' }}</small>
                            </div>
                            <p class="card-text">{{ comment.content }}</p>
                            
                            <div class="comment-actions">
                                <a href="{{ path('comment_edit', {id: comment.id}) }}" class="btn btn-sm btn-outline-warning">Edit</a>
                                <form method="post" action="{{ path('comment_delete', {id: comment.id}) }}" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this comment?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ comment.id) }}">
                                    <button class="btn btn-sm btn-outline-danger">Delete</button>
                                </form>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <p>No comments yet. Be the first to comment!</p>
        {% endif %}
        
        <div class="add-comment mt-4">
            <h3>Add a Comment</h3>
            <a href="{{ path('comment_new') }}" class="btn btn-primary">Add Comment</a>
        </div>
    </div>
{% endblock %}
