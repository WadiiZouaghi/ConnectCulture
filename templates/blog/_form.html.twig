    transition: border-color 0.3s ease;
}

.form-control:focus {
    border-color: #4b93d1;
    outline: none;
}

.form-actions {
    display: flex;
    gap: 10px;
    margin-top: 30px;
}

.btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
