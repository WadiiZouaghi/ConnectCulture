{% extends 'baseA.html.twig' %}

{% block title %}My Blogs{% endblock %}

{% block body %}
<section class="blogs-section">
    <!-- System Info Bar -->
    <div class="system-info-bar">
        <div class="system-info-item">
            Current Date and Time (UTC - YYYY-MM-DD HH:MM:SS formatted): {{ "now"|date("Y-m-d H:i:s") }}
        </div>
        {% if app.user %}
        <div class="system-info-item">
            Current User's Login: {{ app.user.userIdentifier }}
        </div>
        {% endif %}
    </div>

    <div class="blogs-container">
        <!-- Blogs Header -->
        <div class="blogs-header">
            <div class="heading_container">
                <h2>My <span>Blogs</span></h2>
            </div>
            <a href="{{ path('app_blog_new_user') }}" class="action-btn create-btn header-create-btn">
                <i class="fa fa-plus"></i>
                Create New Blog
            </a>
        </div>

        <!-- Blogs Grid -->
        <div class="blogs-grid">
            {% if blogs is empty %}
                <div class="no-blogs">
                    <i class="fa fa-newspaper-o"></i>
                    <h3>No Blogs Found</h3>
                    <p>Start by creating your first blog</p>
                    <a href="{{ path('app_blog_new_user') }}" class="action-btn create-btn header-create-btn">
                        <i class="fa fa-plus"></i>
                        Create New Blog
                    </a>
                </div>
            {% endif %}

            {% for blog in blogs %}
                <div class="blog-card">
                    <div class="blog-content">
                        <div class="blog-info">
                            <div class="info-item">
                                <i class="fa fa-font"></i>
                                <div class="info-content">
                                    <label>Title</label>
                                    <p>{{ blog.title }}</p>
                                </div>
                            </div>
                            
                            <div class="info-item">
                                <i class="fa fa-align-left"></i>
                                <div class="info-content">
                                    <label>Content</label>
                                    <p class="description">{{ blog.content }}</p>
                                </div>
                            </div>
                            
                            <div class="info-item">
                                <i class="fa fa-user"></i>
                                <div class="info-content">
                                    <label>Author</label>
                                    <p>{{ blog.author }}</p>
                                </div>
                            </div>
                            
                            <div class="info-item">
                                <i class="fa fa-calendar"></i>
                                <div class="info-content">
                                    <label>Date</label>
                                    <p>{{ blog.date|date('Y-m-d') }}</p>
                                </div>
                            </div>
                            
                            <div class="info-item">
                                <i class="fa fa-comments"></i>
                                <div class="info-content">
                                    <label>Comments</label>
                                    <p>{{ blog.comments|length }} comment(s)</p>
                                </div>
                            </div>
                        </div>

                        <div class="blog-actions">
                            <a href="{{ path('app_blog_show_user', {'id': blog.id}) }}" class="action-btn view-btn">
                                <i class="fa fa-eye"></i>
                                View
                            </a>
                            <a href="{{ path('app_blog_edit_user', {'id': blog.id}) }}" class="action-btn edit-btn">
                                <i class="fa fa-pencil"></i>
                                Edit
                            </a>
                            <a href="#" onclick="event.preventDefault(); if(confirm('Are you sure you want to delete this blog?')) document.getElementById('delete-form-{{ blog.id }}').submit();" class="action-btn delete-btn">
                                <i class="fa fa-trash"></i>
                                Delete
                            </a>
                            <form id="delete-form-{{ blog.id }}" method="post" action="{{ path('app_blog_delete', {'id': blog.id}) }}" style="display: none;">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ blog.id) }}">
                            </form>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</section>

<style>
/* Reset and Base Styles */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

/* System Info Bar */
.system-info-bar {
    background: #f8f9fa;
    padding: 12px 25px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-bottom: 1px solid rgba(6, 34, 100, 0.1);
}

.system-info-item {
    display: flex;
    align-items: center;
    gap: 8px;
    color: #062264;
    font-size: 0.9rem;
    font-weight: 500;
}

/* Blogs Section */
.blogs-section {
    background-color: #f8f9fa;
    min-height: 100vh;
}

.blogs-container {
    padding: 30px;
    max-width: 1200px;
    margin: 0 auto;
}

/* Blogs Header */
.blogs-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 30px;
}

.heading_container h2 {
    font-size: 2rem;
    font-weight: bold;
    color: #062264;
}

.heading_container span {
    color: #4b93d1;
}

/* Blogs Grid */
.blogs-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 20px;
}

/* Blog Card */
.blog-card {
    background: white;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 4px 15px rgba(6, 34, 100, 0.1);
    transition: transform 0.3s ease;
}

.blog-card:hover {
    transform: translateY(-5px);
}

/* Blog Content */
.blog-content {
    padding: 20px;
}

.blog-info {
    margin-bottom: 20px;
}

.info-item {
    display: flex;
    align-items: flex-start;
    gap: 10px;
    padding: 10px;
    border-radius: 8px;
    transition: all 0.3s ease;
    margin-bottom: 10px;
}

.info-item:hover {
    transform: translateX(5px);
    background: #fff;
    box-shadow: 0 3px 10px rgba(0,0,0,0.05);
}

.info-item i {
    color: #4b93d1;
    font-size: 1.2rem;
    min-width: 20px;
}

.info-content {
    flex: 1;
}

.info-content label {
    color: #062264;
    font-weight: 600;
    font-size: 1rem;
    display: block;
    margin-bottom: 5px;
}

.info-content p {
    color: #062264;
    line-height: 1.6;
    margin: 0;
    font-size: 0.95rem;
}

.description {
    white-space: pre-line;
    max-height: 80px;
    overflow: hidden;
}

/* Blog Actions */
.blog-actions {
    display: flex;
    gap: 10px;
}

/* Action Buttons */
.action-btn {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    padding: 8px 16px;
    border-radius: 0;
    font-size: 0.85rem;
    font-weight: 500;
    text-decoration: none;
    transition: all 0.3s ease;
    border: none;
    cursor: pointer;
    justify-content: center;
    flex: 1;
}

/* Special styling for header create button */
.header-create-btn {
    padding: 6px 12px;
    font-size: 0.8rem;
    max-width: 150px;
    margin-left: auto;
}

.create-btn, .view-btn, .edit-btn, .delete-btn {
    background-color: #4b93d1;
    color: white;
}

.action-btn:hover {
    transform: translateY(-2px);
    opacity: 0.9;
    color: white;
    text-decoration: none;
}

.action-btn i {
    font-size: 0.9rem;
}

/* No Blogs Message */
.no-blogs {
    grid-column: 1 / -1;
    text-align: center;
    padding: 40px;
    background: white;
    border-radius: 12px;
    box-shadow: 0 4px 15px rgba(6, 34, 100, 0.1);
}

.no-blogs i {
    font-size: 48px;
    color: #062264;
    margin-bottom: 15px;
}

.no-blogs h3 {
    color: #062264;
    font-size: 1.6rem;
    margin-bottom: 10px;
}

.no-blogs p {
    color: #062264;
    font-size: 1rem;
    margin-bottom: 20px;
}

/* Responsive Design */
@media (max-width: 768px) {
    .system-info-bar {
        flex-direction: column;
        gap: 10px;
        text-align: center;
        padding: 10px 15px;
    }

    .blogs-container {
        padding: 15px;
    }

    .blogs-header {
        flex-direction: column;
        gap: 20px;
        text-align: center;
    }

    .header-create-btn {
        margin: 0 auto;
    }

    .blog-actions {
        flex-direction: column;
    }

    .action-btn {
        width: 100%;
    }

    .info-content label {
        font-size: 0.95rem;
    }

    .info-content p {
        font-size: 0.9rem;
    }
}
</style>
{% endblock %}