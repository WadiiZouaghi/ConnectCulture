{% extends 'baseA.html.twig' %}

{% block title %}Edit Comment{% endblock %}

{% block body %}
<section class="comment-section">
    <!-- System Info Bar -->
    <div class="system-info-bar">
        <div class="system-info-item">
            Current Date and Time (UTC - YYYY-MM-DD HH:MM:SS formatted): {{ "now"|date("Y-m-d H:i:s") }}
        </div>
        {% if app.user %}
        <div class="system-info-item">
            Current User's Login: {{ app.user.userIdentifier }}
        </div>
        {% endif %}
    </div>

    <div class="comment-container">
        <!-- Comment Header -->
        <div class="comment-header">
            <div class="heading_container">
                <h2>Edit <span>Comment</span></h2>
            </div>
            <div class="header-actions">
                <a href="{{ path('app_blog_show', {'id': comment.blog.id}) }}" class="action-btn back-btn">
                    <i class="fa fa-arrow-left"></i>
                    Back to Blog
                </a>
            </div>
        </div>

        <!-- Comment Form -->
        <div class="comment-form-container">
            <form method="post" class="comment-form">
                <div class="form-group">
                    <label for="content" class="form-label">Comment</label>
                    <textarea id="content" name="content" class="form-control" rows="5" required>{{ comment.content }}</textarea>
                </div>
                <div class="form-actions">
                    <button type="submit" class="btn btn-primary">Update</button>
                    <a href="{{ path('app_blog_show', {'id': comment.blog.id}) }}" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>

        <!-- Delete Form -->
        <div class="delete-form-container">
            <h3>Danger Zone</h3>
            <p>Once you delete a comment, there is no going back. Please be certain.</p>
            <form method="post" action="{{ path('app_comment_delete', {'id': comment.id}) }}" onsubmit="return confirm('Are you sure you want to delete this comment?');">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ comment.id) }}">
                <button class="btn btn-danger">Delete Comment</button>
            </form>
        </div>
    </div>
</section>

<style>
/* Reset and Base Styles */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

/* System Info Bar */
.system-info-bar {
    background: #f8f9fa;
    padding: 12px 25px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-bottom: 1px solid rgba(6, 34, 100, 0.1);
}

.system-info-item {
    display: flex;
    align-items: center;
    gap: 8px;
    color: #062264;
    font-size: 0.9rem;
    font-weight: 500;
}

/* Comment Section */
.comment-section {
    background-color: #f8f9fa;
    min-height: 100vh;
}

.comment-container {
    padding: 30px;
    max-width: 800px;
    margin: 0 auto;
}

/* Comment Header */
.comment-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 30px;
}

.heading_container h2 {
    font-size: 2rem;
    font-weight: bold;
    color: #062264;
}

.heading_container span {
    color: #4b93d1;
}

.header-actions {
    display: flex;
    gap: 10px;
}

/* Comment Form Container */
.comment-form-container {
    margin-bottom: 30px;
}

.comment-form {
    background: white;
    padding: 30px;
    border-radius: 12px;
    box-shadow: 0 4px 15px rgba(6, 34, 100, 0.1);
}

.form-group {
    margin-bottom: 20px;
}

.form-label {
    display: block;
    margin-bottom: 8px;
    font-weight: 600;
    color: #062264;
}

.form-control {
    width: 100%;
    padding: 10px 15px;
    border: 1px solid #ddd;
    border-radius: 4px;
    font-size: 1rem;
    transition: border-color 0.3s ease;
}

.form-control:focus {
    border-color: #4b93d1;
    outline: none;
}

.form-actions {
    display: flex;
    gap: 10px;
}

/* Delete Form Container */
.delete-form-container {
    background: white;
    padding: 30px;
    border-radius: 12px;
    box-shadow: 0 4px 15px rgba(6, 34, 100, 0.1);
    border-top: 4px solid #dc3545;
}

.delete-form-container h3 {
    color: #dc3545;
    margin-bottom: 10px;
    font-size: 1.2rem;
}

.delete-form-container p {
    margin-bottom: 20px;
    color: #6c757d;
}

/* Buttons */
.btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 6px;
    padding: 10px 20px;
    border-radius: 4px;
    font-size: 0.9rem;
    font-weight: 500;
    text-decoration: none;
    transition: all 0.3s ease;
    border: none;
    cursor: pointer;
}

.btn-primary {
    background-color: #4b93d1;
    color: white;
}

.btn-secondary {
    background-color: #6c757d;
    color: white;
}

.btn-danger {
    background-color: #dc3545;
    color: white;
}

.btn:hover {
    opacity: 0.9;
    transform: translateY(-2px);
}

/* Action Buttons */
.action-btn {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    padding: 8px 16px;
    border-radius: 4px;
    font-size: 0.85rem;
    font-weight: 500;
    text-decoration: none;
    transition: all 0.3s ease;
    border: none;
    cursor: pointer;
}

.back-btn {
    background-color: #6c757d;
    color: white;
}

.action-btn:hover {
    transform: translateY(-2px);
    opacity: 0.9;
    color: white;
    text-decoration: none;
}

/* Responsive Design */
@media (max-width: 768px) {
    .system-info-bar {
        flex-direction: column;
        gap: 10px;
        text-align: center;
        padding: 10px 15px;
    }

    .comment-container {
        padding: 15px;
    }

    .comment-header {
        flex-direction: column;
        gap: 20px;
        text-align: center;
    }

    .header-actions {
        width: 100%;
        justify-content: center;
    }

    .comment-form {
        padding: 20px;
    }

    .delete-form-container {
        padding: 20px;
    }

    .form-actions {
        flex-direction: column;
    }

    .btn {
        width: 100%;
    }
}
</style>
{% endblock %}