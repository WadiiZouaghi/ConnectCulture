{% extends 'base.html.twig' %}

{% block title %}Edit Blog{% endblock %}

{% block body %}
    <h1>Edit Blog</h1>

    {{ form_start(form) }}
        {{ form_widget(form) }}
        <button class="btn btn-primary">Update</button>
    {{ form_end(form) }}

    <div class="mt-3">
        <a href="{{ path('blog_index') }}" class="btn btn-secondary">Back to list</a>
        <a href="{{ path('blog_show', {id: blog.id}) }}" class="btn btn-info">Show</a>
        <form method="post" action="{{ path('blog_delete', {id: blog.id}) }}" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this blog?');">
            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ blog.id) }}">
            <button class="btn btn-danger">Delete</button>
        </form>
    </div>
{% endblock %}
