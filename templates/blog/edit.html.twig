{% extends 'baseA.html.twig' %}

{% block title %}Edit Blog{% endblock %}

{% block body %}
<section class="blog-section">
    <!-- System Info Bar -->
    <div class="system-info-bar">
        <div class="system-info-item">
            Current Date and Time (UTC - YYYY-MM-DD HH:MM:SS formatted): {{ "now"|date("Y-m-d H:i:s") }}
        </div>
        {% if app.user %}
        <div class="system-info-item">
            Current User's Login: {{ app.user.userIdentifier }}
        </div>
        {% endif %}
    </div>

    <div class="blog-container">
        <!-- Blog Header -->
        <div class="blog-header">
            <div class="heading_container">
                <h2>Edit <span>Blog</span></h2>
            </div>
            <div class="header-actions">
                <a href="{{ path('app_blog_index') }}" class="action-btn back-btn">
                    <i class="fa fa-arrow-left"></i>
                    Back to List
                </a>
                <a href="{{ path('app_blog_show', {'id': blog.id}) }}" class="action-btn view-btn">
                    <i class="fa fa-eye"></i>
                    View
                </a>
            </div>
        </div>

        <!-- Blog Form -->
        <div class="blog-form-container">
            {{ include('blog/_form.html.twig', {'button_label': 'Update'}) }}
        </div>

        <!-- Delete Form -->
        <div class="delete-form-container">
            <h3>Danger Zone</h3>
            <p>Once you delete a blog, there is no going back. Please be certain.</p>
            {{ include('blog/_delete_form.html.twig') }}
        </div>
    </div>
</section>

<style>
/* Reset and Base Styles */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

/* System Info Bar */
.system-info-bar {
    background: #f8f9fa;
    padding: 12px 25px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-bottom: 1px solid rgba(6, 34, 100, 0.1);
}

.system-info-item {
    display: flex;
    align-items: center;
    gap: 8px;
    color: #062264;
    font-size: 0.9rem;
    font-weight: 500;
}

/* Blog Section */
.blog-section {
    background-color: #f8f9fa;
    min-height: 100vh;
}

.blog-container {
    padding: 30px;
    max-width: 1200px;
    margin: 0 auto;
}

/* Blog Header */
.blog-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 30px;
}

.heading_container h2 {
    font-size: 2rem;
    font-weight: bold;
    color: #062264;
}

.heading_container span {
    color: #4b93d1;
}

.header-actions {
    display: flex;
    gap: 10px;
}

/* Blog Form Container */
.blog-form-container {
    margin-bottom: 30px;
}

/* Delete Form Container */
.delete-form-container {
    max-width: 800px;
    margin: 0 auto 30px;
    background: white;
    padding: 30px;
    border-radius: 12px;
    box-shadow: 0 4px 15px rgba(6, 34, 100, 0.1);
    border-top: 4px solid #dc3545;
}

.delete-form-container h3 {
    color: #dc3545;
    margin-bottom: 10px;
    font-size: 1.2rem;
}

.delete-form-container p {
    margin-bottom: 20px;
    color: #6c757d;
}

/* Action Buttons */
.action-btn {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    padding: 8px 16px;
    border-radius: 4px;
    font-size: 0.85rem;
    font-weight: 500;
    text-decoration: none;
    transition: all 0.3s ease;
    border: none;
    cursor: pointer;
}

.back-btn {
    background-color: #6c757d;
    color: white;
}

.view-btn {
    background-color: #4b93d1;
    color: white;
}

.action-btn:hover {
    transform: translateY(-2px);
    opacity: 0.9;
    color: white;
    text-decoration: none;
}

/* Responsive Design */
@media (max-width: 768px) {
    .system-info-bar {
        flex-direction: column;
        gap: 10px;
        text-align: center;
        padding: 10px 15px;
    }

    .blog-container {
        padding: 15px;
    }

    .blog-header {
        flex-direction: column;
        gap: 20px;
        text-align: center;
    }

    .header-actions {
        width: 100%;
        justify-content: center;
    }

    .delete-form-container {
        padding: 20px;
    }
}
</style>
{% endblock %}