{% extends 'baselog.html.twig' %}

{% block title %}Log in{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('assetsA/vendors/feather/feather.css') }}">
    <link rel="stylesheet" href="{{ asset('assetsA/vendors/mdi/css/materialdesignicons.min.css') }}">
    <link rel="stylesheet" href="{{ asset('assetsA/vendors/ti-icons/css/themify-icons.css') }}">
    <link rel="stylesheet" href="{{ asset('assetsA/vendors/typicons/typicons.css') }}">
    <link rel="stylesheet" href="{{ asset('assetsA/vendors/simple-line-icons/css/simple-line-icons.css') }}">
    <link rel="stylesheet" href="{{ asset('assetsA/vendors/css/vendor.bundle.base.css') }}">
    <link rel="stylesheet" href="{{ asset('assetsA/css/vertical-layout-light/style.css') }}">
{% endblock %}

{% block body %}
<div class="container-scroller">
    <div class="container-fluid page-body-wrapper full-page-wrapper">
        <div class="content-wrapper d-flex align-items-center auth px-0">
            <div class="row w-100 mx-0">
                <div class="col-lg-4 mx-auto">
                    <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                             <div class="brand-logo text-center">
    <span class="logo-text" style="font-size: 28px; color: #0d6efd; font-weight: bold;">Culture Connect</span>
</div>

                        {% if app.user %}
                            <div class="mb-3">
                                You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                            </div>
                        {% endif %}

                        <h4>Welcome back!</h4>
                        <h6 class="fw-light">Sign in to continue.</h6>

                        <form class="pt-3" method="post">
                            {% if error %}
                                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                            {% endif %}

                            <div class="form-group">
                                <input type="email" 
                                       value="{{ last_username }}" 
                                       name="email" 
                                       class="form-control form-control-lg" 
                                       id="exampleInputEmail1" 
                                       placeholder="Email"
                                       required 
                                       autofocus>
                            </div>

                            <div class="form-group">
                                <input type="password" 
                                       name="password" 
                                       class="form-control form-control-lg" 
                                       id="exampleInputPassword1" 
                                       placeholder="Password"
                                       required>
                            </div>

                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                            <div class="mt-3">
                                <button type="submit" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn">
                                    SIGN IN
                                </button>
                            </div>

                            <div class="my-2 d-flex justify-content-between align-items-center">
                                <div class="form-check">
                                    <label class="form-check-label text-muted">
                                        <input type="checkbox" 
                                               class="form-check-input" 
                                               name="_remember_me">
                                        Keep me signed in
                                    </label>
                                </div>
                                    Forgot password?
                                </a>
                            </div>

                            {% if app.flashes('error') is not empty %}
                                <div class="mb-2">
                                    {% for message in app.flashes('error') %}
                                        <div class="alert alert-danger">
                                            {{ message }}
                                        </div>
                                    {% endfor %}
                                </div>
                            {% endif %}

                            <div class="mb-2">
                                <button type="button" class="btn btn-block btn-facebook auth-form-btn">
                                    <i class="ti-facebook me-2"></i>Connect using facebook
                                </button>
                            </div>

                            <div class="text-center mt-4 fw-light">
                                Don't have an account? <a href="{{ path('app_register') }}" class="text-primary">Create</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('assetsA/vendors/js/vendor.bundle.base.js') }}"></script>
    <script src="{{ asset('assetsA/vendors/bootstrap-datepicker/bootstrap-datepicker.min.js') }}"></script>
    <script src="{{ asset('assetsA/js/off-canvas.js') }}"></script>
    <script src="{{ asset('assetsA/js/hoverable-collapse.js') }}"></script>
    <script src="{{ asset('assetsA/js/template.js') }}"></script>
    <script src="{{ asset('assetsA/js/settings.js') }}"></script>
    <script src="{{ asset('assetsA/js/todolist.js') }}"></script>
{% endblock %}