{% extends 'base.html.twig' %}

{% block title %}Sign Up{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1>Sign Up</h1>

        {% for flash_success in app.flashes('success') %}
            <div class="alert alert-success">{{ flash_success }}</div>
        {% endfor %}
        {% for flash_error in app.flashes('error') %}
            <div class="alert alert-danger">{{ flash_error }}</div>
        {% endfor %}

        {{ form_start(registration_form) }}
            <div class="form-group mt-2">
                {{ form_label(registration_form.email) }}
                {{ form_widget(registration_form.email) }}
                {{ form_errors(registration_form.email) }}
            </div>
            <div class="form-group mt-2">
                {{ form_label(registration_form.name) }}
                {{ form_widget(registration_form.name) }}
                {{ form_errors(registration_form.name) }}
            </div>
            <div class="form-group mt-2">
                {{ form_label(registration_form.password) }}
                {{ form_widget(registration_form.password) }}
                {{ form_errors(registration_form.password) }}
            </div>
            <button type="submit" class="btn btn-primary mt-3">Sign Up</button>
        {{ form_end(registration_form) }}

        <p class="mt-3">Already have an account? <a href="{{ path('app_login') }}">Log in here</a>.</p>
    </div>
{% endblock %}