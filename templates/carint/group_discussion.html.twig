{% extends 'base.html.twig' %}

{% block title %}Culture Connect - {{ group.name }} Discussions{% endblock %}

{% block body %}
    <!-- Header Section -->
    <div class="hero_area">
        <header class="header_section">
            <div class="header_top">
                <div class="container-fluid">
                    <div class="contact_nav">
                        <a href="" class="contact-link">
                            <i class="fa fa-phone" aria-hidden="true"></i>
                            <span>Call: +01 123455678990</span>
                        </a>
                        <a href="" class="contact-link">
                            <i class="fa fa-envelope" aria-hidden="true"></i>
                            <span>Email: support@cultureconnect.com</span>
                        </a>
                        <a href="" class="contact-link">
                            <i class="fa fa-map-marker" aria-hidden="true"></i>
                            <span>Global Events</span>
                        </a>
                    </div>
                </div>
            </div>
            <div class="header_bottom">
                <div class="container-fluid">
                    <nav class="navbar navbar-expand-lg custom_nav-container">
                        <a class="navbar-brand" href="{{ path('group_list') }}">
                            <span>Culture Connect</span>
                        </a>
                        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="s-1"></span>
                            <span class="s-2"></span>
                            <span class="s-3"></span>
                        </button>
                        <div class="collapse navbar-collapse" id="navbarSupportedContent">
                            <ul class="navbar-nav">
                                <li class="nav-item active">
                                    <a class="nav-link" href="{{ path('group_list') }}">Events <span class="sr-only">(current)</span></a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="#">Services</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="#">About</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="#">Contact Us</a>
                                </li>
                                <form class="form-inline" method="GET" action="{{ path('group_list') }}">
                                    <input type="text" name="q" value="{{ searchQuery|default('') }}" class="form-control mr-2" placeholder="Search events">
                                    <button class="btn my-2 my-sm-0 nav_search-btn" type="submit" aria-label="Search">
                                        <i class="fa fa-search" aria-hidden="true"></i>
                                    </button>
                                </form>
                            </ul>
                        </div>
                    </nav>
                </div>
            </div>
        </header>
    </div>

    <!-- Main Content Section -->
    <section class="event-group-view-section layout_padding-top">
        <div class="container-fluid">
            <div class="row">
                <!-- Sidebar -->
                <div class="col-lg-3 col-md-4 col-sm-12">
                    <div class="sidebar">
                        <!-- Quick Navigation -->
                        <div class="sidebar-section">
                            <h3>Navigation</h3>
                            <ul class="sidebar-nav">
                                <li><a href="{{ path('group_create') }}"><i class="fas fa-plus-circle"></i> Create New Event</a></li>
                                <li><a href="#my-events"><i class="fas fa-calendar-check"></i> My Events</a></li>
                                <li><a href="#invitations"><i class="fas fa-envelope"></i> Invitations</a></li>
                            </ul>
                            <h4>Categories</h4>
                            <ul class="sidebar-categories">
                                <li><a href="{{ path('group_list', {'category': 'music'}) }}">Music</a></li>
                                <li><a href="{{ path('group_list', {'category': 'dance'}) }}">Dance</a></li>
                                <li><a href="{{ path('group_list', {'category': 'food'}) }}">Food</a></li>
                                <li><a href="{{ path('group_list', {'category': 'art'}) }}">Art</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
                <!-- Main Content -->
                <div class="col-lg-9 col-md-8 col-sm-12">
                    <div class="heading_container heading_center">
                        <h2>{{ group.name }} Discussions</h2>
                    </div>
                    {% for message in app.flashes('success') %}
                        <div class="alert alert-success">{{ message }}</div>
                    {% endfor %}
                    {% for message in app.flashes('error') %}
                        <div class="alert alert-danger">{{ message }}</div>
                    {% endfor %}
                    <nav class="group-nav-bar">
                        <ul class="nav flex-row align-items-center justify-content-between">
                            <div class="d-flex">
                                <li class="nav-item">
                                    <a href="{{ path('group_view', {'id': group.id}) }}" class="nav-link {% if app.request.attributes.get('_route') == 'group_view' %}active{% endif %}" aria-current="{% if app.request.attributes.get('_route') == 'group_view' %}page{% else %}false{% endif %}">
                                        <i class="fas fa-info-circle" aria-hidden="true"></i> Details
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="{{ path('group_posts', {'id': group.id}) }}" class="nav-link {% if app.request.attributes.get('_route') == 'group_posts' %}active{% endif %} view-posts-btn" aria-current="{% if app.request.attributes.get('_route') == 'group_posts' %}page{% else %}false{% endif %}">
                                        <i class="fas fa-file-alt" aria-hidden="true"></i> Posts
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="{{ path('group_discussion', {'id': group.id}) }}" class="nav-link {% if app.request.attributes.get('_route') == 'group_discussion' %}active{% endif %} discussion-btn" aria-current="{% if app.request.attributes.get('_route') == 'group_discussion' %}page{% else %}false{% endif %}">
                                        <i class="fas fa-comments" aria-hidden="true"></i> Discussion
                                    </a>
                                </li>
                            </div>
                            <li class="nav-item">
                                <a href="{{ path('group_invite', {'id': group.id}) }}" class="nav-link btn btn-primary invite-btn">
                                    <i class="fas fa-envelope" aria-hidden="true"></i> Send Invitation
                                </a>
                            </li>
                        </ul>
                    </nav>
                    <div class="discussions-section mt-4">
                        <h3>Discussions</h3>
                        {% if discussions is defined and discussions is not empty %}
                            <div class="discussion-list">
                                {% for discussion in discussions %}
                                    <div class="discussion-card mb-3">
                                        <p class="discussion-content">{{ discussion.content }}</p>
                                        <small class="discussion-meta">Posted on {{ discussion.createdAt|date('Y-m-d H:i') }} by {{ discussion.author ? discussion.author.name : 'Anonymous' }}</small>
                                        <div class="discussion-actions d-flex justify-content-end mt-2">
                                            <a href="{{ path('discussion_edit', {'id': discussion.id}) }}" class="action-btn btn btn-secondary mr-2">Update</a>
                                            <form action="{{ path('discussion_delete', {'id': discussion.id}) }}" method="post" style="display:inline;">
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ discussion.id) }}">
                                                <button type="submit" class="action-btn btn btn-danger" onclick="return confirm('Are you sure you want to delete this discussion?')">Delete</button>
                                            </form>
                                        </div>
                                    </div>
                                {% else %}
                                    <p class="no-discussions">No discussions yet. Be the first to start one!</p>
                                {% endfor %}
                            </div>
                        {% else %}
                            <p class="no-discussions">No discussions yet. Be the first to start one!</p>
                        {% endif %}
                        <form method="POST" action="{{ path('group_add_discussion', {'id': group.id}) }}" class="mt-3">
                            <div class="form-group">
                                <label for="discussionContent">Add a Discussion</label>
                                <textarea name="content" id="discussionContent" class="form-control" rows="3" placeholder="Write your discussion here..." required></textarea>
                            </div>
                            <div class="btn_box text-center">
                                <button type="submit" class="btn btn-primary mt-2">Submit Discussion</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Info Section -->
    <section class="info_section layout_padding2">
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-lg-3 info_col">
                    <div class="info_contact">
                        <h4>Contact Us</h4>
                        <div class="contact_link_box">
                            <a href="">
                                <i class="fa fa-map-marker" aria-hidden="true"></i>
                                <span>Global Events</span>
                            </a>
                            <a href="">
                                <i class="fa fa-phone" aria-hidden="true"></i>
                                <span>Call: +01 123455678990</span>
                            </a>
                            <a href="">
                                <i class="fa fa-envelope" aria-hidden="true"></i>
                                <span>support@cultureconnect.com</span>
                            </a>
                        </div>
                    </div>
                    <div class="info_social">
                        <a href=""><i class="fa fa-facebook" aria-hidden="true"></i></a>
                        <a href=""><i class="fa fa-twitter" aria-hidden="true"></i></a>
                        <a href=""><i class="fa fa-linkedin" aria-hidden="true"></i></a>
                        <a href=""><i class="fa fa-instagram" aria-hidden="true"></i></a>
                    </div>
                </div>
                <div class="col-md-6 col-lg-3 info_col">
                    <div class="info_detail">
                        <h4>About Culture Connect</h4>
                        <p>Connecting people through cultural events worldwide.</p>
                    </div>
                </div>
                <div class="col-md-6 col-lg-2 mx-auto info_col">
                    <div class="info_link_box">
                        <h4>Links</h4>
                        <div class="info_links">
                            <a class="active" href="{{ path('group_list') }}">
                                <img src="{{ asset('images/nav-bullet.png') }}" alt=""> Events
                            </a>
                            <a href="">
                                <img src="{{ asset('images/nav-bullet.png') }}" alt=""> About
                            </a>
                            <a href="">
                                <img src="{{ asset('images/nav-bullet.png') }}" alt=""> Services
                            </a>
                            <a href="">
                                <img src="{{ asset('images/nav-bullet.png') }}" alt=""> Contact Us
                            </a>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 col-lg-3 info_col">
                    <h4>Subscribe</h4>
                    <form action="#">
                        <input type="text" placeholder="Enter email" class="form-control" required />
                        <button type="submit" class="btn btn-primary">Subscribe</button>
                    </form>
                </div>
            </div>
        </div>
    </section>

    <!-- Footer Section -->
    <footer class="footer_section">
        <div class="container">
            <div class="row">
                <div class="col-12 text-center">
                    <p>
                        Â© {{ "now"|date("Y") }} All Rights Reserved By
                        <a href="https://cultureconnect.com/">Culture Connect</a>
                    </p>
                    <div class="footer-links">
                        <a href="">Privacy Policy</a> | <a href="">Terms of Service</a>
                    </div>
                    <div class="footer-social">
                        <a href=""><i class="fa fa-facebook" aria-hidden="true"></i></a>
                        <a href=""><i class="fa fa-twitter" aria-hidden="true"></i></a>
                        <a href=""><i class="fa fa-linkedin" aria-hidden="true"></i></a>
                        <a href=""><i class="fa fa-instagram" aria-hidden="true"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </footer>
{% endblock %}