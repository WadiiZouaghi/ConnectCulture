{% extends 'base.html.twig' %}

{% block title %}
    Culture Connect - {{ group.name }} Discussions
{% endblock %}

{% block body %}
    
    <!-- Group Discussions Section -->
    <section class="event-group-view-section layout_padding-top py-5">
        <div class="container-fluid">
            <div class="row">
                <!-- Sidebar -->
                <div class="col-lg-3 col-md-4 col-sm-12 mb-4">
                    <div class="sidebar bg-light p-4 rounded shadow-sm">
                        <!-- Quick Navigation -->
                        <div class="sidebar-section mb-4">
                            <h3 class="mb-3">Navigation</h3>
                            <ul class="sidebar-nav list-unstyled">
                                <li class="mb-2">
                                    <a href="{{ path('group_create') }}" class="text-primary">
                                        <i class="fas fa-plus-circle mr-2"></i> Create New Event
                                    </a>
                                </li>
                                <li class="mb-2">
                                    <a href="#my-events" class="text-primary">
                                        <i class="fas fa-calendar-check mr-2"></i> My Events
                                    </a>
                                </li>
                                <li class="mb-2">
                                    <a href="#invitations" class="text-primary">
                                        <i class="fas fa-envelope mr-2"></i> Invitations
                                    </a>
                                </li>
                            </ul>
                        </div>
                        <!-- Categories -->
                        <div class="sidebar-section">
                            <h4 class="mb-3">Categories</h4>
                            <ul class="sidebar-categories list-unstyled">
                                <li class="mb-2"><a href="{{ path('group_list', {'category': 'music'}) }}" class="text-primary">Music</a></li>
                                <li class="mb-2"><a href="{{ path('group_list', {'category': 'dance'}) }}" class="text-primary">Dance</a></li>
                                <li class="mb-2"><a href="{{ path('group_list', {'category': 'food'}) }}" class="text-primary">Food</a></li>
                                <li class="mb-2"><a href="{{ path('group_list', {'category': 'art'}) }}" class="text-primary">Art</a></li>
                            </ul>
                        </div>
                    </div>
                </div>

                <!-- Main Content -->
                <div class="col-lg-9 col-md-8 col-sm-12">
                    <!-- Page Title -->
                    <div class="heading_container heading_center mb-5">
                        <h2 class="text-dark font-weight-bold">{{ group.name }} Discussions</h2>
                    </div>

                    <!-- Flash Messages -->
                    {% for message in app.flashes('success') %}
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            {{ message }}
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">×</span>
                            </button>
                        </div>
                    {% endfor %}
                    {% for message in app.flashes('error') %}
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            {{ message }}
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">×</span>
                            </button>
                        </div>
                    {% endfor %}

                    <!-- Group Navigation Tabs -->
                    <nav class="group-nav-bar mb-4">
                        <ul class="nav flex-row align-items-center justify-content-between bg-light p-2 rounded">
                            <div class="d-flex">
                                <li class="nav-item">
                                    <a class="nav-link text-primary" href="{{ path('group_view', {'id': group.id}) }}" aria-current="{% if app.request.attributes.get('_route') == 'group_view' %}page{% else %}false{% endif %}">
                                        <i class="fas fa-info-circle mr-1"></i> Details
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-primary view-posts-btn" href="{{ path('group_posts', {'id': group.id}) }}" aria-current="{% if app.request.attributes.get('_route') == 'group_posts' %}page{% else %}false{% endif %}">
                                        <i class="fas fa-file-alt mr-1"></i> Posts
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link active text-primary discussion-btn" href="{{ path('group_discussion', {'id': group.id}) }}" aria-current="{% if app.request.attributes.get('_route') == 'group_discussion' %}page{% else %}false{% endif %}">
                                        <i class="fas fa-comments mr-1"></i> Discussions
                                    </a>
                                </li>
                            </div>
                            <li class="nav-item">
                                <a href="{{ path('group_invite', {'id': group.id}) }}" class="nav-link btn btn-primary invite-btn" aria-label="Send Invitation">
                                    <i class="fas fa-envelope mr-1" aria-hidden="true"></i> Send Invitation
                                </a>
                            </li>
                        </ul>
                    </nav>

                    <!-- Discussions Section -->
                    <div class="discussions-section mt-4">
                        <h3 class="text-dark mb-4">Discussions</h3>
                        <div class="discussion-list">
                            {% if discussions is defined and discussions is not empty %}
                                {% for discussion in discussions %}
                                    <div class="discussion-card bg-white p-3 rounded shadow-sm mb-3">
                                        <p class="discussion-content text-muted mb-2">{{ discussion.content }}</p>
                                        <small class="discussion-meta text-secondary d-block mb-2">
                                            Posted on {{ discussion.createdAt|date('Y-m-d H:i') }} by {{ discussion.author ? discussion.author.name : 'Anonymous' }}
                                        </small>

                                    </div>
                                {% endfor %}
                            {% else %}
                                <p class="no-discussions text-muted">No discussions yet. Be the first to start one!</p>
                            {% endif %}
                        </div>

                        <!-- Add Discussion Form -->
                        {# Temporarily show the form for testing without authentication #}
                        {# Uncomment the following block when ready to implement authentication #}
                        {#
                        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                            {{ form_start(group_form, {'attr': {'class': 'mt-4'}}) }}
                                <div class="form-group">
                                    {{ form_label(group_form.content, null, {'label_attr': {'class': 'form-label font-weight-bold'}}) }}
                                    {{ form_widget(group_form.content) }}
                                    {{ form_errors(group_form.content) }}
                                </div>
                                <div class="btn_box text-center mt-3">
                                    <button type="submit" class="btn btn-primary px-4">Submit Discussion</button>
                                </div>
                            {{ form_end(group_form) }}
                        {% else %}
                            <p class="text-muted mt-4">Please <a href="{{ path('app_login') }}">log in</a> to add a discussion.</p>
                        {% endif %}
                        #}
                        {{ form_start(group_form, {'attr': {'class': 'mt-4'}}) }}
                            <div class="form-group">
                                {{ form_label(group_form.content, null, {'label_attr': {'class': 'form-label font-weight-bold'}}) }}
                                {{ form_widget(group_form.content) }}
                                {{ form_errors(group_form.content) }}
                            </div>
                            <div class="btn_box text-center mt-3">
                                <button type="submit" class="btn btn-primary px-4">Submit Discussion</button>
                            </div>
                        {{ form_end(group_form) }}
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Info Section -->
    <section class="info_section layout_padding2 py-5">
        <div class="container">
            <div class="row">
                <!-- Contact Info -->
                <div class="col-md-6 col-lg-3 info_col mb-4">
                    <div class="info_contact">
                        <h4 class="mb-3">Contact Us</h4>
                        <div class="contact_link_box">
                            <a href="#" class="d-flex align-items-center mb-2" aria-label="Global events">
                                <i class="fa fa-map-marker mr-2" aria-hidden="true"></i>
                                <span>Global Events</span>
                            </a>
                            <a href="tel:+01123455678990" class="d-flex align-items-center mb-2" aria-label="Phone number">
                                <i class="fa fa-phone mr-2" aria-hidden="true"></i>
                                <span>Call: +01 123455678990</span>
                            </a>
                            <a href="mailto:support@cultureconnect.com" class="d-flex align-items-center" aria-label="Email address">
                                <i class="fa fa-envelope mr-2" aria-hidden="true"></i>
                                <span>support@cultureconnect.com</span>
                            </a>
                        </div>
                    </div>
                    <div class="info_social mt-3">
                        <a href="#" class="mx-2" aria-label="Facebook"><i class="fab fa-facebook-f" aria-hidden="true"></i></a>
                        <a href="#" class="mx-2" aria-label="Twitter"><i class="fab fa-twitter" aria-hidden="true"></i></a>
                        <a href="#" class="mx-2" aria-label="LinkedIn"><i class="fab fa-linkedin-in" aria-hidden="true"></i></a>
                        <a href="#" class="mx-2" aria-label="Instagram"><i class="fab fa-instagram" aria-hidden="true"></i></a>
                    </div>
                </div>
                <!-- About Culture Connect -->
                <div class="col-md-6 col-lg-3 info_col mb-4">
                    <div class="info_detail">
                        <h4 class="mb-3">About Culture Connect</h4>
                        <p>Connecting people through cultural events worldwide.</p>
                    </div>
                </div>
                
                <!-- Quick Links -->
<div class="col-md-6 col-lg-2 mx-auto info_col mb-4">
    <div class="info_link_box">
        <h4 class="mb-3">Links</h4>
        <div class="info_links">
            <a class="d-block mb-2 active" href="{{ path('group_list') }}">Events</a>
            <a class="d-block mb-2" href="#">About</a>
            <a class="d-block mb-2" href="#">Services</a>
            <a class="d-block mb-2" href="#">Contact Us</a>
        </div>
    </div>
</div>
                <!-- Newsletter Subscription -->
                <div class="col-md-6 col-lg-3 info_col mb-4">
                    <h4 class="mb-3">Subscribe</h4>
                    <form action="#" class="form-inline">
                        <input type="email" placeholder="Enter email" class="form-control w-100 mb-2" required aria-label="Email for subscription" />
                        <button type="submit" class="btn btn-primary w-100">Subscribe</button>
                    </form>
                </div>
            </div>
        </div>
    </section>

    <!-- Footer Section -->
    <footer class="footer_section py-4">
        <div class="container">
            <div class="row">
                <div class="col-12 text-center">
                    <p class="mb-2">
                        © {{ "now"|date("Y") }} All Rights Reserved By
                        <a href="https://cultureconnect.com/">Culture Connect</a>
                    </p>
                    <div class="footer-links mb-2">
                        <a href="#" class="mx-2">Privacy Policy</a> | 
                        <a href="#" class="mx-2">Terms of Service</a>
                    </div>
                    <div class="footer-social">
                        <a href="#" class="mx-2" aria-label="Facebook"><i class="fab fa-facebook-f" aria-hidden="true"></i></a>
                        <a href="#" class="mx-2" aria-label="Twitter"><i class="fab fa-twitter" aria-hidden="true"></i></a>
                        <a href="#" class="mx-2" aria-label="LinkedIn"><i class="fab fa-linkedin-in" aria-hidden="true"></i></a>
                        <a href="#" class="mx-2" aria-label="Instagram"><i class="fab fa-instagram" aria-hidden="true"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </footer>
{% endblock %}