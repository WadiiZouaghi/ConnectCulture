{% extends 'base.html.twig' %}

{% block title %}Culture Connect - Request Invitation{% endblock %}

{% block body %}
    <!-- Header Section -->
    <div class="hero_area">
        <header class="header_section">
            <div class="header_top">
                <div class="container-fluid">
                    <div class="contact_nav d-flex justify-content-center">
                        <a href="tel:+01123455678990" class="contact-link mx-3" aria-label="Phone number">
                            <i class="fa fa-phone" aria-hidden="true"></i>
                            <span>Call: +01 123455678990</span>
                        </a>
                        <a href="mailto:support@cultureconnect.com" class="contact-link mx-3" aria-label="Email address">
                            <i class="fa fa-envelope" aria-hidden="true"></i>
                            <span>Email: support@cultureconnect.com</span>
                        </a>
                        <a href="#" class="contact-link mx-3" aria-label="Global events">
                            <i class="fa fa-map-marker" aria-hidden="true"></i>
                            <span>Global Events</span>
                        </a>
                    </div>
                </div>
            </div>
            <div class="header_bottom">
                <div class="container-fluid">
                    <nav class="navbar navbar-expand-lg custom_nav-container">
                        <a class="navbar-brand" href="{{ path('group_list') }}">
                            <span>Culture Connect</span>
                        </a>
                        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="s-1"></span>
                            <span class="s-2"></span>
                            <span class="s-3"></span>
                        </button>
                        <div class="collapse navbar-collapse" id="navbarSupportedContent">
                            <ul class="navbar-nav mr-auto">
                                <li class="nav-item active">
                                    <a class="nav-link" href="{{ path('group_list') }}">Events <span class="sr-only">(current)</span></a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="#">Services</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="#">About</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="#">Contact Us</a>
                                </li>
                            </ul>
                            <form class="form-inline my-2 my-lg-0" method="GET" action="{{ path('group_list') }}">
                                <input type="text" name="q" value="{{ searchQuery|default('') }}" class="form-control mr-2" placeholder="Search events" aria-label="Search events">
                                <button class="btn my-2 my-sm-0 nav_search-btn" type="submit" aria-label="Search">
                                    <i class="fa fa-search" aria-hidden="true"></i>
                                </button>
                            </form>
                        </div>
                    </nav>
                </div>
            </div>
        </header>
    </div>

    <!-- Main Content Section -->
    <section class="event-group-view-section layout_padding-top py-5">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <div class="heading_container heading_center mb-5">
                        <h2 class="text-dark font-weight-bold">Request Invitation for {{ group.name }}</h2>
                    </div>
                    {% for message in app.flashes('success') %}
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            {{ message }}
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">×</span>
                            </button>
                        </div>
                    {% endfor %}
                    {% for message in app.flashes('info') %}
                        <div class="alert alert-info alert-dismissible fade show" role="alert">
                            {{ message }}
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">×</span>
                            </button>
                        </div>
                    {% endfor %}
                    {% for message in app.flashes('error') %}
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            {{ message }}
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">×</span>
                            </button>
                        </div>
                    {% endfor %}
                    <div class="card p-3 bg-white rounded shadow-sm">
                        <p class="text-muted mb-4">This is a private event. Request an invitation to join.</p>
                        <form action="{{ path('group_invite_request_submit', {'id': group.id}) }}" method="post">
                            <div class="btn_box text-center">
                                <button type="submit" class="btn btn-primary mt-3">Request Invitation</button>
                                <a href="{{ path('group_list') }}" class="btn btn-secondary mt-3 ml-2">Back to Events</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Info Section -->
    <section class="info_section layout_padding2 py-5">
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-lg-3 info_col mb-4">
                    <div class="info_contact">
                        <h4 class="mb-3">Contact Us</h4>
                        <div class="contact_link_box">
                            <a href="#" class="d-flex align-items-center mb-2" aria-label="Global events">
                                <i class="fa fa-map-marker mr-2" aria-hidden="true"></i>
                                <span>Global Events</span>
                            </a>
                            <a href="tel:+01123455678990" class="d-flex align-items-center mb-2" aria-label="Phone number">
                                <i class="fa fa-phone mr-2" aria-hidden="true"></i>
                                <span>Call: +01 123455678990</span>
                            </a>
                            <a href="mailto:support@cultureconnect.com" class="d-flex align-items-center" aria-label="Email address">
                                <i class="fa fa-envelope mr-2" aria-hidden="true"></i>
                                <span>support@cultureconnect.com</span>
                            </a>
                        </div>
                    </div>
                    <div class="info_social mt-3">
                        <a href="#" class="mx-2" aria-label="Facebook"><i class="fab fa-facebook-f" aria-hidden="true"></i></a>
                        <a href="#" class="mx-2" aria-label="Twitter"><i class="fab fa-twitter" aria-hidden="true"></i></a>
                        <a href="#" class="mx-2" aria-label="LinkedIn"><i class="fab fa-linkedin-in" aria-hidden="true"></i></a>
                        <a href="#" class="mx-2" aria-label="Instagram"><i class="fab fa-instagram" aria-hidden="true"></i></a>
                    </div>
                </div>
                <div class="col-md-6 col-lg-3 info_col mb-4">
                    <div class="info_detail">
                        <h4 class="mb-3">About Culture Connect</h4>
                        <p>Connecting people through cultural events worldwide.</p>
                    </div>
                </div>
                <div class="col-md-6 col-lg-2 mx-auto info_col mb-4">
                    <div class="info_link_box">
                        <h4 class="mb-3">Links</h4>
                        <div class="info_links">
                            <a class="d-flex align-items-center mb-2 active" href="{{ path('group_list') }}">
                                <img src="{{ asset('images/nav-bullet.png') }}" alt="Bullet" class="mr-2"> Events
                            </a>
                            <a class="d-flex align-items-center mb-2" href="#">
                                <img src="{{ asset('images/nav-bullet.png') }}" alt="Bullet" class="mr-2"> About
                            </a>
                            <a class="d-flex align-items-center mb-2" href="#">
                                <img src="{{ asset('images/nav-bullet.png') }}" alt="Bullet" class="mr-2"> Services
                            </a>
                            <a class="d-flex align-items-center" href="#">
                                <img src="{{ asset('images/nav-bullet.png') }}" alt="Bullet" class="mr-2"> Contact Us
                            </a>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 col-lg-3 info_col mb-4">
                    <h4 class="mb-3">Subscribe</h4>
                    <form action="#" class="form-inline">
                        <input type="email" placeholder="Enter email" class="form-control w-100 mb-2" required aria-label="Email for subscription" />
                        <button type="submit" class="btn btn-primary w-100">Subscribe</button>
                    </form>
                </div>
            </div>
        </div>
    </section>

    <!-- Footer Section -->
    <footer class="footer_section py-4">
        <div class="container">
            <div class="row">
                <div class="col-12 text-center">
                    <p class="mb-2">
                        © {{ "now"|date("Y") }} All Rights Reserved By
                        <a href="https://cultureconnect.com/">Culture Connect</a>
                    </p>
                    <div class="footer-links mb-2">
                        <a href="#" class="mx-2">Privacy Policy</a> | 
                        <a href="#" class="mx-2">Terms of Service</a>
                    </div>
                    <div class="footer-social">
                        <a href="#" class="mx-2" aria-label="Facebook"><i class="fab fa-facebook-f" aria-hidden="true"></i></a>
                        <a href="#" class="mx-2" aria-label="Twitter"><i class="fab fa-twitter" aria-hidden="true"></i></a>
                        <a href="#" class="mx-2" aria-label="LinkedIn"><i class="fab fa-linkedin-in" aria-hidden="true"></i></a>
                        <a href="#" class="mx-2" aria-label="Instagram"><i class="fab fa-instagram" aria-hidden="true"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </footer>
{% endblock %}