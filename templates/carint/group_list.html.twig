    <script>
        // JavaScript for clearing filters
        document.querySelector('.clear-filters').addEventListener('click', function() {
            document.querySelector('select[name="location"]').value = '';
            document.querySelector('select[name="visibility"]').value = '';
            document.querySelector('input[name="date"]').value = '';
            // Clear the main search input
            document.querySelector('input[name="q"]').value = '';
            // Submit the form to reset the search
            this.closest('form').submit();
        });

        // Placeholder for autocomplete suggestions (implement with AJAX if needed)
        document.getElementById('searchInput').addEventListener('input', function() {
            let query = this.value;
            if (query.length > 2) {
                // Simulate suggestions (replace with real AJAX call)
                let suggestions = ['aaaaaaa', 'Camping', 'Zaghouen', 'Public Event'];
                let filteredSuggestions = suggestions.filter(s => s.toLowerCase().includes(query.toLowerCase()));
                let suggestionsHtml = filteredSuggestions.map(s => `<div class="suggestion-item">${s}</div>`).join('');
                document.getElementById('suggestions').innerHTML = suggestionsHtml;
                document.getElementById('suggestions').style.display = 'block';
            } else {
                document.getElementById('suggestions').style.display = 'none';
            }
        });

        // Hide suggestions when clicking outside
        document.addEventListener('click', function(event) {
            if (!document.getElementById('searchInput').contains(event.target) && !document.getElementById('suggestions').contains(event.target)) {
                document.getElementById('suggestions').style.display = 'none';
            }
        });
    </script>

