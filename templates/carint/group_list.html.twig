{% extends 'base.html.twig' %}

{% block title %}Culture Connect - Event Groups{% endblock %}

{% block body %}
    <!-- Header Section -->
    <div class="hero_area">
        <header class="header_section">
            <div class="header_top">
                <div class="container-fluid">
                    <div class="contact_nav">
                        <a href="" class="contact-link">
                            <i class="fa fa-phone" aria-hidden="true"></i>
                            <span>Call: +01 123455678990</span>
                        </a>
                        <a href="" class="contact-link">
                            <i class="fa fa-envelope" aria-hidden="true"></i>
                            <span>Email: support@cultureconnect.com</span>
                        </a>
                        <a href="" class="contact-link">
                            <i class="fa fa-map-marker" aria-hidden="true"></i>
                            <span>Global Events</span>
                        </a>
                    </div>
                </div>
            </div>
            <div class="header_bottom">
                <div class="container-fluid">
                    <nav class="navbar navbar-expand-lg custom_nav-container">
                        <a class="navbar-brand" href="{{ path('group_list') }}">
                            <span>Culture Connect</span>
                        </a>
                        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="s-1"></span>
                            <span class="s-2"></span>
                            <span class="s-3"></span>
                        </button>
                        <div class="collapse navbar-collapse" id="navbarSupportedContent">
                            <ul class="navbar-nav">
                                <li class="nav-item active">
                                    <a class="nav-link" href="{{ path('group_list') }}">Events <span class="sr-only">(current)</span></a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="#">Services</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="#">About</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="#">Contact Us</a>
                                </li>
                                <form class="form-inline" method="GET" action="{{ path('group_list') }}">
                                    <input type="text" name="q" value="{{ searchQuery|default('') }}" class="form-control mr-2" placeholder="Search events">
                                    <button class="btn my-2 my-sm-0 nav_search-btn" type="submit" aria-label="Search">
                                        <i class="fa fa-search" aria-hidden="true"></i>
                                    </button>
                                </form>
                            </ul>
                        </div>
                    </nav>
                </div>
            </div>
        </header>
    </div>

    <!-- Event Group List Section -->
    <section class="event-group-view-section layout_padding-top">
        <div class="container-fluid">
            <div class="row">
                <!-- Sidebar -->
                <div class="col-lg-3 col-md-4 col-sm-12">
                    <div class="sidebar">
                        <!-- Navigation -->
                        <div class="sidebar-section">
                            <h3>Navigation</h3>
                            <ul class="sidebar-nav">
                                <li><a href="{{ path('group_create') }}"><i class="fas fa-plus-circle"></i> Create New Event</a></li>
                                <li><a href="#my-events"><i class="fas fa-calendar-check"></i> My Events</a></li>
                                <li><a href="#invitations"><i class="fas fa-envelope"></i> Invitations</a></li>
                            </ul>
                        </div>

                        <!-- Categories -->
                        <div class="sidebar-section">
                            <h4>Categories</h4>
                            <ul class="sidebar-categories">
                                <li>
                                    <a href="{{ path('group_list', {'category': 'Music'}) }}" class="{% if category|lower == 'music' %}active{% endif %}">
                                        Music
                                    </a>
                                </li>
                                <li>
                                    <a href="{{ path('group_list', {'category': 'Dance'}) }}" class="{% if category|lower == 'dance' %}active{% endif %}">
                                        Dance
                                    </a>
                                </li>
                                <li>
                                    <a href="{{ path('group_list', {'category': 'Food'}) }}" class="{% if category|lower == 'food' %}active{% endif %}">
                                        Food
                                    </a>
                                </li>
                                <li>
                                    <a href="{{ path('group_list', {'category': 'Art'}) }}" class="{% if category|lower == 'art' %}active{% endif %}">
                                        Art
                                    </a>
                                </li>
                            </ul>
                        </div>

                        <!-- Upcoming Events -->
                        <div class="sidebar-section">
                            <h4>Upcoming Events</h4>
                            {% if upcomingEvents is not empty %}
                                {% for event in upcomingEvents %}
                                    <div class="popular-event">
                                        <h4>{{ event.name }}</h4>
                                        <p>{{ event.eventDate ? event.eventDate|date('Y-m-d H:i') : 'TBD' }}</p>
                                        <p>{{ event.groupType ? event.groupType.type : 'Not specified' }}</p>
                                    </div>
                                {% endfor %}
                                <a href="{{ path('group_list', {'date': 'next_7_days'}) }}" class="view-all">View All</a>
                            {% else %}
                                <p>No upcoming events found.</p>
                            {% endif %}
                        </div>
                    </div>
                </div>

                <!-- Main Content -->
                <div class="col-lg-9 col-md-8 col-sm-12">
                    <div class="heading_container heading_center">
                        <h2>Event Groups</h2>
                    </div>

                    <!-- Flash Messages -->
                    {% for message in app.flashes('success') %}
                        <div class="alert alert-success">{{ message }}</div>
                    {% endfor %}

                    <!-- Search and Filter Bar -->
                    <div class="search-filter-bar mb-4">
                        <form method="GET" action="{{ path('group_list') }}" class="form-inline justify-content-center">
                            <input 
                                type="text" 
                                name="q" 
                                value="{{ searchQuery|default('') }}" 
                                class="form-control mr-2" 
                                placeholder="Search groups by name, description, or location" 
                                id="searchInput"
                            >
                            <button type="submit" class="btn btn-primary">
                                <i class="fa fa-search" aria-hidden="true"></i>
                            </button>
                        </form>
                        <div class="filters mt-3 text-center">
                            <select name="location" class="form-control d-inline-block mr-2" onchange="this.form.submit()">
                                <option value="">All Locations</option>
                                {% if locations is defined %}
                                    {% for loc in locations %}
                                        <option value="{{ loc.location }}" {% if location|default('') == loc.location %}selected{% endif %}>{{ loc.location }}</option>
                                    {% endfor %}
                                {% endif %}
                            </select>
                            <select name="visibility" class="form-control d-inline-block mr-2" onchange="this.form.submit()">
                                <option value="">All Visibility</option>
                                {% if visibilities is defined %}
                                    {% for vis in visibilities %}
                                        <option value="{{ vis.visibility }}" {% if visibility|default('') == vis.visibility %}selected{% endif %}>{{ vis.visibility|capitalize }}</option>
                                    {% endfor %}
                                {% endif %}
                            </select>
                            <input 
                                type="date" 
                                name="date" 
                                value="{% if date is iterable %}{{ date[0] }}{% else %}{{ date|default('') }}{% endif %}" 
                                class="form-control d-inline-block mr-2" 
                                onchange="this.form.submit()"
                            >
                            <button type="button" class="btn btn-secondary clear-filters">Clear Filters</button>
                        </div>
                        <div id="suggestions" class="suggestions-list" style="display: none;"></div>
                        <div class="text-center mt-3">
                            <a href="{{ path('group_create') }}" class="create-event-btn btn btn-primary">Create New Event</a>
                        </div>
                    </div>

                    <!-- Event Group List -->
                    <div class="row">
                        {% if groupData is defined and groupData is not empty %}
                            {% for data in groupData %}
                                <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
                                    <div class="group-card">
                                        <div class="group-card-header">
                                            {% if data.base64Image %}
                                                <img 
                                                    src="data:image/jpeg;base64,{{ data.base64Image }}" 
                                                    alt="{{ data.group.name }}" 
                                                    class="group-banner"
                                                />
                                            {% else %}
                                                <div class="group-banner placeholder">
                                                    No Image Available
                                                </div>
                                            {% endif %}
                                        </div>
                                        <div class="group-card-body">
                                            <div class="group-details">
                                                <h4 class="group-title">{{ data.group.name }}</h4>
                                                <p class="group-description">
                                                    {{ data.group.description|length > 50 ? data.group.description|slice(0, 50) ~ '...' : data.group.description|default('No description provided') }}
                                                </p>
                                                <p class="group-meta">
                                                    Location: {{ data.group.location|default('Not specified') }} | 
                                                    Date: {{ data.group.eventDate ? data.group.eventDate|date('Y-m-d H:i') : 'TBD' }} | 
                                                    Max: {{ data.group.maxParticipants|default('Unlimited') }} | 
                                                    {{ data.group.visibility|capitalize }}
                                                </p>
                                                <p class="group-type">
                                                    Type: {{ data.group.groupType ? data.group.groupType.type : 'Not specified' }}
                                                </p>
                                            </div>
                                            <div class="group-actions d-flex justify-content-end">
                                                <a href="{{ path('group_view', {'id': data.group.id}) }}" class="action-btn btn btn-info mr-2">Details</a>
                                                <a href="{{ path('group_edit', {'id': data.group.id}) }}" class="action-btn btn btn-secondary mr-2">Edit</a>
                                                <form action="{{ path('group_delete', {'id': data.group.id}) }}" method="post" style="display:inline;">
                                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ data.group.id) }}">
                                                    <button 
                                                        type="submit" 
                                                        class="action-btn btn btn-danger" 
                                                        onclick="return confirm('Are you sure you want to delete this group?')"
                                                    >
                                                        Delete
                                                    </button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                            
                            <!-- Pagination Links -->
                            <div class="col-12 mt-4">
                                <nav aria-label="Page navigation">
                                    <ul class="pagination justify-content-center">
                                        {# Previous Page Link #}
                                        <li class="page-item {% if currentPage == 1 %}disabled{% endif %}">
                                            <a 
                                                class="page-link" 
                                                href="{{ path('group_list', {'page': currentPage - 1, 'q': searchQuery, 'location': location, 'visibility': visibility, 'date': date, 'category': category}) }}" 
                                                {% if currentPage == 1 %}aria-disabled="true"{% endif %}
                                            >
                                                Previous
                                            </a>
                                        </li>
                                        {# Page Numbers #}
                                        {% for i in 1..totalPages %}
                                            <li class="page-item {% if i == currentPage %}active{% endif %}">
                                                <a 
                                                    class="page-link" 
                                                    href="{{ path('group_list', {'page': i, 'q': searchQuery, 'location': location, 'visibility': visibility, 'date': date, 'category': category}) }}"
                                                >
                                                    {{ i }}
                                                </a>
                                            </li>
                                        {% endfor %}
                                        {# Next Page Link #}
                                        <li class="page-item {% if currentPage == totalPages %}disabled{% endif %}">
                                            <a 
                                                class="page-link" 
                                                href="{{ path('group_list', {'page': currentPage + 1, 'q': searchQuery, 'location': location, 'visibility': visibility, 'date': date, 'category': category}) }}" 
                                                {% if currentPage == totalPages %}aria-disabled="true"{% endif %}
                                            >
                                                Next
                                            </a>
                                        </li>
                                    </ul>
                                </nav>
                                <p class="text-center">
                                    Showing {{ groupData|length }} of {{ totalGroups }} groups (Page {{ currentPage }} of {{ totalPages }})
                                </p>
                            </div>
                        {% else %}
                            <div class="col-12">
                                <p class="text-center no-groups">No event groups found.</p>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Info Section -->
    <section class="info_section layout_padding2">
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-lg-3 info_col">
                    <div class="info_contact">
                        <h4>Contact Us</h4>
                        <div class="contact_link_box">
                            <a href="">
                                <i class="fa fa-map-marker" aria-hidden="true"></i>
