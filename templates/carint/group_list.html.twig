                    </div>
                    {% for message in app.flashes('success') %}
                        <div class="alert alert-success">{{ message }}</div>
                    {% endfor %}
                    <!-- Enhanced search form with filters aligned horizontally, side by side, centered, and prominent -->
                    <form method="GET" action="{{ path('group_list') }}" class="search-form mb-4">
                        <div class="search-container d-flex flex-row justify-content-center align-items-center">
                            <div class="search-input-group d-flex align-items-center">
                                <input type="text" name="q" value="{{ searchQuery|default('') }}" class="form-control search-input" placeholder="Search groups by name, description, or location" id="searchInput">
                                <button type="submit" class="search-button">
                                    <i class="fa fa-search" aria-hidden="true"></i>
                                </button>
                            </div>
                            <div class="search-filters d-flex align-items-center ml-3">
                                <select name="location" class="form-control filter-select mr-2" style="width: 200px;">
                                    <option value="">All Locations</option>
                                    {% for loc in locations %}
                                        <option value="{{ loc.location }}" {% if location == loc.location %}selected{% endif %}>{{ loc.location }}</option>
                                    {% endfor %}
                                </select>
                                <select name="visibility" class="form-control filter-select mr-2" style="width: 150px;">
                                    <option value="">All Visibilities</option>
                                    {% for vis in visibilities %}
                                        <option value="{{ vis.visibility }}" {% if visibility == vis.visibility %}selected{% endif %}>{{ vis.visibility|capitalize }}</option>
                                    {% endfor %}
                                </select>
                                <input type="date" name="date" class="form-control filter-date mr-2" style="width: 150px;" value="{{ date|default('') }}">
                                <button type="button" class="btn btn-link clear-filters" style="color: #6c757d;">Clear Filters</button>
                            </div>
                            <!-- Suggestions (placeholder for now, implement with JavaScript/AJAX) -->
                            <div id="suggestions" class="suggestions-list" style="display: none;"></div>
                        </div>
                    </form>
                    <a href="{{ path('group_create') }}" class="create-event-btn mb-4">Create New Event</a>
                    <div class="row">
                        {% for group in groups %}
                            <div class="col-12 mb-4">
                                <div class="group-card">
                                    <div class="group-content">
                                        <h3 class="group-name">{{ group.name }}</h3>
                                        <p class="group-details">{{ group.description|length > 100 ? group.description|slice(0, 100) ~ '...' : group.description|default('No description provided') }}</p>
                                        <p class="group-meta">Location: {{ group.location|default('Not specified') }} | Date: {{ group.eventDate ? group.eventDate|date('Y-m-d H:i') : 'TBD' }} | Max: {{ group.maxParticipants|default('Unlimited') }} | {{ group.visibility|capitalize }}</p>
                                    </div>
                                    <div class="group-actions d-flex justify-content-end" role="group">
                                        <a href="{{ path('group_view', {'id': group.id}) }}" class="view-btn btn btn-sm mr-2">View</a>
                                        <a href="{{ path('group_edit', {'id': group.id}) }}" class="edit-btn btn btn-sm mr-2">Edit</a>
                                        <form action="{{ path('group_delete', {'id': group.id}) }}" method="post" style="display:inline;">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ group.id) }}">
                                            <button type="submit" class="delete-btn btn btn-sm" onclick="return confirm('Are you sure?')">Delete</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        {% else %}
                            <div class="col-12">
                                <div class="no-groups">No event groups found</div>
                            </div>
                        {% endfor %}
                    </div>
