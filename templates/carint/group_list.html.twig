                    <nav class="navbar navbar-expand-lg custom_nav-container">
                        <a class="navbar-brand" href="{{ path('group_list') }}">
                            <span>Culture Connect</span>
                        </a>
                        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="s-1"></span>
                            <span class="s-2"></span>
                            <span class="s-3"></span>
                        </button>
                        <div class="collapse navbar-collapse" id="navbarSupportedContent">
                            <ul class="navbar-nav mr-auto">
                                <li class="nav-item active">
                                    <a class="nav-link" href="{{ path('group_list') }}">Events <span class="sr-only">(current)</span></a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="#">Services</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="#">About</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="#">Contact Us</a>
                                </li>
                            </ul>
                            <form class="form-inline my-2 my-lg-0" method="GET" action="{{ path('group_list') }}">
                                <input type="text" name="q" value="{{ searchQuery|default('') }}" class="form-control mr-2" placeholder="Search events" aria-label="Search events">
                                <button class="btn my-2 my-sm-0 nav_search-btn" type="submit" aria-label="Search">
                                    <i class="fa fa-search" aria-hidden="true"></i>
                                </button>
                            </form>
                        </div>
                    </nav>
                </div>
            </div>
        </header>
    </div>

    <!-- Event Group List Section -->
    <section class="event-group-view-section layout_padding-top py-5">
        <div class="container-fluid">
            <div class="row">
                <!-- Sidebar -->
                <div class="col-lg-3 col-md-4 col-sm-12 mb-4">
                    <div class="sidebar bg-light p-4 rounded shadow-sm">
                        <!-- Navigation -->
                        <div class="sidebar-section mb-4">
                            <h3 class="mb-3">Navigation</h3>
                            <ul class="sidebar-nav list-unstyled">
                                <li class="mb-2">
                                    <a href="{{ path('group_create') }}" class="text-primary">
                                        <i class="fas fa-plus-circle mr-2"></i> Create New Event
                                    </a>
                                </li>
                                <li class="mb-2">
                                    <a href="#my-events" class="text-primary">
                                        <i class="fas fa-calendar-check mr-2"></i> My Events
                                    </a>
                                </li>
                                <li class="mb-2">
                                    <a href="#invitations" class="text-primary">
                                        <i class="fas fa-envelope mr-2"></i> Invitations
                                    </a>
                                </li>
                            </ul>
                        </div>
                        <!-- Categories -->
                        <div class="sidebar-section mb-4">
                            <h4 class="mb-3">Categories</h4>
                            <ul class="sidebar-categories list-unstyled">
                                <li class="mb-2">
                                    <a href="{{ path('group_list', {'category': 'Music'}) }}" class="{% if category|lower == 'music' %}text-primary font-weight-bold{% else %}text-primary{% endif %}">
                                        Music
                                    </a>
                                </li>
                                <li class="mb-2">
                                    <a href="{{ path('group_list', {'category': 'Dance'}) }}" class="{% if category|lower == 'dance' %}text-primary font-weight-bold{% else %}text-primary{% endif %}">
                                        Dance
                                    </a>
                                </li>
                                <li class="mb-2">
                                    <a href="{{ path('group_list', {'category': 'Food'}) }}" class="{% if category|lower == 'food' %}text-primary font-weight-bold{% else %}text-primary{% endif %}">
                                        Food
                                    </a>
                                </li>
                                <li class="mb-2">
                                    <a href="{{ path('group_list', {'category': 'Art'}) }}" class="{% if category|lower == 'art' %}text-primary font-weight-bold{% else %}text-primary{% endif %}">
                                        Art
                                    </a>
                                </li>
                            </ul>
                        </div>
                        <!-- Upcoming Events -->
                        <div class="sidebar-section">
                            <h4 class="mb-3">Upcoming Events</h4>
                            {% if upcomingEvents is not empty %}
                                {% for event in upcomingEvents %}
                                    <div class="popular-event mb-3">
                                        <h5 class="text-dark">{{ event.name }}</h5>
                                        <p class="text-muted mb-1">{{ event.eventDate ? event.eventDate|date('Y-m-d H:i') : 'TBD' }}</p>
                                        <p class="text-secondary mb-0">{{ event.groupType ? event.groupType.type : 'Not specified' }}</p>
                                    </div>
                                {% endfor %}
                                <a href="{{ path('group_list', {'date': 'next_7_days'}) }}" class="view-all text-primary d-block">View All</a>
                            {% else %}
                                <p class="text-muted">No upcoming events found.</p>
                            {% endif %}
                        </div>
                    </div>
                </div>

                <!-- Main Content -->
                <div class="col-lg-9 col-md-8 col-sm-12">
                    <!-- Page Title -->
                    <div class="heading_container heading_center mb-5">
                        <h2 class="text-dark font-weight-bold">Event Groups</h2>
                    </div>

                    <!-- Flash Messages -->
                    {% for message in app.flashes('success') %}
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            {{ message }}
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">×</span>
                            </button>
                        </div>
                    {% endfor %}

                    <!-- Search and Filter Bar -->
                    <div class="search-filter-bar mb-4">
                        <form method="GET" action="{{ path('group_list') }}" class="form-inline justify-content-center flex-wrap">
                            <div class="position-relative w-100 mb-3" style="max-width: 500px;">
                                <input 
                                    type="text" 
                                    name="q" 
                                    value="{{ searchQuery|default('') }}" 
                                    class="form-control w-100" 
                                    placeholder="Search groups by name, description, or location" 
                                    id="searchInput"
                                    aria-label="Search groups"
                                >
                                <button type="submit" class="btn btn-primary position-absolute" style="right: 0; top: 0; height: 100%;">
                                    <i class="fa fa-search" aria-hidden="true"></i>
                                </button>
                                <div id="suggestions" class="suggestions-list position-absolute w-100 bg-white border rounded shadow-sm" style="display: none; z-index: 1000;"></div>
                            </div>
                            <div class="filters mt-3 text-center w-100">
                                <select name="location" class="form-control d-inline-block mr-2 mb-2" onchange="this.form.submit()" style="width: auto;">
                                    <option value="">All Locations</option>
                                    {% if locations is defined %}
                                        {% for loc in locations %}
                                            <option value="{{ loc.location }}" {% if location|default('') == loc.location %}selected{% endif %}>{{ loc.location }}</option>
                                        {% endfor %}
                                    {% endif %}
                                </select>
                                <select name="visibility" class="form-control d-inline-block mr-2 mb-2" onchange="this.form.submit()" style="width: auto;">
                                    <option value="">All Visibility</option>
                                    {% if visibilities is defined %}
                                        {% for vis in visibilities %}
                                            <option value="{{ vis.visibility }}" {% if visibility|default('') == vis.visibility %}selected{% endif %}>{{ vis.visibility|capitalize }}</option>
                                        {% endfor %}
                                    {% endif %}
                                </select>
                                <input 
                                    type="date" 
                                    name="date" 
                                    value="{% if date is iterable %}{{ date[0] }}{% else %}{{ date|default('') }}{% endif %}" 
                                    class="form-control d-inline-block mr-2 mb-2" 
                                    onchange="this.form.submit()"
                                    style="width: auto;"
                                    aria-label="Filter by date"
                                >
                                <button type="button" class="btn btn-secondary clear-filters mb-2">Clear Filters</button>
                            </div>
                            <div class="text-center mt-3 w-100">
                                <a href="{{ path('group_create') }}" class="create-event-btn btn btn-primary">Create New Event</a>
                            </div>
                        </form>
                    </div>

                    <!-- Event Group List -->
                    <div class="row">
                        {% if groupData is defined and groupData is not empty %}
                            {% for data in groupData %}
                                <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
                                    <div class="group-card bg-white rounded shadow-sm">
                                        <div class="group-card-header">
                                            {% if data.imageData %}
                                                <img 
                                                    src="data:{{ data.imageData.type }};base64,{{ data.imageData.data }}" 
                                                    alt="{{ data.group.name }}" 
                                                    class="group-banner img-fluid rounded-top"
                                                />
                                            {% else %}
                                                <img 
                                                    src="{{ asset('images/default-cover.jpg') }}" 
                                                    alt="Default Cover" 
                                                    class="group-banner img-fluid rounded-top"
                                                />
                                            {% endif %}
                                        </div>
                                        <div class="group-card-body p-3">
                                            <div class="group-details">
                                                <h4 class="group-title text-dark mb-2">{{ data.group.name }}</h4>
                                                <p class="group-description text-muted">
                                                    {{ data.group.description|length > 50 ? data.group.description|slice(0, 50) ~ '...' : data.group.description|default('No description provided') }}
                                                </p>
                                                <p class="group-meta text-secondary">
                                                    <strong>Location:</strong> {{ data.group.location|default('Not specified') }} | 
                                                    <strong>Date:</strong> {{ data.group.eventDate ? data.group.eventDate|date('Y-m-d H:i') : 'TBD' }} | 
                                                    <strong>Max:</strong> {{ data.group.maxParticipants|default('Unlimited') }} | 
                                                    <strong>Visibility:</strong> {{ data.group.visibility|capitalize }}
                                                </p>
                                                <p class="group-type text-secondary">
                                                    <strong>Type:</strong> {{ data.group.groupType ? data.group.groupType.type : 'Not specified' }}
                                                </p>
                                            </div>
                                            <div class="group-actions d-flex justify-content-end mt-3">
                                                <a href="{{ path('group_view', {'id': data.group.id}) }}" class="action-btn btn btn-info btn-sm mr-2" aria-label="View group details">Details</a>
                                                <a href="{{ path('group_edit', {'id': data.group.id}) }}" class="action-btn btn btn-secondary btn-sm mr-2" aria-label="Edit group">Edit</a>
                                                <form action="{{ path('group_delete', {'id': data.group.id}) }}" method="post" style="display:inline;">
                                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ data.group.id) }}">
                                                    <button 
                                                        type="submit" 
                                                        class="action-btn btn btn-danger btn-sm" 
                                                        onclick="return confirm('Are you sure you want to delete this group?')"
                                                        aria-label="Delete group"
                                                    >
                                                        Delete
                                                    </button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}

                            <!-- Pagination Links -->
                            <div class="col-12 mt-4">
                                <nav aria-label="Page navigation">
                                    <ul class="pagination justify-content-center">
                                        {# Previous Page Link #}
                                        <li class="page-item {% if currentPage == 1 %}disabled{% endif %}">
                                            <a 
                                                class="page-link" 
                                                href="{{ path('group_list', {'page': currentPage - 1, 'q': searchQuery, 'location': location, 'visibility': visibility, 'date': date, 'category': category}) }}" 
                                                {% if currentPage == 1 %}aria-disabled="true"{% endif %}
                                            >
                                                Previous
                                            </a>
                                        </li>
                                        {# Page Numbers #}
                                        {% for i in 1..totalPages %}
                                            <li class="page-item {% if i == currentPage %}active{% endif %}">
                                                <a 
                                                    class="page-link" 
                                                    href="{{ path('group_list', {'page': i, 'q': searchQuery, 'location': location, 'visibility': visibility, 'date': date, 'category': category}) }}"
                                                >
                                                    {{ i }}
                                                </a>
                                            </li>
                                        {% endfor %}
                                        {# Next Page Link #}
                                        <li class="page-item {% if currentPage == totalPages %}disabled{% endif %}">
                                            <a 
                                                class="page-link" 
                                                href="{{ path('group_list', {'page': currentPage + 1, 'q': searchQuery, 'location': location, 'visibility': visibility, 'date': date, 'category': category}) }}" 
                                                {% if currentPage == totalPages %}aria-disabled="true"{% endif %}
                                            >
                                                Next
                                            </a>
                                        </li>
                                    </ul>
                                </nav>
                                <p class="text-center text-muted">
                                    Showing {{ groupData|length }} of {{ totalGroups }} groups (Page {{ currentPage }} of {{ totalPages }})
                                </p>
                            </div>
                        {% else %}
                            <div class="col-12">
                                <p class="text-center text-muted no-groups">No event groups found.</p>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Info Section -->
