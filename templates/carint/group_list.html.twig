{% extends 'base.html.twig' %}

{% block title %}
    Culture Connect - Event Groups
{% endblock %}

{% block body %}
    <!-- Header Section -->
    <div class="hero_area">
        <header class="header_section">
            <!-- Top Contact Bar -->
            <div class="header_top">
                <div class="container-fluid">
