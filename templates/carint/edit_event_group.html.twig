{% extends 'base.html.twig' %}

{% block title %}
    Culture Connect - Edit Event Group
{% endblock %}

{% block body %}
    <!-- Header Section -->
    <div class="hero_area">
        <header class="header_section">
            <!-- Top Contact Bar -->
            <div class="header_top">
                <div class="container-fluid">
                    <div class="contact_nav d-flex justify-content-center">
                        <a href="tel:+01123455678990" class="contact-link mx-3" aria-label="Phone number">
                            <i class="fa fa-phone" aria-hidden="true"></i>
                            <span>Call: +01 123455678990</span>
                        </a>
                        <a href="mailto:support@cultureconnect.com" class="contact-link mx-3" aria-label="Email address">
                            <i class="fa fa-envelope" aria-hidden="true"></i>
                            <span>Email: support@cultureconnect.com</span>
                        </a>
                        <a href="#" class="contact-link mx-3" aria-label="Global events">
                            <i class="fa fa-map-marker" aria-hidden="true"></i>
                            <span>Global Events</span>
                        </a>
                    </div>
                </div>
            </div>
            <!-- Navigation Bar -->
            <div class="header_bottom">
                <div class="container-fluid">
                    <nav class="navbar navbar-expand-lg custom_nav-container">
                        <a class="navbar-brand" href="{{ path('group_list') }}">
                            <span>Culture Connect</span>
                        </a>
                        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="s-1"></span>
                            <span class="s-2"></span>
                            <span class="s-3"></span>
                        </button>
                        <div class="collapse navbar-collapse" id="navbarSupportedContent">
                            <ul class="navbar-nav mr-auto">
                                <li class="nav-item active">
                                    <a class="nav-link" href="{{ path('group_list') }}">Events <span class="sr-only">(current)</span></a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="#">Services</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="#">About</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="#">Contact Us</a>
                                </li>
                            </ul>
                            <form class="form-inline my-2 my-lg-0" method="GET" action="{{ path('group_list') }}">
                                <input type="text" name="q" value="{{ searchQuery|default('') }}" class="form-control mr-2" placeholder="Search events" aria-label="Search events">
                                <button class="btn my-2 my-sm-0 nav_search-btn" type="submit" aria-label="Search">
                                    <i class="fa fa-search" aria-hidden="true"></i>
                                </button>
                            </form>
                        </div>
                    </nav>
                </div>
            </div>
        </header>
    </div>

    <!-- Edit Event Group Section -->
    <section class="event-group-create-section layout_padding-top py-5">
        <div class="container-fluid">
            <div class="row">
                <!-- Sidebar -->
                <div class="col-lg-3 col-md-4 col-sm-12 mb-4">
                    <div class="sidebar bg-light p-4 rounded shadow-sm">
                        <!-- Quick Navigation -->
                        <div class="sidebar-section mb-4">
                            <h3 class="mb-3">Navigation</h3>
                            <ul class="sidebar-nav list-unstyled">
                                <li class="mb-2">
                                    <a href="{{ path('group_create') }}" class="text-primary">
                                        <i class="fas fa-plus-circle mr-2"></i> Create New Event
                                    </a>
                                </li>
                                <li class="mb-2">
                                    <a href="#my-events" class="text-primary">
                                        <i class="fas fa-calendar-check mr-2"></i> My Events
                                    </a>
                                </li>
                                <li class="mb-2">
                                    <a href="#invitations" class="text-primary">
                                        <i class="fas fa-envelope mr-2"></i> Invitations
                                    </a>
                                </li>
                            </ul>
                        </div>
                        <!-- Categories -->
                        <div class="sidebar-section">
                            <h4 class="mb-3">Categories</h4>
                            <ul class="sidebar-categories list-unstyled">
                                <li class="mb-2"><a href="{{ path('group_list', {'category': 'music'}) }}" class="text-primary">Music</a></li>
                                <li class="mb-2"><a href="{{ path('group_list', {'category': 'dance'}) }}" class="text-primary">Dance</a></li>
                                <li class="mb-2"><a href="{{ path('group_list', {'category': 'food'}) }}" class="text-primary">Food</a></li>
                                <li class="mb-2"><a href="{{ path('group_list', {'category': 'art'}) }}" class="text-primary">Art</a></li>
                            </ul>
                        </div>
                    </div>
                </div>

                <!-- Main Content -->
                <div class="col-lg-9 col-md-8 col-sm-12">
                    <!-- Page Title -->
                    <div class="heading_container heading_center mb-5">
                        <h2 class="text-dark font-weight-bold">Edit Event Group</h2>
                    </div>

                    <!-- Flash Messages -->
                    {% for message in app.flashes('success') %}
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            {{ message }}
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">×</span>
                            </button>
                        </div>
                    {% endfor %}
                    {% for message in app.flashes('error') %}
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            {{ message }}
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">×</span>
                            </button>
                        </div>
                    {% endfor %}

                    <!-- Group Navigation Tabs -->
                    <nav class="group-nav-bar mb-4">
                        <ul class="nav flex-row align-items-center justify-content-between bg-light p-2 rounded">
                            <div class="d-flex">
                                <li class="nav-item">
                                    <a class="nav-link text-primary" href="{{ path('group_view', {'id': group.id}) }}" aria-current="{% if app.request.attributes.get('_route') == 'group_view' %}page{% else %}false{% endif %}">
                                        <i class="fas fa-info-circle mr-1"></i> Details
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-primary view-posts-btn" href="{{ path('group_posts', {'id': group.id}) }}" aria-current="{% if app.request.attributes.get('_route') == 'group_posts' %}page{% else %}false{% endif %}">
                                        <i class="fas fa-file-alt mr-1"></i> Posts
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-primary discussion-btn" href="{{ path('group_discussion', {'id': group.id}) }}" aria-current="{% if app.request.attributes.get('_route') == 'group_discussion' %}page{% else %}false{% endif %}">
                                        <i class="fas fa-comments mr-1"></i> Discussions
                                    </a>
                                </li>
                            </div>
                            <li class="nav-item">
                                <a href="{{ path('group_invite', {'id': group.id}) }}" class="nav-link btn btn-primary invite-btn" aria-label="Send Invitation">
                                    <i class="fas fa-envelope mr-1" aria-hidden="true"></i> Send Invitation
                                </a>
                            </li>
                        </ul>
                    </nav>

                    <!-- Edit Form -->
                    <div class="form_container bg-white p-4 rounded shadow-sm">
                        {{ form_start(group_form) }}
                            <div class="form-group mb-4">
                                {{ form_label(group_form.name, 'Group Name', {'label_attr': {'class': 'form-label font-weight-bold'}}) }}
                                {{ form_widget(group_form.name, {'attr': {'class': 'form-control', 'placeholder': 'Enter event name'}}) }}
                                {{ form_errors(group_form.name) }}
                            </div>
                            <div class="form-group mb-4">
                                {{ form_label(group_form.description, 'Description', {'label_attr': {'class': 'form-label font-weight-bold'}}) }}
                                {{ form_widget(group_form.description, {'attr': {'class': 'form-control', 'placeholder': 'Describe your event', 'rows': '4'}}) }}
                                {{ form_errors(group_form.description) }}
                            </div>
                            <div class="form-group mb-4">
                                {{ form_label(group_form.location, 'Location', {'label_attr': {'class': 'form-label font-weight-bold'}}) }}
                                {{ form_widget(group_form.location, {'attr': {'class': 'form-control', 'placeholder': 'Event location'}}) }}
                                {{ form_errors(group_form.location) }}
                            </div>
                            <div class="form-group mb-4">
                                {{ form_label(group_form.event_date, 'Event Date', {'label_attr': {'class': 'form-label font-weight-bold'}}) }}
                                {{ form_widget(group_form.event_date, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(group_form.event_date) }}
                            </div>
                            <div class="form-group mb-4">
                                {{ form_label(group_form.max_participants, 'Max Participants', {'label_attr': {'class': 'form-label font-weight-bold'}}) }}
                                {{ form_widget(group_form.max_participants, {'attr': {'class': 'form-control', 'placeholder': 'Max participants', 'min': '1'}}) }}
                                {{ form_errors(group_form.max_participants) }}
                            </div>
                            <div class="form-group mb-4">
                                {{ form_label(group_form.visibility, 'Visibility', {'label_attr': {'class': 'form-label font-weight-bold'}}) }}
                                {{ form_widget(group_form.visibility, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(group_form.visibility) }}
                            </div>
                            <div class="form-group mb-4">
                                {{ form_label(group_form.coverPicture, 'Cover Picture', {'label_attr': {'class': 'form-label font-weight-bold'}}) }}
                                {{ form_widget(group_form.coverPicture, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(group_form.coverPicture) }}
                            </div>
                            <div class="form-group mb-4">
                                {{ form_label(group_form.groupType, 'Group Type', {'label_attr': {'class': 'form-label font-weight-bold'}}) }}
                                {{ form_widget(group_form.groupType, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(group_form.groupType) }}
                            </div>
                            <div class="btn_box text-center mt-4">
                                <button type="submit" class="btn btn-primary px-4">Update Event</button>
                                <a href="{{ path('group_list') }}" class="btn btn-secondary px-4 ml-2">Back to Events</a>
                            </div>
                        {{ form_end(group_form) }}
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Info Section -->
    <section class="info_section layout_padding2 bg-light py-5">
        <div class="container">
            <div class="row">
                <!-- Contact Info -->
                <div class="col-md-6 col-lg-3 info_col mb-4">
                    <div class="info_contact">
                        <h4 class="text-dark mb-3">Contact Us</h4>
                        <div class="contact_link_box">
                            <a href="#" class="d-flex align-items-center mb-2 text-dark" aria-label="Global events">
                                <i class="fa fa-map-marker mr-2" aria-hidden="true"></i>
                                <span>Global Events</span>
                            </a>
                            <a href="tel:+01123455678990" class="d-flex align-items-center mb-2 text-dark" aria-label="Phone number">
                                <i class="fa fa-phone mr-2" aria-hidden="true"></i>
                                <span>Call: +01 123455678990</span>
                            </a>
                            <a href="mailto:support@cultureconnect.com" class="d-flex align-items-center text-dark" aria-label="Email address">
                                <i class="fa fa-envelope mr-2" aria-hidden="true"></i>
                                <span>support@cultureconnect.com</span>
                            </a>
                        </div>
                    </div>
                    <div class="info_social mt-3">
                        <a href="#" class="text-dark mx-2" aria-label="Facebook"><i class="fa fa-facebook" aria-hidden="true"></i></a>
                        <a href="#" class="text-dark mx-2" aria-label="Twitter"><i class="fa fa-twitter" aria-hidden="true"></i></a>
                        <a href="#" class="text-dark mx-2" aria-label="LinkedIn"><i class="fa fa-linkedin" aria-hidden="true"></i></a>
                        <a href="#" class="text-dark mx-2" aria-label="Instagram"><i class="fa fa-instagram" aria-hidden="true"></i></a>
                    </div>
                </div>
                <!-- About Culture Connect -->
                <div class="col-md-6 col-lg-3 info_col mb-4">
                    <div class="info_detail">
                        <h4 class="text-dark mb-3">About Culture Connect</h4>
                        <p class="text-muted">Connecting people through cultural events worldwide.</p>
                    </div>
                </div>
               <!-- Quick Links -->
<div class="col-md-6 col-lg-2 mx-auto info_col mb-4">
    <div class="info_link_box">
        <h4 class="mb-3">Links</h4>
        <div class="info_links">
            <a class="d-block mb-2 active" href="{{ path('group_list') }}">Events</a>
            <a class="d-block mb-2" href="#">About</a>
            <a class="d-block mb-2" href="#">Services</a>
            <a class="d-block mb-2" href="#">Contact Us</a>
        </div>
    </div>
</div>
                <!-- Newsletter Subscription -->
                <div class="col-md-6 col-lg-3 info_col mb-4">
                    <h4 class="text-dark mb-3">Subscribe</h4>
                    <form action="#" class="form-inline">
                        <input type="email" placeholder="Enter email" class="form-control w-100 mb-2" required aria-label="Email for subscription" />
                        <button type="submit" class="btn btn-primary w-100">Subscribe</button>
                    </form>
                </div>
            </div>
        </div>
    </section>

    <!-- Footer Section -->
    <footer class="footer_section bg-dark text-white py-4">
        <div class="container">
            <div class="row">
                <div class="col-12 text-center">
                    <p class="mb-2">
                        © {{ "now"|date("Y") }} All Rights Reserved By
                        <a href="https://cultureconnect.com/" class="text-white">Culture Connect</a>
                    </p>
                    <div class="footer-links mb-2">
                        <a href="#" class="text-white mx-2">Privacy Policy</a> | 
                        <a href="#" class="text-white mx-2">Terms of Service</a>
                    </div>
                    <div class="footer-social">
                        <a href="#" class="text-white mx-2" aria-label="Facebook"><i class="fa fa-facebook" aria-hidden="true"></i></a>
                        <a href="#" class="text-white mx-2" aria-label="Twitter"><i class="fa fa-twitter" aria-hidden="true"></i></a>
                        <a href="#" class="text-white mx-2" aria-label="LinkedIn"><i class="fa fa-linkedin" aria-hidden="true"></i></a>
                        <a href="#" class="text-white mx-2" aria-label="Instagram"><i class="fa fa-instagram" aria-hidden="true"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </footer>
{% endblock %}