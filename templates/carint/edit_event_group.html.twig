{% extends 'base.html.twig' %}

{% block title %}Culture Connect - Edit Event Group{% endblock %}

{% block body %}
    <!-- Header Section -->
    <div class="hero_area">
        <header class="header_section">
            <div class="header_top">
                <div class="container-fluid">
                    <div class="contact_nav">
                        <a href="" class="contact-link">
                            <i class="fa fa-phone" aria-hidden="true"></i>
                            <span>Call: +01 123455678990</span>
                        </a>
                        <a href="" class="contact-link">
                            <i class="fa fa-envelope" aria-hidden="true"></i>
                            <span>Email: support@cultureconnect.com</span>
                        </a>
                        <a href="" class="contact-link">
                            <i class="fa fa-map-marker" aria-hidden="true"></i>
                            <span>Global Events</span>
                        </a>
                    </div>
                </div>
            </div>
            <div class="header_bottom">
                <div class="container-fluid">
                    <nav class="navbar navbar-expand-lg custom_nav-container">
                        <a class="navbar-brand" href="{{ path('group_list') }}">
                            <span>Culture Connect</span>
                        </a>
                        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="s-1"></span>
                            <span class="s-2"></span>
                            <span class="s-3"></span>
                        </button>
                        <div class="collapse navbar-collapse" id="navbarSupportedContent">
                            <ul class="navbar-nav">
                                <li class="nav-item active">
                                    <a class="nav-link" href="{{ path('group_list') }}">Events <span class="sr-only">(current)</span></a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="#">Services</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="#">About</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="#">Contact Us</a>
                                </li>
                                {% if app.user %}
                                    <li class="nav-item">
                                        <a class="nav-link" href="">Logout</a>
                                    </li>
                                {% else %}
                                    <li class="nav-item">
                                        <a class="nav-link" href="">Login</a>
                                    </li>
                                {% endif %}
                                <form class="form-inline">
                                    <button class="btn my-2 my-sm-0 nav_search-btn" type="submit" aria-label="Search">
                                        <i class="fa fa-search" aria-hidden="true"></i>
                                    </button>
                                </form>
                            </ul>
                        </div>
                    </nav>
                </div>
            </div>
        </header>
    </div>

    <!-- Main Content Section -->
    <section class="event-group-create-section layout_padding-top">
        <div class="container-fluid">
            <div class="row">
                <!-- Sidebar -->
                <div class="col-lg-3 col-md-4 col-sm-12">
                    <div class="sidebar">
                        <!-- Quick Navigation -->
                        <div class="sidebar-section">
                            <h3>Navigation</h3>
                            <ul class="sidebar-nav">
                                <li><a href="{{ path('group_create') }}"><i class="fas fa-plus-circle"></i> Create New Event</a></li>
                                <li><a href="#my-events"><i class="fas fa-calendar-check"></i> My Events</a></li>
                                <li><a href="#invitations"><i class="fas fa-envelope"></i> Invitations</a></li>
                            </ul>
                            <h4>Categories</h4>
                            <ul class="sidebar-categories">
                                <li><a href="{{ path('group_list', {'category': 'music'}) }}">Music</a></li>
                                <li><a href="{{ path('group_list', {'category': 'dance'}) }}">Dance</a></li>
                                <li><a href="{{ path('group_list', {'category': 'food'}) }}">Food</a></li>
                                <li><a href="{{ path('group_list', {'category': 'art'}) }}">Art</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
                <!-- Main Content -->
                <div class="col-lg-9 col-md-8 col-sm-12">
                    <div class="heading_container heading_center">
                        <h2>Edit Event Group</h2>
                    </div>
                    {% for message in app.flashes('success') %}
                        <div class="alert alert-success text-center">{{ message }}</div>
                    {% endfor %}
                    {% for message in app.flashes('error') %}
                        <div class="alert alert-danger text-center">{{ message }}</div>
                    {% endfor %}
                    <nav class="group-nav-bar">
                        <ul class="nav flex-row align-items-center justify-content-between">
                            <div class="d-flex">
                                <li class="nav-item">
                                    <a href="{{ path('group_view', {'id': group.id}) }}" class="nav-link {% if app.request.attributes.get('_route') == 'group_view' %}active{% endif %}" aria-current="{% if app.request.attributes.get('_route') == 'group_view' %}page{% else %}false{% endif %}">
                                        <i class="fas fa-info-circle" aria-hidden="true"></i> Details
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="{{ path('group_posts', {'id': group.id}) }}" class="nav-link {% if app.request.attributes.get('_route') == 'group_posts' %}active{% endif %} view-posts-btn" aria-current="{% if app.request.attributes.get('_route') == 'group_posts' %}page{% else %}false{% endif %}">
                                        <i class="fas fa-file-alt" aria-hidden="true"></i> Posts
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="{{ path('group_discussion', {'id': group.id}) }}" class="nav-link {% if app.request.attributes.get('_route') == 'group_discussion' %}active{% endif %} discussion-btn" aria-current="{% if app.request.attributes.get('_route') == 'group_discussion' %}page{% else %}false{% endif %}">
                                        <i class="fas fa-comments" aria-hidden="true"></i> Discussion
                                    </a>
                                </li>
                            </div>
                            <li class="nav-item">
                                <a href="{{ path('group_invite', {'id': group.id}) }}" class="nav-link btn btn-primary invite-btn">
                                    <i class="fas fa-envelope" aria-hidden="true"></i> Send Invitation
                                </a>
                            </li>
                        </ul>
                    </nav>
                    <div class="form_container mx-auto">
                        {{ form_start(group_form) }}
                            <div class="form-group">
                                {{ form_label(group_form.name, 'Group Name', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(group_form.name, {'attr': {'class': 'form-control', 'placeholder': 'Enter event name'}}) }}
                                {{ form_errors(group_form.name) }}
                            </div>
                            <div class="form-group">
                                {{ form_label(group_form.description, 'Description', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(group_form.description, {'attr': {'class': 'form-control', 'placeholder': 'Describe your event', 'rows': '4'}}) }}
                                {{ form_errors(group_form.description) }}
                            </div>
                            <div class="form-group">
                                {{ form_label(group_form.location, 'Location', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(group_form.location, {'attr': {'class': 'form-control', 'placeholder': 'Event location'}}) }}
                                {{ form_errors(group_form.location) }}
                            </div>
                            <div class="form-group">
                                {{ form_label(group_form.event_date, 'Event Date', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(group_form.event_date, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(group_form.event_date) }}
                            </div>
                            <div class="form-group">
                                {{ form_label(group_form.max_participants, 'Max Participants', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(group_form.max_participants, {'attr': {'class': 'form-control', 'placeholder': 'Max participants', 'min': 1}}) }}
                                {{ form_errors(group_form.max_participants) }}
                            </div>
                            <div class="form-group">
                                {{ form_label(group_form.visibility, 'Visibility', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(group_form.visibility, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(group_form.visibility) }}
                            </div>
                            <div class="form-group">
                                {{ form_label(group_form.coverPicture, 'Cover Picture', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(group_form.coverPicture, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(group_form.coverPicture) }}
                            </div>
                            <div class="form-group">
                                {{ form_label(group_form.groupType, 'Group Type', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(group_form.groupType, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(group_form.groupType) }}
                            </div>
                            <div class="btn_box text-center mt-3 mb-4">
                                <button type="submit" class="btn btn-primary">Update Event</button>
                                <a href="{{ path('group_list') }}" class="btn btn-secondary ml-2">Back to Events</a>
                            </div>
                        {{ form_end(group_form) }}
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Info Section -->
    <section class="info_section layout_padding2">
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-lg-3 info_col">
                    <div class="info_contact">
                        <h4>Contact Us</h4>
                        <div class="contact_link_box">
                            <a href="">
                                <i class="fa fa-map-marker" aria-hidden="true"></i>
                                <span>Global Events</span>
                            </a>
                            <a href="">
                                <i class="fa fa-phone" aria-hidden="true"></i>
                                <span>Call: +01 123455678990</span>
                            </a>
                            <a href="">
                                <i class="fa fa-envelope" aria-hidden="true"></i>
                                <span>support@cultureconnect.com</span>
                            </a>
                        </div>
                    </div>
                    <div class="info_social">
                        <a href=""><i class="fa fa-facebook" aria-hidden="true"></i></a>
                        <a href=""><i class="fa fa-twitter" aria-hidden="true"></i></a>
                        <a href=""><i class="fa fa-linkedin" aria-hidden="true"></i></a>
                        <a href=""><i class="fa fa-instagram" aria-hidden="true"></i></a>
                    </div>
                </div>
                <div class="col-md-6 col-lg-3 info_col">
                    <div class="info_detail">
                        <h4>About Culture Connect</h4>
                        <p>Connecting people through cultural events worldwide.</p>
                    </div>
                </div>
                <div class="col-md-6 col-lg-2 mx-auto info_col">
                    <div class="info_link_box">
                        <h4>Links</h4>
                        <div class="info_links">
                            <a class="active" href="{{ path('group_list') }}">
                                <img src="{{ asset('images/nav-bullet.png') }}" alt=""> Events
                            </a>
                            <a href="">
                                <img src="{{ asset('images/nav-bullet.png') }}" alt=""> About
                            </a>
                            <a href="">
                                <img src="{{ asset('images/nav-bullet.png') }}" alt=""> Services
                            </a>
                            <a href="">
                                <img src="{{ asset('images/nav-bullet.png') }}" alt=""> Contact Us
                            </a>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 col-lg-3 info_col">
                    <h4>Subscribe</h4>
                    <form action="#">
                        <input type="text" placeholder="Enter email" class="form-control" required />
                        <button type="submit" class="btn btn-primary">Subscribe</button>
                    </form>
                </div>
            </div>
        </div>
    </section>

    <!-- Footer Section -->
    <footer class="footer_section">
        <div class="container">
            <div class="row">
                <div class="col-12 text-center">
                    <p>
                        © {{ "now"|date("Y") }} All Rights Reserved By
                        <a href="https://cultureconnect.com/">Culture Connect</a>
                    </p>
                    <div class="footer-links">
                        <a href="">Privacy Policy</a> | <a href="">Terms of Service</a>
                    </div>
                    <div class="footer-social">
                        <a href=""><i class="fa fa-facebook" aria-hidden="true"></i></a>
                        <a href=""><i class="fa fa-twitter" aria-hidden="true"></i></a>
                        <a href=""><i class="fa fa-linkedin" aria-hidden="true"></i></a>
                        <a href=""><i class="fa fa-instagram" aria-hidden="true"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </footer>
{% endblock %}