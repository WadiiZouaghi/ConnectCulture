    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet" />
</head>

<body class="sub_page">
    <!-- Header Section -->
    <div class="hero_area">
        <header class="header_section">
            <div class="header_top">
                <div class="container-fluid">
                    <div class="contact_nav">
                        <a href="" class="contact-link">
                            <i class="fa fa-phone" aria-hidden="true"></i>
                            <span>Call: +01 123455678990</span>
                        </a>
                        <a href="" class="contact-link">
                            <i class="fa fa-envelope" aria-hidden="true"></i>
                            <span>Email: support@cultureconnect.com</span>
                        </a>
                        <a href="" class="contact-link">
                            <i class="fa fa-map-marker" aria-hidden="true"></i>
                            <span>Global Events</span>
                        </a>
                    </div>
                </div>
            </div>
            <div class="header_bottom">
                <div class="container-fluid">
                    <nav class="navbar navbar-expand-lg custom_nav-container">
                        <a class="navbar-brand" href="{{ path('group_list') }}">
                            <span>Culture Connect</span>
                        </a>
                        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                            <span class=""></span>
                        </button>
                        <div class="collapse navbar-collapse" id="navbarSupportedContent">
                            <ul class="navbar-nav">
                                <li class="nav-item active">
                                    <a class="nav-link" href="{{ path('group_list') }}">Events <span class="sr-only">(current)</span></a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="#">Services</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="#">About</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="#">Contact Us</a>
                                </li>
                                <form class="form-inline">
                                    <button class="btn my-2 my-sm-0 nav_search-btn" type="submit" aria-label="Search">
                                        <i class="fa fa-search" aria-hidden="true"></i>
                                    </button>
                                </form>
                            </ul>
                        </div>
                    </nav>
                </div>
            </div>
        </header>
    </div>

    <!-- Main Content Section -->
    <section class="event-group-view-section layout_padding-top">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <div class="heading_container heading_center">
                        <h2>{{ group.name }} Details</h2>
                    </div>
                    {% for message in app.flashes('success') %}
                        <div class="alert alert-success" role="alert">{{ message }}</div>
                    {% endfor %}
                    <nav class="group-nav-bar">
                        <ul class="nav flex-row align-items-center justify-content-between">
                            <div class="d-flex">
                                <li class="nav-item">
                                    <a href="{{ path('group_view', {'id': group.id}) }}" class="nav-link {% if app.request.attributes.get('_route') == 'group_view' %}active{% endif %}" aria-current="{% if app.request.attributes.get('_route') == 'group_view' %}page{% else %}false{% endif %}">
                                        <i class="fa fa-info-circle" aria-hidden="true"></i> Details
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="{{ path('group_posts', {'id': group.id}) }}" class="nav-link {% if app.request.attributes.get('_route') == 'group_posts' %}active{% endif %} view-posts-btn" aria-current="{% if app.request.attributes.get('_route') == 'group_posts' %}page{% else %}false{% endif %}">
                                        <i class="fas fa-file-alt" aria-hidden="true"></i> Posts
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="{{ path('group_discussion', {'id': group.id}) }}" class="nav-link {% if app.request.attributes.get('_route') == 'group_discussion' %}active{% endif %} discussion-btn" aria-current="{% if app.request.attributes.get('_route') == 'group_discussion' %}page{% else %}false{% endif %}">
                                        <i class="fas fa-comments" aria-hidden="true"></i> Discussion
                                    </a>
                                </li>
                            </div>
                        </ul>
                    </nav>
                    <div class="group-card">
                        <!-- Group Card Header with Cover Image -->
                        <div class="group-card-header">
                            <img src="{% if base64Image %}data:image/jpeg;base64,{{ base64Image }}{% else %}{{ asset('images/default_event_banner.jpg') }}{% endif %}" alt="{{ group.name }} Cover" class="group-cover-image">
                            <!-- Weather Forecast Card on Top-Right of Image -->
                            {% if weatherData and weatherData.daily is not empty %}
                                <div class="weather-forecast-card">
                                    <h4>Weather on {{ group.eventDate ? group.eventDate|date('Y-m-d') : 'Event Date' }}</h4>
                                    <div class="forecast-day">
                                        <div class="forecast-date">
                                            {{ weatherData.daily[0].temp }}Â°C, {{ weatherData.daily[0].description|capitalize }}
                                        </div>
                                        <img src="http://openweathermap.org/img/wn/{{ weatherData.daily[0].icon }}.png" alt="{{ weatherData.daily[0].description }}" style="width: 40px; height: 40px;" loading="lazy">
                                    </div>
                                </div>
                            {% else %}
                                <div class="weather-forecast-card">
                                    <h4>Weather Unavailable</h4>
                                    <p>Forecast not available for {{ group.eventDate ? group.eventDate|date('Y-m-d') : 'event date' }}.</p>
                                </div>
                            {% endif %}
                        </div>
                        <!-- Group Card Body -->
                        <div class="group-card-body">
                            <!-- Group Details in Single-Column Layout -->
                            <div class="group-details">
                                <div class="group-detail">
                                    <span class="icon-wrapper"><i class="fas fa-info-circle"></i></span>
                                    <strong>Description:</strong> <span>{{ group.description|default('No description provided') }}</span>
                                </div>
                                <div class="group-detail">
                                    <span class="icon-wrapper"><i class="fas fa-map-marker-alt"></i></span>
                                    <strong>Location:</strong> <span>{{ group.location|default('Not specified') }}</span>
                                </div>
                                <div class="group-detail">
                                    <span class="icon-wrapper"><i class="fas fa-calendar-alt"></i></span>
                                    <strong>Event Date:</strong> <span>{{ group.eventDate ? group.eventDate|date('Y-m-d H:i') : 'TBD' }}</span>
                                </div>
                                <div class="group-detail">
                                    <span class="icon-wrapper"><i class="fas fa-users"></i></span>
                                    <strong>Max Participants:</strong> <span>{{ group.maxParticipants|default('Unlimited') }}</span>
                                </div>
                                <div class="group-detail">
                                    <span class="icon-wrapper"><i class="fas fa-eye"></i></span>
                                    <strong>Visibility:</strong> <span>{{ group.visibility|capitalize }}</span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Related Events Section -->
                    <div class="related-events">
                        <h3>Related Events in {{ group.location|default('this area') }}</h3>
                        <div class="row">
                            {% for relatedGroup in relatedGroups %}
                                <div class="col-md-4">
                                    <div class="related-event-card">
                                        <h4>{{ relatedGroup.name }}</h4>
                                        <p><strong>Location:</strong> {{ relatedGroup.location }}</p>
                                        <p><strong>Date:</strong> {{ relatedGroup.eventDate ? relatedGroup.eventDate|date('Y-m-d') : 'TBD' }}</p>
                                        <p>{{ relatedGroup.description|length > 50 ? relatedGroup.description|slice(0, 50) ~ '...' : relatedGroup.description|default('No description provided') }}</p>
                                    </div>
                                </div>
                            {% else %}
                                <div class="col-12">
                                    <p>No related events found.</p>
                                </div>
                            {% endfor %}
                        </div>
                    </div>

                    <!-- Call-to-Action Section -->
                    <div class="cta-section">
                        <h3>Join {{ group.name }} Today!</h3>
                        <p>Experience the magic of cultural events with friends and family. Donât miss out!</p>
                        <a href="{{ path('group_invite', {'id': group.id}) }}" class="btn">Join Now</a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Info Section -->
    <section class="info_section layout_padding2">
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-lg-3 info_col">
                    <div class="info_contact">
                        <h4>Contact Us</h4>
                        <div class="contact_link_box">
                            <a href="">
                                <i class="fa fa-map-marker" aria-hidden="true"></i>
                                <span>Global Events</span>
                            </a>
                            <a href="">
                                <i class="fa fa-phone" aria-hidden="true"></i>
                                <span>Call: +01 1234567890</span>
                            </a>
                            <a href="">
                                <i class="fa fa-envelope" aria-hidden="true"></i>
                                <span>support@cultureconnect.com</span>
                            </a>
                        </div>
                    </div>
                    <div class="info_social">
                        <a href=""><i class="fa fa-facebook" aria-hidden="true"></i></a>
                        <a href=""><i class="fa fa-twitter" aria-hidden="true"></i></a>
                        <a href=""><i class="fa fa-linkedin" aria-hidden="true"></i></a>
                        <a href=""><i class="fa fa-instagram" aria-hidden="true"></i></a>
                    </div>
                </div>
                <div class="col-md-6 col-lg-3 info_col">
                    <div class="info_detail">
                        <h4>About Culture Connect</h4>
                        <p>Connecting people through cultural events worldwide.</p>
                    </div>
                </div>
                <div class="col-md-6 col-lg-2 mx-auto info_col">
                    <div class="info_link_box">
                        <h4>Links</h4>
                        <div class="info_links">
                            <a class="active" href="{{ path('group_list') }}">
                                <img src="{{ asset('images/nav-bullet.png') }}" alt=""> Events
                            </a>
                            <a href="">
                                <img src="{{ asset('images/nav-bullet.png') }}" alt=""> About
                            </a>
                            <a href="">
                                <img src="{{ asset('images/nav-bullet.png') }}" alt=""> Services
                            </a>
                            <a href="">
                                <img src="{{ asset('images/nav-bullet.png') }}" alt=""> Contact Us
                            </a>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 col-lg-3 info_col">
                    <h4>Subscribe</h4>
                    <form action="#">
                        <input type="text" placeholder="Enter email" class="form-control" required />
                        <button type="submit" class="btn btn-primary">Subscribe</button>
                    </form>
                </div>
            </div>
        </div>
    </section>

    <!-- Footer Section -->
    <footer class="footer_section">
        <div class="container">
            <div class="row">
                <div class="col-12 text-center">
                    <p>
                        Â© {{ "now"|date("Y") }} All Rights Reserved By
                        <a href="https://cultureconnect.com/">Culture Connect</a>
                    </p>
                    <div class="footer-links">
                        <a href="">Privacy Policy</a> | <a href="">Terms of Service</a>
                    </div>
                    <div class="footer-social">
                        <a href=""><i class="fa fa-facebook" aria-hidden="true"></i></a>
                        <a href=""><i class="fa fa-twitter" aria-hidden="true"></i></a>
                        <a href=""><i class="fa fa-linkedin" aria-hidden="true"></i></a>
                        <a href=""><i class="fa fa-instagram" aria-hidden="true"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script type="text/javascript" src="{{ asset('js/jquery-3.4.1.min.js') }}" defer></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous" defer></script>
    <script type="text/javascript" src="{{ asset('js/bootstrap.js') }}" defer></script>
    <script type="text/javascript" src="{{ asset('https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/owl.carousel.min.js') }}" defer></script>
    <script type="text/javascript" src="{{ asset('js/custom.js') }}" defer></script>
</body>
</html>