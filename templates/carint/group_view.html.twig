{% extends 'base.html.twig' %}

{% block title %}Culture Connect - {{ group.name }}{% endblock %}

{% block body %}
    <!-- Header Section -->
    <div class="hero_area">
        <header class="header_section">
            <div class="header_top">
                <div class="container-fluid">
                    <div class="contact_nav">
                        <a href="" class="contact-link">
                            <i class="fa fa-phone" aria-hidden="true"></i>
                            <span>Call: +01 123455678990</span>
                        </a>
                        <a href="" class="contact-link">
                            <i class="fa fa-envelope" aria-hidden="true"></i>
                            <span>Email: support@cultureconnect.com</span>
                        </a>
                        <a href="" class="contact-link">
                            <i class="fa fa-map-marker" aria-hidden="true"></i>
                            <span>Global Events</span>
                        </a>
                    </div>
                </div>
            </div>
            <div class="header_bottom">
                <div class="container-fluid">
                    <nav class="navbar navbar-expand-lg custom_nav-container">
                        <a class="navbar-brand" href="{{ path('group_list') }}">
                            <span>Culture Connect</span>
                        </a>
                        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="s-1"></span>
                            <span class="s-2"></span>
                            <span class="s-3"></span>
                        </button>
                        <div class="collapse navbar-collapse" id="navbarSupportedContent">
                            <ul class="navbar-nav">
                                <li class="nav-item active">
                                    <a class="nav-link" href="{{ path('group_list') }}">Events <span class="sr-only">(current)</span></a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="#">Services</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="#">About</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="#">Contact Us</a>
                                </li>
                                <form class="form-inline" method="GET" action="{{ path('group_list') }}">
                                    <input type="text" name="q" value="{{ searchQuery|default('') }}" class="form-control mr-2" placeholder="Search events">
                                    <button class="btn my-2 my-sm-0 nav_search-btn" type="submit" aria-label="Search">
                                        <i class="fa fa-search" aria-hidden="true"></i>
                                    </button>
                                </form>
                            </ul>
                        </div>
                    </nav>
                </div>
            </div>
        </header>
    </div>

    <!-- Group View Section -->
    <section class="event-group-view-section layout_padding-top">
        <div class="container-fluid">
            <div class="row">
                <!-- Sidebar -->
                <div class="col-lg-3 col-md-4 col-sm-12">
                    <div class="sidebar">
                        <!-- Quick Navigation -->
                        <div class="sidebar-section">
                            <h3>Navigation</h3>
                            <ul class="sidebar-nav">
                                <li><a href="{{ path('group_create') }}"><i class="fas fa-plus-circle"></i> Create New Event</a></li>
                                <li><a href="#my-events"><i class="fas fa-calendar-check"></i> My Events</a></li>
                                <li><a href="#invitations"><i class="fas fa-envelope"></i> Invitations</a></li>
                            </ul>
                            <h4>Categories</h4>
                            <ul class="sidebar-categories">
                                <li><a href="{{ path('group_list', {'category': 'music'}) }}">Music</a></li>
                                <li><a href="{{ path('group_list', {'category': 'dance'}) }}">Dance</a></li>
                                <li><a href="{{ path('group_list', {'category': 'food'}) }}">Food</a></li>
                                <li><a href="{{ path('group_list', {'category': 'art'}) }}">Art</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
                <!-- Main Content -->
                <div class="col-lg-9 col-md-8 col-sm-12">
                    <div class="heading_container heading_center">
                        <h2>{{ group.name }}</h2>
                    </div>
                    {% for message in app.flashes('success') %}
                        <div class="alert alert-success">{{ message }}</div>
                    {% endfor %}
                    <nav class="group-nav-bar">
                        <ul class="nav flex-row align-items-center justify-content-between">
                            <div class="d-flex">
                                <li class="nav-item">
                                    <a class="nav-link active" href="{{ path('group_view', {'id': group.id}) }}"><i class="fas fa-info-circle"></i> Details</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link view-posts-btn" href="{{ path('group_posts', {'id': group.id}) }}"><i class="fas fa-comment"></i> Posts</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link discussion-btn" href="{{ path('group_discussion', {'id': group.id}) }}"><i class="fas fa-comments"></i> Discussions</a>
                                </li>
                            </div>
                            <li class="nav-item">
                                <a href="{{ path('group_invite', {'id': group.id}) }}" class="nav-link btn btn-primary invite-btn">
                                    <i class="fas fa-envelope" aria-hidden="true"></i> Send Invitation
                                </a>
                            </li>
                        </ul>
                    </nav>
                    <div class="group-card">
                        <div class="group-card-header">
                            {% if base64Image %}
                                <img src="data:image/jpeg;base64,{{ base64Image }}" alt="{{ group.name }}" class="group-banner" style="min-width: 100px; min-height: 100px; object-fit: cover;" />
                                {% if weatherData %}
                                    <div class="weather-forecast-card">
                                        <h4>Weather Forecast</h4>
                                        {% for forecast in weatherData.daily %}
                                            <div class="forecast-day">
                                                <p class="forecast-date">{{ forecast.date }}: <strong>{{ forecast.temp }}Â°C</strong>, {{ forecast.description }}</p>
                                            </div>
                                        {% endfor %}
                                 </div>
                                {% endif %}
                            {% else %}
                                <div class="group-banner placeholder" style="min-width: 100px; min-height: 100px; background-color: #ccc; display: flex; align-items: center; justify-content: center;">
                                    No Image Available
                             </div>
                            {% endif %}
                        </div>
                        <div class="group-card-body">
                            <div class="group-details">
                                <h4 class="group-title">{{ group.name }}</h4>
                                <p class="group-description">{{ group.description|default('No description provided') }}</p>
                                <p class="group-meta">
                                    Location: {{ group.location|default('Not specified') }} | 
                                    Date: {{ group.eventDate ? group.eventDate|date('Y-m-d H:i') : 'TBD' }} | 
                                    Max: {{ group.maxParticipants|default('Unlimited') }} | 
                                    {{ group.visibility|capitalize }}
                                </p>
                                <p class="group-type">Type: {{ group.groupType ? group.groupType.type : 'Not specified' }}</p>
                            </div>
                            <div class="group-actions d-flex justify-content-end">
                                <a href="{{ path('group_edit', {'id': group.id}) }}" class="action-btn btn btn-secondary mr-2">Edit</a>
                                <form action="{{ path('group_delete', {'id': group.id}) }}" method="post" style="display:inline;">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ group.id) }}">
                                    <button type="submit" class="action-btn btn btn-danger" onclick="return confirm('Are you sure?')">Delete</button>
                                </form>
                            </div>
                        </div>
                    </div>

                    <!-- Discussions -->
                    <div class="discussions-section mt-4">
                        <h3>Discussions</h3>
                        {% if discussions %}
                            <div class="row">
                                {% for discussion in discussions %}
                                    <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
                                        <div class="discussion-card">
                                            <p class="discussion-content">{{ discussion.content|length > 50 ? discussion.content|slice(0, 50) ~ '...' : discussion.content }}</p>
                                            <p class="discussion-meta">
                                                Posted by {{ discussion.author ? discussion.author.email : 'Anonymous' }} on {{ discussion.createdAt|date('Y-m-d H:i') }}
                                            </p>
                                            <div class="discussion-actions d-flex justify-content-end">
                                                <a href="{{ path('discussion_edit', {'id': discussion.id}) }}" class="action-btn btn btn-secondary mr-2">Update</a>
                                                <form action="{{ path('discussion_delete', {'id': discussion.id}) }}" method="post" style="display:inline;">
                                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ discussion.id) }}">
                                                    <button type="submit" class="action-btn btn btn-danger" onclick="return confirm('Are you sure you want to delete this discussion?')">Delete</button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                        {% else %}
                            <p class="no-discussions">No discussions yet.</p>
                        {% endif %}
                    </div>

                    <!-- Related Groups -->
                    <div class="related-groups-section mt-4">
                        <h3>Related Groups in {{ group.location }}</h3>
                        {% if relatedGroups|length > 0 %}
                            <div class="row">
                                {% for relatedGroup in relatedGroups %}
                                    {% if relatedGroup.id != group.id %}
                                        <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
                                            <div class="related-group-card">
                                                <div class="related-group-content">
                                                    <h4 class="group-title">{{ relatedGroup.name }}</h4>
                                                    <p class="group-description">{{ relatedGroup.description|length > 50 ? relatedGroup.description|slice(0, 50) ~ '...' : relatedGroup.description|default('No description provided') }}</p>
                                                    <p class="group-meta">Date: {{ relatedGroup.eventDate ? relatedGroup.eventDate|date('Y-m-d H:i') : 'TBD' }}</p>
                                                </div>
                                                <div class="group-actions d-flex justify-content-start">
                                                    <a href="{{ path('group_view', {'id': relatedGroup.id}) }}" class="action-btn btn btn-info mr-2">Details</a>
                                                    <form action="{{ path('group_delete', {'id': relatedGroup.id}) }}" method="post" style="display:inline;">
                                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ relatedGroup.id) }}">
                                                        <button type="submit" class="action-btn btn btn-danger" onclick="return confirm('Are you sure you want to delete this group?')">Delete</button>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    {% endif %}
                                {% endfor %}
                            </div>
                        {% else %}
                            <p>No related groups found.</p>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Info Section -->
    <section class="info_section layout_padding2">
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-lg-3 info_col">
                    <div class="info_contact">
                        <h4>Contact Us</h4>
                        <div class="contact_link_box">
                            <a href="">
                                <i class="fa fa-map-marker" aria-hidden="true"></i>
                                <span>Global Events</span>
                            </a>
                            <a href="">
                                <i class="fa fa-phone" aria-hidden="true"></i>
                                <span>Call: +01 123455678990</span>
                            </a>
                            <a href="">
                                <i class="fa fa-envelope" aria-hidden="true"></i>
                                <span>support@cultureconnect.com</span>
                            </a>
                        </div>
                    </div>
                    <div class="info_social">
                        <a href=""><i class="fa fa-facebook" aria-hidden="true"></i></a>
                        <a href=""><i class="fa fa-twitter" aria-hidden="true"></i></a>
                        <a href=""><i class="fa fa-linkedin" aria-hidden="true"></i></a>
                        <a href=""><i class="fa fa-instagram" aria-hidden="true"></i></a>
                    </div>
                </div>
                <div class="col-md-6 col-lg-3 info_col">
                    <div class="info_detail">
                        <h4>About Culture Connect</h4>
                        <p>Connecting people through cultural events worldwide.</p>
                    </div>
                </div>
                <div class="col-md-6 col-lg-2 mx-auto info_col">
                    <div class="info_link_box">
                        <h4>Links</h4>
                        <div class="info_links">
                            <a class="active" href="{{ path('group_list') }}">
                                <img src="{{ asset('images/nav-bullet.png') }}" alt=""> Events
                            </a>
                            <a href="">
                                <img src="{{ asset('images/nav-bullet.png') }}" alt=""> About
                            </a>
                            <a href="">
                                <img src="{{ asset('images/nav-bullet.png') }}" alt=""> Services
                            </a>
                            <a href="">
                                <img src="{{ asset('images/nav-bullet.png') }}" alt=""> Contact Us
                            </a>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 col-lg-3 info_col">
                    <h4>Subscribe</h4>
                    <form action="#">
                        <input type="text" placeholder="Enter email" class="form-control" required />
                        <button type="submit" class="btn btn-primary">Subscribe</button>
                    </form>
                </div>
            </div>
        </div>
    </section>

    <!-- Footer Section -->
    <footer class="footer_section">
        <div class="container">
            <div class="row">
                <div class="col-12 text-center">
                    <p>
                        Â© {{ "now"|date("Y") }} All Rights Reserved By
                        <a href="https://cultureconnect.com/">Culture Connect</a>
                    </p>
                    <div class="footer-links">
                        <a href="">Privacy Policy</a> | <a href="">Terms of Service</a>
                    </div>
                    <div class="footer-social">
                        <a href=""><i class="fa fa-facebook" aria-hidden="true"></i></a>
                        <a href=""><i class="fa fa-twitter" aria-hidden="true"></i></a>
                        <a href=""><i class="fa fa-linkedin" aria-hidden="true"></i></a>
                        <a href=""><i class="fa fa-instagram" aria-hidden="true"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </footer>
{% endblock %}