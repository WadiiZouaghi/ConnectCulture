{% extends 'base.html.twig' %}

{% block title %}
    Culture Connect - {{ group.name }}
{% endblock %}

{% block body %}
    <!-- Header Section -->
    <div class="hero_area">
        <header class="header_section">
            <!-- Top Contact Bar -->
            <div class="header_top">
                <div class="container-fluid">
                    <div class="contact_nav d-flex justify-content-center">
                        <a href="tel:+01123455678990" class="contact-link mx-3" aria-label="Phone number">
                            <i class="fa fa-phone" aria-hidden="true"></i>
                            <span>Call: +01 123455678990</span>
                        </a>
                        <a href="mailto:support@cultureconnect.com" class="contact-link mx-3" aria-label="Email address">
                            <i class="fa fa-envelope" aria-hidden="true"></i>
                            <span>Email: support@cultureconnect.com</span>
                        </a>
                        <a href="#" class="contact-link mx-3" aria-label="Global events">
                            <i class="fa fa-map-marker" aria-hidden="true"></i>
                            <span>Global Events</span>
                        </a>
                    </div>
                </div>
            </div>
            <!-- Navigation Bar -->
            <div class="header_bottom">
                <div class="container-fluid">
                    <nav class="navbar navbar-expand-lg custom_nav-container">
                        <a class="navbar-brand" href="{{ path('group_list') }}">
                            <span>Culture Connect</span>
                        </a>
                        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="s-1"></span>
                            <span class="s-2"></span>
                            <span class="s-3"></span>
                        </button>
                        <div class="collapse navbar-collapse" id="navbarSupportedContent">
                            <ul class="navbar-nav mr-auto">
                                <li class="nav-item active">
                                    <a class="nav-link" href="{{ path('group_list') }}">Events <span class="sr-only">(current)</span></a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="#">Services</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="#">About</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="#">Contact Us</a>
                                </li>
                            </ul>
                            <form class="form-inline my-2 my-lg-0" method="GET" action="{{ path('group_list') }}">
                                <input type="text" name="q" value="{{ searchQuery|default('') }}" class="form-control mr-2" placeholder="Search events" aria-label="Search events">
                                <button class="btn my-2 my-sm-0 nav_search-btn" type="submit" aria-label="Search">
                                    <i class="fa fa-search" aria-hidden="true"></i>
                                </button>
                            </form>
                        </div>
                    </nav>
                </div>
            </div>
        </header>
    </div>

    <!-- Group View Section -->
    <section class="event-group-view-section layout_padding-top py-5">
        <div class="container-fluid">
            <div class="row">
                <!-- Sidebar -->
                <div class="col-lg-3 col-md-4 col-sm-12 mb-4">
                    <div class="sidebar bg-light p-4 rounded shadow-sm">
                        <!-- Quick Navigation -->
                        <div class="sidebar-section mb-4">
                            <h3 class="mb-3">Navigation</h3>
                            <ul class="sidebar-nav list-unstyled">
                                <li class="mb-2">
                                    <a href="{{ path('group_create') }}" class="text-primary">
                                        <i class="fas fa-plus-circle mr-2"></i> Create New Event
                                    </a>
                                </li>
                                <li class="mb-2">
                                    <a href="#my-events" class="text-primary">
                                        <i class="fas fa-calendar-check mr-2"></i> My Events
                                    </a>
                                </li>
                                <li class="mb-2">
                                    <a href="#invitations" class="text-primary">
                                        <i class="fas fa-envelope mr-2"></i> Invitations
                                    </a>
                                </li>
                            </ul>
                        </div>
                        <!-- Categories -->
                        <div class="sidebar-section">
                            <h4 class="mb-3">Categories</h4>
                            <ul class="sidebar-categories list-unstyled">
                                <li class="mb-2"><a href="{{ path('group_list', {'category': 'music'}) }}" class="text-primary">Music</a></li>
                                <li class="mb-2"><a href="{{ path('group_list', {'category': 'dance'}) }}" class="text-primary">Dance</a></li>
                                <li class="mb-2"><a href="{{ path('group_list', {'category': 'food'}) }}" class="text-primary">Food</a></li>
                                <li class="mb-2"><a href="{{ path('group_list', {'category': 'art'}) }}" class="text-primary">Art</a></li>
                            </ul>
                        </div>
                    </div>
                </div>

                <!-- Main Content -->
                <div class="col-lg-9 col-md-8 col-sm-12">
                    <!-- Page Title -->
                    <div class="heading_container heading_center mb-5">
                        <h2 class="text-dark font-weight-bold">{{ group.name }}</h2>
                    </div>

                    <!-- Flash Messages -->
                    {% for message in app.flashes('success') %}
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            {{ message }}
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">×</span>
                            </button>
                        </div>
                    {% endfor %}

                    <!-- Group Navigation Tabs -->
                    <nav class="group-nav-bar mb-4">
                        <ul class="nav flex-row align-items-center justify-content-between bg-light p-2 rounded">
                            <div class="d-flex">
                                <li class="nav-item">
                                    <a class="nav-link active text-primary" href="{{ path('group_view', {'id': group.id}) }}" aria-current="{% if app.request.attributes.get('_route') == 'group_view' %}page{% else %}false{% endif %}">
                                        <i class="fas fa-info-circle mr-1"></i> Details
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-primary view-posts-btn" href="{{ path('group_posts', {'id': group.id}) }}" aria-current="{% if app.request.attributes.get('_route') == 'group_posts' %}page{% else %}false{% endif %}">
                                        <i class="fas fa-file-alt mr-1"></i> Posts
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-primary discussion-btn" href="{{ path('group_discussion', {'id': group.id}) }}" aria-current="{% if app.request.attributes.get('_route') == 'group_discussion' %}page{% else %}false{% endif %}">
                                        <i class="fas fa-comments mr-1"></i> Discussions
                                    </a>
                                </li>
                            </div>
                            <li class="nav-item">
                                <a href="{{ path('group_invite', {'id': group.id}) }}" class="nav-link btn btn-primary invite-btn" aria-label="Send Invitation">
                                    <i class="fas fa-envelope mr-1" aria-hidden="true"></i> Send Invitation
                                </a>
                            </li>
                        </ul>
                    </nav>

                    <!-- Group Details Card -->
                    <div class="group-card bg-white p-4 rounded shadow-sm">
                        <!-- Group Banner and Weather -->
                        <div class="group-card-header position-relative mb-4">
                            {% if imageData %}
                                <img src="data:{{ imageData.type }};base64,{{ imageData.data }}" alt="{{ group.name }}" class="group-banner img-fluid rounded" />
                            {% else %}
                                <img src="{{ asset('images/default-cover.jpg') }}" alt="Default Cover" class="group-banner img-fluid rounded" />
                            {% endif %}

                            <!-- Weather Forecast Overlay -->
                            {% if weatherData %}
                                <div class="weather-forecast-card position-absolute">
                                    <h4 class="weather-card-title">Weather Forecast</h4>
                                    {% set forecast = weatherData.daily|first %} {# Display only the first forecast entry #}
                                    {% if forecast %}
                                        <p class="forecast-date">
                                            {{ forecast.date|date('Y-m-d H:i') }}: 
                                            <strong>{{ forecast.temp }}°C</strong>, 
                                            {{ forecast.description|capitalize }}
                                        </p>
                                    {% endif %}
                                </div>
                            {% elseif weatherErrorMessage %}
                                <div class="weather-error-card position-absolute">
                                    <p class="weather-error-message">{{ weatherErrorMessage }}</p>
                                </div>
                            {% endif %}
                        </div>

                        <!-- Group Details -->
                        <div class="group-card-body">
                            <div class="group-details">
                                <h4 class="group-title text-dark mb-3">{{ group.name }}</h4>
                                <p class="group-description text-muted">{{ group.description|default('No description provided') }}</p>
                                <p class="group-meta text-secondary">
                                    <strong>Location:</strong> {{ group.location|default('Not specified') }} | 
                                    <strong>Date:</strong> {{ group.eventDate ? group.eventDate|date('Y-m-d H:i') : 'TBD' }} | 
                                    <strong>Max Participants:</strong> {{ group.maxParticipants|default('Unlimited') }} | 
                                    <strong>Visibility:</strong> {{ group.visibility|capitalize }}
                                </p>
                                <p class="group-type text-secondary">
                                    <strong>Type:</strong> {{ group.groupType ? group.groupType.type : 'Not specified' }}
                                </p>
                            </div>
                            <!-- Group Actions -->
                            <div class="group-actions d-flex justify-content-end mt-3">
                                <a href="{{ path('group_edit', {'id': group.id}) }}" class="action-btn btn btn-secondary mr-2" aria-label="Edit group">Edit</a>
                                <form action="{{ path('group_delete', {'id': group.id}) }}" method="post" style="display:inline;">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ group.id) }}">
                                    <button type="submit" class="action-btn btn btn-danger" onclick="return confirm('Are you sure you want to delete this group?')" aria-label="Delete group">Delete</button>
                                </form>
                            </div>
                        </div>
                    </div>

                    <!-- Discussions Section -->
                    <div class="discussions-section mt-5">
                        <h3 class="text-dark mb-4">Discussions</h3>
                        {% if discussions %}
                            <div class="row">
                                {% for discussion in discussions %}
                                    <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
                                        <div class="discussion-card bg-white p-3 rounded shadow-sm">
                                            <p class="discussion-content text-muted">
                                                {{ discussion.content|length > 50 ? discussion.content|slice(0, 50) ~ '...' : discussion.content }}
                                            </p>
                                            <p class="discussion-meta text-secondary mb-0">
                                                Posted by {{ discussion.author ? discussion.author.email : 'Anonymous' }} on {{ discussion.createdAt|date('Y-m-d H:i') }}
                                            </p>
                                            <div class="discussion-actions d-flex justify-content-end mt-2">
                                                <a href="{{ path('discussion_edit', {'id': discussion.id}) }}" class="action-btn btn btn-secondary btn-sm mr-2" aria-label="Edit discussion">Update</a>
                                                <form action="{{ path('discussion_delete', {'id': discussion.id}) }}" method="post" style="display:inline;">
                                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ discussion.id) }}">
                                                    <button type="submit" class="action-btn btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this discussion?')" aria-label="Delete discussion">Delete</button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                        {% else %}
                            <p class="no-discussions text-muted">No discussions yet.</p>
                        {% endif %}
                    </div>

                    <!-- Related Groups Section -->
                    <div class="related-groups-section mt-5">
                        <h3 class="text-dark mb-4">Related Groups in {{ group.location|default('the Area') }}</h3>
                        {% if relatedGroups|length > 0 %}
                            <div class="row">
                                {% for relatedGroup in relatedGroups %}
                                    {% if relatedGroup.id != group.id %}
                                        <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
                                            <div class="related-group-card bg-white p-3 rounded shadow-sm">
                                                <div class="related-group-content">
                                                    <h4 class="group-title text-dark mb-2">{{ relatedGroup.name }}</h4>
                                                    <p class="group-description text-muted">
                                                        {{ relatedGroup.description|length > 50 ? relatedGroup.description|slice(0, 50) ~ '...' : relatedGroup.description|default('No description provided') }}
                                                    </p>
                                                    <p class="group-meta text-secondary mb-0">
                                                        <strong>Date:</strong> {{ relatedGroup.eventDate ? relatedGroup.eventDate|date('Y-m-d H:i') : 'TBD' }}
                                                    </p>
                                                </div>
                                                <div class="group-actions d-flex justify-content-start mt-3">
                                                    <a href="{{ path('group_view', {'id': relatedGroup.id}) }}" class="action-btn btn btn-info btn-sm mr-2" aria-label="View related group details">Details</a>
                                                    <form action="{{ path('group_delete', {'id': relatedGroup.id}) }}" method="post" style="display:inline;">
                                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ relatedGroup.id) }}">
                                                        <button type="submit" class="action-btn btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this group?')" aria-label="Delete related group">Delete</button>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    {% endif %}
                                {% endfor %}
                            </div>
                        {% else %}
                            <p class="text-muted">No related groups found.</p>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Info Section -->
    <section class="info_section layout_padding2 py-5">
        <div class="container">
            <div class="row">
                <!-- Contact Info -->
                <div class="col-md-6 col-lg-3 info_col mb-4">
                    <div class="info_contact">
                        <h4 class="mb-3">Contact Us</h4>
                        <div class="contact_link_box">
                            <a href="#" class="d-flex align-items-center mb-2" aria-label="Global events">
                                <i class="fa fa-map-marker mr-2" aria-hidden="true"></i>
                                <span>Global Events</span>
                            </a>
                            <a href="tel:+01123455678990" class="d-flex align-items-center mb-2" aria-label="Phone number">
                                <i class="fa fa-phone mr-2" aria-hidden="true"></i>
                                <span>Call: +01 123455678990</span>
                            </a>
                            <a href="mailto:support@cultureconnect.com" class="d-flex align-items-center" aria-label="Email address">
                                <i class="fa fa-envelope mr-2" aria-hidden="true"></i>
                                <span>support@cultureconnect.com</span>
                            </a>
                        </div>
                    </div>
                    <div class="info_social mt-3">
                        <a href="#" class="mx-2" aria-label="Facebook"><i class="fab fa-facebook-f" aria-hidden="true"></i></a>
                        <a href="#" class="mx-2" aria-label="Twitter"><i class="fab fa-twitter" aria-hidden="true"></i></a>
                        <a href="#" class="mx-2" aria-label="LinkedIn"><i class="fab fa-linkedin-in" aria-hidden="true"></i></a>
                        <a href="#" class="mx-2" aria-label="Instagram"><i class="fab fa-instagram" aria-hidden="true"></i></a>
                    </div>
                </div>
                <!-- About Culture Connect -->
                <div class="col-md-6 col-lg-3 info_col mb-4">
                    <div class="info_detail">
                        <h4 class="mb-3">About Culture Connect</h4>
                        <p>Connecting people through cultural events worldwide.</p>
                    </div>
                </div>
                <!-- Quick Links -->
                <div class="col-md-6 col-lg-2 mx-auto info_col mb-4">
                    <div class="info_link_box">
                        <h4 class="mb-3">Links</h4>
                        <div class="info_links">
                            <a class="d-flex align-items-center mb-2 active" href="{{ path('group_list') }}">
                                <img src="{{ asset('images/nav-bullet.png') }}" alt="Bullet" class="mr-2"> Events
                            </a>
                            <a class="d-flex align-items-center mb-2" href="#">
                                <img src="{{ asset('images/nav-bullet.png') }}" alt="Bullet" class="mr-2"> About
                            </a>
                            <a class="d-flex align-items-center mb-2" href="#">
                                <img src="{{ asset('images/nav-bullet.png') }}" alt="Bullet" class="mr-2"> Services
                            </a>
                            <a class="d-flex align-items-center" href="#">
                                <img src="{{ asset('images/nav-bullet.png') }}" alt="Bullet" class="mr-2"> Contact Us
                            </a>
                        </div>
                    </div>
                </div>
                <!-- Newsletter Subscription -->
                <div class="col-md-6 col-lg-3 info_col mb-4">
                    <h4 class="mb-3">Subscribe</h4>
                    <form action="#" class="form-inline">
                        <input type="email" placeholder="Enter email" class="form-control w-100 mb-2" required aria-label="Email for subscription" />
                        <button type="submit" class="btn btn-primary w-100">Subscribe</button>
                    </form>
                </div>
            </div>
        </div>
    </section>

    <!-- Footer Section -->
    <footer class="footer_section py-4">
        <div class="container">
            <div class="row">
                <div class="col-12 text-center">
                    <p class="mb-2">
                        © {{ "now"|date("Y") }} All Rights Reserved By
                        <a href="https://cultureconnect.com/">Culture Connect</a>
                    </p>
                    <div class="footer-links mb-2">
                        <a href="#" class="mx-2">Privacy Policy</a> | 
                        <a href="#" class="mx-2">Terms of Service</a>
                    </div>
                    <div class="footer-social">
                        <a href="#" class="mx-2" aria-label="Facebook"><i class="fab fa-facebook-f" aria-hidden="true"></i></a>
                        <a href="#" class="mx-2" aria-label="Twitter"><i class="fab fa-twitter" aria-hidden="true"></i></a>
                        <a href="#" class="mx-2" aria-label="LinkedIn"><i class="fab fa-linkedin-in" aria-hidden="true"></i></a>
                        <a href="#" class="mx-2" aria-label="Instagram"><i class="fab fa-instagram" aria-hidden="true"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </footer>
{% endblock %}