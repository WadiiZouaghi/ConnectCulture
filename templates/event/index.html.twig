{% extends 'baseA.html.twig' %}

{% block title %}Events{% endblock %}

{% block body %}
<section class="events-section">
    <!-- System Info Bar -->
    <div class="system-info-bar">
        <div class="system-info-item">
            Current Date and Time (UTC - YYYY-MM-DD HH:MM:SS formatted): {{ "now"|date("Y-m-d H:i:s") }}
        </div>
        {% if app.user %}
        <div class="system-info-item">
            Current User's Login: {{ app.user.userIdentifier }}
        </div>
        {% endif %}
    </div>

    <div class="events-container">
        <!-- Events Header -->
        <div class="events-header">
            <div class="heading_container">
                <h2>Event <span>List</span></h2>
            </div>
            <a href="{{ path('app_event_new') }}" class="action-btn create-btn header-create-btn">
                <i class="fa fa-plus"></i>
                Create New Event
            </a>
        </div>

        <!-- Events Grid -->
        <div class="events-grid">
            {% if events is empty %}
                <div class="no-events">
                    <i class="fa fa-calendar-times-o"></i>
                    <h3>No Events Found</h3>
                    <p>Start by creating your first event</p>
                    <a href="{{ path('app_event_new') }}" class="action-btn create-btn header-create-btn">
                        <i class="fa fa-plus"></i>
                        Create New Event
                    </a>
                </div>
            {% endif %}

            {% for event in events %}
                <div class="event-card">
                    <div class="img-box">
                        {% if event.image %}
                            <img src="{{ asset('uploads/images/' ~ event.image) }}" alt="{{ event.name }}">
                            <div class="img-overlay">
                                <i class="fa fa-search-plus"></i>
                            </div>
                        {% else %}
                            <div class="no-image">
                                <i class="fa fa-picture-o"></i>
                                <span>No image available</span>
                            </div>
                        {% endif %}
                        <div class="event-type-badge">{{ event.eventtype }}</div>
                    </div>

                    <div class="event-content">
                        <div class="event-info">
                            <div class="info-item">
                                <i class="fa fa-font"></i>
                                <div class="info-content">
                                    <label>Event Name</label>
                                    <p>{{ event.name }}</p>
                                </div>
                            </div>
                            
                            <div class="info-item">
                                <i class="fa fa-map-marker"></i>
                                <div class="info-content">
                                    <label>Destination</label>
                                    <p>{{ event.destination }}</p>
                                </div>
                            </div>
                            
                            <div class="info-item">
                                <i class="fa fa-align-left"></i>
                                <div class="info-content">
                                    <label>Description</label>
                                    <p class="description">{{ event.Description }}</p>
                                </div>
                            </div>
                            
                            <div class="info-item">
                                <i class="fa fa-list"></i>
                                <div class="info-content">
                                    <label>Required Equipment</label>
                                    <p>{{ event.equipment }}</p>
                                </div>
                            </div>
                        </div>

                        <div class="event-actions">
                            <a href="{{ path('app_event_show', {'id': event.id}) }}" class="action-btn view-btn">
                                <i class="fa fa-eye"></i>
                                View
                            </a>
                            <a href="{{ path('app_event_edit', {'id': event.id}) }}" class="action-btn edit-btn">
                                <i class="fa fa-pencil"></i>
                                Edit
                            </a>
                            <a href="#" onclick="event.preventDefault(); if(confirm('Are you sure you want to delete this event?')) document.getElementById('delete-form-{{ event.id }}').submit();" class="action-btn delete-btn">
                                <i class="fa fa-trash"></i>
                                Delete
                            </a>
                            <form id="delete-form-{{ event.id }}" method="post" action="{{ path('app_event_delete', {'id': event.id}) }}" style="display: none;">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ event.id) }}">
                            </form>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</section>

<style>
/* Reset and Base Styles */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

/* System Info Bar */
.system-info-bar {
    background: #f8f9fa;
    padding: 12px 25px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-bottom: 1px solid rgba(6, 34, 100, 0.1);
}

.system-info-item {
    display: flex;
    align-items: center;
    gap: 8px;
    color: #062264;
    font-size: 0.9rem;
    font-weight: 500;
}

/* Events Section */
.events-section {
    background-color: #f8f9fa;
    min-height: 100vh;
}

.events-container {
    padding: 30px;
    max-width: 1200px;
    margin: 0 auto;
}

/* Events Header */
.events-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 30px;
}

.heading_container h2 {
    font-size: 2rem;
    font-weight: bold;
    color: #062264;
}

.heading_container span {
    color: #4b93d1;
}

/* Events Grid */
.events-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 20px;
}

/* Event Card */
.event-card {
    background: white;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 4px 15px rgba(6, 34, 100, 0.1);
    transition: transform 0.3s ease;
}

.event-card:hover {
    transform: translateY(-5px);
}

/* Image Box */
.img-box {
    position: relative;
    overflow: hidden;
    height: 280px;
    width: 100%;
}

.img-box img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
}

.img-box:hover img {
    transform: scale(1.05);
}

.img-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(6, 34, 100, 0.3);
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: opacity 0.3s ease;
}

.img-box:hover .img-overlay {
    opacity: 1;
}

.img-overlay i {
    color: white;
    font-size: 2rem;
}

.no-image {
    width: 100%;
    height: 280px;
    background: linear-gradient(145deg, #f8f9fa, #e9ecef);
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    color: #062264;
}

.no-image i {
    font-size: 56px;
    margin-bottom: 15px;
}

.event-type-badge {
    position: absolute;
    top: 10px;
    right: 10px;
    background: #062264;
    color: white;
    padding: 8px 18px;
    border-radius: 0;
    font-size: 0.9rem;
    font-weight: 500;
}

/* Event Content */
.event-content {
    padding: 20px;
}


.info-item:hover {
    transform: translateX(5px);
    background: #fff;
    box-shadow: 0 3px 10px rgba(0,0,0,0.05);
}

.info-item i {
    color: #4b93d1;
    font-size: 1.2rem;
    min-width: 20px;
}

.info-content {
    flex: 1;
}

.info-content label {
    color: #062264;
    font-weight: 600;
    font-size: 1rem;
    display: block;
    margin-bottom: 5px;
}

.info-content p {
    color: #062264;
    line-height: 1.6;
    margin: 0;
    font-size: 0.95rem;
}

.description {
    white-space: pre-line;
    max-height: 80px;
    overflow: hidden;
}

/* Action Buttons */
.action-btn {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    padding: 8px 16px;
    border-radius: 0;
    font-size: 0.85rem;
    font-weight: 500;
    text-decoration: none;
    transition: all 0.3s ease;
    border: none;
    cursor: pointer;
    justify-content: center;
    flex: 1;
}

/* Special styling for header create button */
.header-create-btn {
    padding: 6px 12px;
    font-size: 0.8rem;
    max-width: 150px;
    margin-left: auto;
}

.create-btn, .view-btn, .edit-btn, .delete-btn {
    background-color: #4b93d1;
    color: white;
}

.action-btn:hover {
    transform: translateY(-2px);
    opacity: 0.9;
    color: white;
    text-decoration: none;
}

.action-btn i {
    font-size: 0.9rem;
}

/* No Events Message */
.no-events {
    grid-column: 1 / -1;
    text-align: center;
    padding: 40px;
    background: white;
    border-radius: 12px;
    box-shadow: 0 4px 15px rgba(6, 34, 100, 0.1);
}

.no-events i {
    font-size: 48px;
    color: #062264;
    margin-bottom: 15px;
}

.no-events h3 {
    color: #062264;
    font-size: 1.6rem;
    margin-bottom: 10px;
}

.no-events p {
    color: #062264;
    font-size: 1rem;
    margin-bottom: 20px;
}

/* Responsive Design */
@media (max-width: 768px) {
    .system-info-bar {
        flex-direction: column;
        gap: 10px;
        text-align: center;
        padding: 10px 15px;
    }

    .events-container {
        padding: 15px;
    }

    .events-header {
        flex-direction: column;
        gap: 20px;
        text-align: center;
    }

    .header-create-btn {
        margin: 0 auto;
    }

    .img-box, .no-image {
        height: 250px;
    }

    .event-actions {
        flex-direction: column;
    }

    .action-btn {
        width: 100%;
    }

    .info-content label {
        font-size: 0.95rem;
    }

    .info-content p {
        font-size: 0.9rem;
    }

    .event-type-badge {
        padding: 6px 15px;
        font-size: 0.85rem;
    }
}
</style>
{% endblock %}