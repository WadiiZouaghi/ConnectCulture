{% extends 'base.html.twig' %}

{% block title %}Event Details{% endblock %}

{% block body %}
<section class="about_section layout_padding">

    <!-- Event Header -->
    <div class="event-header">
        <div class="heading_container">
            <h2>Event <span>Details</span></h2>
            <div class="event-type-badge">{{ event.eventtype }}</div>
        </div>
    </div>

    <div class="row">
        <!-- Event Image Column -->
        <div class="col-md-6">
            <div class="img-box">
                {% if event.image %}
                    <img src="{{ asset('uploads/images/' ~ event.image) }}" alt="{{ event.name }}">
                    <div class="img-overlay">
                        <i class="fa fa-search-plus"></i>
                    </div>
                {% else %}
                    <div class="no-image">
                        <i class="fa fa-picture-o"></i>
                        <span>No image available</span>
                    </div>
                {% endif %}
            </div>
        </div>

        <!-- Event Details Column -->
        <div class="col-md-6">
            <div class="detail-box">
                <div class="event-info">
                    <div class="info-item">
                        <i class="fa fa-font"></i>
                        <div class="info-content">
                            <label>Event Name</label>
                            <p>{{ event.name }}</p>
                        </div>
                    </div>
                    
                    <div class="info-item">
                        <i class="fa fa-map-marker"></i>
                        <div class="info-content">
                            <label>Destination</label>
                            <p>{{ event.destination }}</p>
                        </div>
                    </div>
                    
                    <div class="info-item">
                        <i class="fa fa-align-left"></i>
                        <div class="info-content">
                            <label>Description</label>
                            <p class="description">{{ event.Description }}</p>
                        </div>
                    </div>
                    
                    <div class="info-item">
                        <i class="fa fa-list"></i>
                        <div class="info-content">
                            <label>Required Equipment</label>
                            <p>{{ event.equipment }}</p>
                        </div>
                    </div>
                </div>

                <div class="event-actions">
                    <a href="{{ path('app_event_index_User') }}" class="action-btn back-btn">
                        <i class="fa fa-arrow-left"></i>
                        Back to List
                    </a>
                
                </div>
            </div>
        </div>
    </div>
</section>

<style>
/* Reset default margins and paddings */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

/* System Info Bar */
.system-info-bar {
    background: #f8f9fa;
    padding: 10px 30px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-bottom: 1px solid #dee2e6;
}

.system-info-item {
    display: flex;
    align-items: center;
    gap: 8px;
    color: #666666;
    font-size: 0.9rem;
}

.system-info-item i {
    color: #4b93d1;
}

/* Base section styles */
.about_section {
    background-color: #ffffff;
    padding: 0 30px 90px 30px;
    width: 100%;
}

/* Header styles */
.header_section {
    width: 100%;
}

.header_section .header_top,
.header_section .header_bottom,
.info_section,
.footer_section {
    width: 100%;
    padding-left: 0;
    padding-right: 0;
}

.header_section .container-fluid,
.info_section .container,
.footer_section .container {
    width: 100%;
    max-width: none;
    padding: 0;
}

/* Event Header Styles */
.event-header {
    margin: 40px 0;
    text-align: center;
}


.heading_container span {
    color: #4b93d1;
}

.event-type-badge {
    display: inline-block;
    background: #4b93d1;
    color: white;
    padding: 8px 20px;
    border-radius: 25px;
    font-weight: 500;
    margin: 10px 0;
}

/* Image Styles */
.img-box {
    position: relative;
    overflow: hidden;
    border-radius: 15px;
    box-shadow: 0 5px 20px rgba(0,0,0,0.1);
    transition: transform 0.3s ease;
    margin: 0 15px;
}

.img-box:hover {
    transform: translateY(-5px);
}

.img-box img {
    width: 100%;
    height: 400px;
    object-fit: cover;
    transition: transform 0.3s ease;
}

.img-box:hover img {
    transform: scale(1.05);
}

.img-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(6, 34, 100, 0.3);
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: opacity 0.3s ease;
}

.img-box:hover .img-overlay {
    opacity: 1;
}

.img-overlay i {
    color: white;
    font-size: 2rem;
}

.no-image {
    width: 100%;
    height: 400px;
    background: linear-gradient(145deg, #f8f9fa, #e9ecef);
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    color: #6c757d;
}

.no-image i {
    font-size: 48px;
    margin-bottom: 10px;
}

/* Event Info Styles */
.event-info {
    margin: 0 15px 30px 15px;
}



.info-item:hover {
    transform: translateX(5px);
    background: #fff;
    box-shadow: 0 3px 10px rgba(0,0,0,0.05);
}

.info-item i {
    color: #4b93d1;
    font-size: 1.2rem;
    min-width: 20px;
}

.info-content {
    flex: 1;
}

.info-content label {
    font-weight: 600;
    color: #062264;
    display: block;
    margin-bottom: 5px;
}

.info-content p {
    color: #666666;
    line-height: 1.6;
    margin: 0;
}

.description {
    white-space: pre-line;
}

/* Action Buttons */
.event-actions {
    display: flex;
    gap: 15px;
    margin: 30px 15px 0 15px;
}

.action-btn {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 12px 25px;
    border-radius: 8px;
    font-weight: 500;
    text-decoration: none;
    transition: all 0.3s ease;
    border: none;
    cursor: pointer;
}

.edit-btn {
    background-color: #4b93d1;
    color: white;
}

.back-btn {
    background-color: #6c757d;
    color: white;
}

.delete-btn {
    background-color: #dc3545;
    color: white;
}

.action-btn:hover {
    transform: translateY(-2px);
    opacity: 0.9;
    color: white;
    text-decoration: none;
}

/* Layout fixes */
.row {
    margin: 0;
    width: 100%;
    display: flex;
    flex-wrap: wrap;
}

.col-md-6 {
    padding: 0;
}

/* Responsive Design */
@media (max-width: 768px) {
    .system-info-bar {
        flex-direction: column;
        gap: 10px;
        text-align: center;
    }

    .about_section {
        padding: 0 15px 50px 15px;
    }

    .img-box {
        margin-bottom: 30px;
    }

    .img-box img,
    .no-image {
        height: 300px;
    }

    .event-actions {
        flex-direction: column;
    }

    .action-btn {
        width: 100%;
        justify-content: center;
    }

    .info-item:hover {
        transform: none;
    }

    .col-md-6 {
        width: 100%;
    }
}
</style>
{% endblock %}