{% extends 'baseO.html.twig' %}

{% block title %}Historique{% endblock %}

{% block body %}
<section class="about_section layout_padding">
    <div class="event-header">
        <div class="heading_container">
            <h2>Ended <span>Events</span></h2>
        </div>
    </div>

    <div class="row">
        {% for event in events %}
            <div class="col-md-4">
                <div class="event-box">
                    <div class="img-box">
                        {% if event.image %}
                            <img src="{{ asset('uploads/images/' ~ event.image) }}" alt="{{ event.name }}">
                        {% else %}
                            <div class="no-image">
                                <i class="fa fa-picture-o"></i>
                                <span>No image available</span>
                            </div>
                        {% endif %}
                    </div>
                    <div class="detail-box">
                        <h5>{{ event.name }}</h5>
                        <p>{{ event.date ? event.date|date('Y-m-d H:i:s') : 'N/A' }}</p>
                    </div>
                </div>
            </div>
        {% else %}
            <p>No ended events found.</p>
        {% endfor %}
    </div>
</section>

<style>
/* Add your custom styles here */
.event-header {
    margin: 40px 0;
    text-align: center;
}

.heading_container h2 {
    font-size: 2.5rem;
    font-weight: bold;
    color: #062264;
    margin-bottom: 20px;
}

.heading_container span {
    color: #4b93d1;
}

.event-box {
    background: #f8f9fa;
    padding: 15px;
    margin-bottom: 20px;
    border-radius: 8px;
    box-shadow: 0 3px 10px rgba(0,0,0,0.1);
}

.img-box {
    position: relative;
    overflow: hidden;
    border-radius: 8px;
    margin-bottom: 15px;
}

.img-box img {
    width: 100%;
    height: 200px;
    object-fit: cover;
}

.no-image {
    width: 100%;
    height: 200px;
    background: linear-gradient(145deg, #f8f9fa, #e9ecef);
    display: flex;
    align-items: center;
    justify-content: center;
    color: #6c757d;
}

.no-image i {
    font-size: 48px;
    margin-bottom: 10px;
}

.detail-box h5 {
    font-size: 1.5rem;
    font-weight: bold;
    color: #062264;
    margin-bottom: 10px;
}

.detail-box p {
    margin-bottom: 15px;
    color: #666666;
}

.action-btn {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 10px 20px;
    border-radius: 8px;
    background: #4b93d1;
    color: white;
    text-decoration: none;
    transition: all 0.3s ease;
}

.action-btn:hover {
    background: #3a82b3;
}
</style>
{% endblock %}