    }
    
    .footer-info-item i {
        color: var(--light-blue);
        font-size: 16px;
        min-width: 20px;
        text-align: center;
    }

    .footer-menu {
        list-style: none;
        padding: 0;
        margin: 0;
        text-align: left;
    }
    
    .footer-menu li {
        margin-bottom: 12px;
        text-align: left;
    }

    .footer_links a {
        color: var(--white);
        text-decoration: none;
        display: flex;
        align-items: center;
        gap: 10px;
        transition: all 0.3s ease;
        padding: 5px 0;
        text-align: left;
    }

    .footer_links a:hover {
        color: var(--light-blue);
        transform: translateX(5px);
    }
    
    .footer_links a i {
        color: var(--light-blue);
        min-width: 20px;
        text-align: center;
    }

    .footer_contact p {
        margin-bottom: 25px;
        line-height: 1.6;
        color: rgba(255, 255, 255, 0.8);
        text-align: left;
    }

    .social_box {
        display: flex;
        gap: 15px;
        justify-content: flex-start;
    }

    .social_box a {
        color: var(--white);
        font-size: 18px;
        transition: all 0.3s ease;
        background-color: rgba(255, 255, 255, 0.1);
        width: 40px;
        height: 40px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .social_box a:hover {
        color: var(--white);
        background-color: var(--light-blue);
        transform: translateY(-3px);
    }

    .footer_bottom {
        border-top: 1px solid rgba(255,255,255,0.1);
        margin-top: 40px;
        padding-top: 20px;
        text-align: center;
    }
    
    .footer_bottom p {
        margin: 0;
        color: rgba(255, 255, 255, 0.7);
    }

    /* Buttons */
    .btn {
        padding: 8px 20px;
        border-radius: 5px;
        transition: all 0.3s ease;
    }

    .btn-primary {
        background-color: var(--light-blue);
        border-color: var(--light-blue);
        color: var(--white);
    }

    .btn-primary:hover {
        background-color: var(--dark-blue);
        border-color: var(--dark-blue);
        transform: translateY(-2px);
    }

    /* Custom Navbar Toggler */
    .navbar-toggler {
        border-color: var(--dark-blue);
    }

    .navbar-toggler-icon {
        background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' width='30' height='30' viewBox='0 0 30 30'%3e%3cpath stroke='rgba(6, 34, 100, 1)' stroke-linecap='round' stroke-miterlimit='10' stroke-width='2' d='M4 7h22M4 15h22M4 23h22'/%3e%3c/svg%3e");
    }

