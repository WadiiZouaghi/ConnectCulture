            top: 100%;
            left: 0;
            right: 0;
            background-color: var(--white);
            padding: 15px;
            border-radius: 0 0 8px 8px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
            z-index: 1000;
        }
        
        .navbar-nav {
            align-items: flex-start;
        }
        
        .nav-item {
            width: 100%;
            margin: 5px 0;
        }
        
        .dropdown-menu {
            position: static !important;
            box-shadow: none;
            border-radius: 0;
            margin-top: 5px;
            padding: 0;
            width: 100%;
            transform: none !important;
        }
    }
    
    @media (max-width: 768px) {
        .system-info-bar {
            padding: 5px 0;
        }
        
        .info-items {
            justify-content: center;
            gap: 15px;
        }

        .info-item {
            font-size: 12px;
        }
        
        .navbar {
            padding: 10px 0;
        }
        
        .navbar-brand span {
            font-size: 20px;
        }
        
        .footer_section {
            padding: 30px 0 15px;
        }
        
        .footer_section .row > div {
            margin-bottom: 30px;
        }
        
        /* Keep left alignment in footer even on mobile */
        .footer_info h4,
        .footer_links h4,
        .footer_contact h4,
        .footer-info-items,
        .footer-menu,
        .footer-info-item,
        .footer_links a,
        .footer_contact p {
            text-align: left;
        }
        
        .footer_info h4:after,
        .footer_links h4:after,
        .footer_contact h4:after {
            left: 0;
            transform: none;
        }
        
        .social_box {
            justify-content: flex-start;
        }
    }
    
    @media (max-width: 576px) {
        .info-items {
            flex-direction: column;
            gap: 5px;
        }
        
        .navbar-brand span {
            font-size: 18px;
        }
        
        .footer_section {
            padding: 25px 0 10px;
        }
    }
    </style>
</body>
</html>"