<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="keywords" content="" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <link rel="shortcut icon" href="{{ asset('img/favicon.ico') }}" type="image/x-icon">

    <title>{% block title %}Culture Connect{% endblock %}</title>

    <!-- Stylesheets -->
    <link rel="stylesheet" type="text/css" href="{{ asset('css/bootstrap.min.css') }}" />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700;900&display=swap" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.carousel.min.css" />
    <link href="{{ asset('css/font-awesome.min.css') }}" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/@mdi/font@7.2.96/css/materialdesignicons.min.css" rel="stylesheet" />
    <link href="{{ asset('css/style.css') }}" rel="stylesheet" />
    <link href="{{ asset('css/main.css') }}" rel="stylesheet" />

    {% block stylesheets %}{% endblock %}
</head>

<body>
    <header class="header_section">
        <!-- Dark Blue Top Bar -->
        <div class="system-info-bar">
            <div class="container">
                <div class="info-items">
                    <div class="info-item">
                        <i class="fa fa-clock-o" aria-hidden="true"></i>
                        <span class="current-datetime"></span>
                    </div>
                    {% if app.user %}
                    <div class="info-item">
                        <i class="fa fa-user" aria-hidden="true"></i>
                        <span class="current-user">{{ app.user.userIdentifier }}</span>
                    </div>
                    {% endif %}
                </div>
            </div>
        </div>

        <!-- White Navbar -->
        <div class="navbar-container">
            <nav class="navbar navbar-expand-lg custom_nav-container">
                <div class="container">
                    <a class="navbar-brand" href="{{ path('app_home') }}">
                        <span>Culture Connect</span>
                    </a>

                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="collapse navbar-collapse" id="navbarNav">
                        <ul class="navbar-nav mr-auto">
                            <li class="nav-item {% if app.request.get('_route') == 'app_home' %}active{% endif %}">
                                <a class="nav-link" href="{{ path('app_home') }}">
                                    <i class="fa fa-home"></i> Home
                                </a>
                            </li>
                            <li class="nav-item {% if app.request.get('_route') == 'app_event_index_User' %}active{% endif %}">
                                <a class="nav-link" href="{{ path('app_event_index_User') }}">
                                    <i class="fa fa-calendar"></i> Events
                                </a>
                            </li>
                            <li class="nav-item {% if app.request.get('_route') == 'app_group_index_user' %}active{% endif %}">
                                <a class="nav-link" href="{{ path('app_group_index_user') }}">
                                    <i class="fa fa-users"></i> Groups
                                </a>
                            </li>
                        </ul>
                        
                        <ul class="navbar-nav">
                            {% if app.user %}
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        <i class="fa fa-user"></i> {{ app.user.userIdentifier }}
                                    </a>
                                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="userDropdown">
                                        <a class="dropdown-item" href="{{ path('app_profile_User') }}">
                                            <i class="fa fa-user-circle"></i> Profile
                                        </a>
                                        <div class="dropdown-divider"></div>
                                        <a class="dropdown-item" href="{{ path('app_logout') }}">
                                            <i class="fa fa-sign-out"></i> Logout
                                        </a>
                                    </div>
                                </li>
                            {% else %}
                                <li class="nav-item">
                                    <a class="nav-link" href="{{ path('app_login') }}">
                                        <i class="fa fa-sign-in"></i> Login
                                    </a>
                                </li>
                            {% endif %}
                        </ul>
                    </div>
                </div>
            </nav>
        </div>
    </header>
    <main class="main-content">
        {% block hero_content %}{% endblock %}
        {% block body %}{% endblock %}
    </main>

    <footer class="footer_section">
        <div class="container">
            <div class="row">
                <div class="col-md-4 col-sm-6 mb-4">
                    <div class="footer_info">
                        <h4>System Information</h4>
                        <div class="footer-info-items">
                            <div class="footer-info-item">
                                <i class="fa fa-clock-o"></i>
                                <span class="footer-datetime">Current Time (UTC)</span>
                            </div>
                            {% if app.user %}
                            <div class="footer-info-item">
                                <i class="fa fa-user"></i>
                                <span>Logged in as: {{ app.user.userIdentifier }}</span>
                            </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
                <div class="col-md-4 col-sm-6 mb-4">
                    <div class="footer_links">
                        <h4>Quick Links</h4>
                        <ul class="footer-menu">
                            <li><a href="{{ path('app_home') }}"><i class="fa fa-home"></i> Home</a></li>
                            <li><a href="{{ path('app_event_index_User') }}"><i class="fa fa-calendar"></i> Events</a></li>
                            <li><a href="{{ path('app_group_index_user') }}"><i class="fa fa-users"></i> Groups</a></li>
                            {% if app.user %}
                            <li><a href="{{ path('app_profile_User') }}"><i class="fa fa-user-circle"></i> Profile</a></li>
                            {% else %}
                            <li><a href="{{ path('app_login') }}"><i class="fa fa-sign-in"></i> Login</a></li>
                            {% endif %}
                        </ul>
                    </div>
                </div>
                <div class="col-md-4 col-sm-12 mb-4">
                    <div class="footer_contact">
                        <h4>About Us</h4>
                        <p>ConnectCulture is a platform designed to bring people together through cultural events and community groups.</p>
                        <div class="social_box">
                            <a href="#"><i class="fa fa-facebook"></i></a>
                            <a href="#"><i class="fa fa-twitter"></i></a>
                            <a href="#"><i class="fa fa-instagram"></i></a>
                            <a href="#"><i class="fa fa-youtube"></i></a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="footer_bottom">
                <p>&copy; {{ "now"|date("Y") }} Culture Connect. All Rights Reserved</p>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="{{ asset('js/jquery-1.12.1.min.js') }}"></script>
    <script src="{{ asset('js/popper.min.js') }}"></script>
    <script src="{{ asset('js/bootstrap.min.js') }}"></script>
    <script src="{{ asset('js/owl.carousel.min.js') }}"></script>
    <script src="{{ asset('js/custom.js') }}"></script>

    <script>
    function updateDateTime() {
        const now = new Date();
        const dateTimeString = now.getUTCFullYear() + '-' + 
                             String(now.getUTCMonth() + 1).padStart(2, '0') + '-' +
                             String(now.getUTCDate()).padStart(2, '0') + ' ' +
                             String(now.getUTCHours()).padStart(2, '0') + ':' +
                             String(now.getUTCMinutes()).padStart(2, '0') + ':' +
                             String(now.getUTCSeconds()).padStart(2, '0');
        
        // Update header datetime
        document.querySelectorAll('.current-datetime').forEach(element => {
            element.textContent = dateTimeString;
        });
        
        // Update footer datetime
        document.querySelectorAll('.footer-datetime').forEach(element => {
            element.textContent = 'Current Time (UTC): ' + dateTimeString;
        });
    }

    // Initialize datetime and update every second
    updateDateTime();
    setInterval(updateDateTime, 1000);
    
    // Initialize Bootstrap components
    $(document).ready(function() {
        // Initialize dropdowns
        $('.dropdown-toggle').dropdown();
    });
    </script>

    {% block javascripts %}{% endblock %}

    <style>
