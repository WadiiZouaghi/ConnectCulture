{% extends 'baseA.html.twig' %}

{% block title %}Edit Competition{% endblock %}

{% block body %}
<div class="content-wrapper">
    <div class="row">
        <div class="col-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h4 class="card-title">Edit Competition</h4>
                        <div class="d-flex gap-2">
                            <a href="{{ path('admin_competitions') }}" class="action-btn" style="background-color: #6c757d;">
                                <i class="mdi mdi-arrow-left"></i> Back to List
                            </a>
                        </div>
                    </div>

                    {{ form_start(form) }}
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                {{ form_label(form.name) }}
                                {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.name) }}
                            </div>
                            
                            <div class="form-group">
                                {{ form_label(form.startDate) }}
                                {{ form_widget(form.startDate, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.startDate) }}
                            </div>
                            
                            <div class="form-group">
                                {{ form_label(form.endDate) }}
                                {{ form_widget(form.endDate, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.endDate) }}
                            </div>
                        </div>
                        
                        <div class="col-md-6">
                            <div class="form-group">
                                {{ form_label(form.status) }}
                                {{ form_widget(form.status, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.status) }}
                            </div>
                            
                            <div class="form-group">
                                {{ form_label(form.description) }}
                                {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': 5}}) }}
                                {{ form_errors(form.description) }}
                            </div>
                        </div>
                    </div>

                    <div class="mt-4">
                        <button type="submit" class="action-btn">
                            <i class="mdi mdi-content-save"></i> Save Changes
                        </button>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .form-group {
        margin-bottom: 1.5rem;
    }
    
    .form-control {
        border-radius: 0;
        border: 1px solid #e9ecef;
    }
    
    .form-control:focus {
        border-color: #4b93d1;
        box-shadow: none;
    }
    
    label {
        color: #062264;
        font-weight: 500;
        margin-bottom: 0.5rem;
    }
</style>
{% endblock %}