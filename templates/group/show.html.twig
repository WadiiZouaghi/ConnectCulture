{% extends 'baseA.html.twig' %}

{% block title %}Group Details{% endblock %}

{% block body %}
<section class="group-details-section">
    <!-- System Info Bar -->
    <div class="system-info-bar">
        <div class="system-info-item">
            Current Date and Time (UTC - YYYY-MM-DD HH:MM:SS formatted): {{ "now"|date("Y-m-d H:i:s") }}
        </div>
        {% if app.user %}
        <div class="system-info-item">
            Current User's Login: {{ app.user.userIdentifier }}
        </div>
        {% endif %}
    </div>

    <div class="group-details-container">
        <!-- Flash Messages -->
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}
        
        <div class="details-header">
            <div class="heading_container">
                <h2>Group <span>Details</span></h2>
            </div>
            <div class="header-actions">
                <a href="{{ path('app_group_index') }}" class="action-btn back-btn">
                    <i class="fa fa-arrow-left"></i>
                    Back to List
                </a>
                <a href="{{ path('app_group_edit', {'id': group.id}) }}" class="action-btn edit-btn">
                    <i class="fa fa-pencil"></i>
                    Edit
                </a>
            </div>
        </div>

        <div class="details-card">
            <div class="group-header">
                <h3 class="group-name">{{ group.name }}</h3>
                <div class="group-badges">
                    <span class="badge badge-type">{{ group.type }}</span>
                    <span class="badge badge-visibility">{{ group.visibility }}</span>
                </div>
            </div>

            <div class="group-content">
                <!-- Left Side - Group Details -->
                <div class="group-details">
                    <div class="info-section">
                        <h4>Basic Information</h4>
                        <div class="info-grid">
                            <div class="info-item">
                                <i class="fa fa-tag"></i>
                                <div class="info-content">
                                    <label>Category</label>
                                    <p>{{ group.category }}</p>
                                </div>
                            </div>
                            
                            <div class="info-item">
                                <i class="fa fa-map-marker"></i>
                                <div class="info-content">
                                    <label>City</label>
                                    <p>{{ group.city }}</p>
                                </div>
                            </div>
                            
                            <div class="info-item">
                                <i class="fa fa-users"></i>
                                <div class="info-content">
                                    <label>Maximum Size</label>
                                    <p>{{ group.size ?? 'Unlimited' }}</p>
                                </div>
                            </div>
                            
                            <div class="info-item">
                                <i class="fa fa-eye"></i>
                                <div class="info-content">
                                    <label>Visibility</label>
                                    <p>{{ group.visibility }}</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="info-section">
                        <h4>Dates</h4>
                        <div class="info-grid">
                            <div class="info-item">
                                <i class="fa fa-calendar"></i>
                                <div class="info-content">
                                    <label>Start Date</label>
                                    <p>
                                        {% if group.startDate %}
                                            {{ group.startDate|date('Y-m-d') }}
                                        {% else %}
                                            Not specified
                                        {% endif %}
                                    </p>
                                </div>
                            </div>
                            
                            <div class="info-item">
                                <i class="fa fa-calendar-check-o"></i>
                                <div class="info-content">
                                    <label>End Date</label>
                                    <p>
                                        {% if group.endDate %}
                                            {{ group.endDate|date('Y-m-d') }}
                                        {% else %}
                                            Not specified
                                        {% endif %}
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="info-section">
                        <h4>Description</h4>
                        <div class="description-box">
                            <p>{{ group.description }}</p>
                        </div>
                    </div>
                    
                    <div class="group-actions">
                        <a href="{{ path('app_group_edit', {'id': group.id}) }}" class="action-btn edit-btn">
                            <i class="fa fa-pencil"></i>
                            Edit
                        </a>
                        <a href="#" onclick="event.preventDefault(); if(confirm('Are you sure you want to delete this group?')) document.getElementById('delete-form').submit();" class="action-btn delete-btn">
                            <i class="fa fa-trash"></i>
                            Delete
                        </a>
                        <form id="delete-form" method="post" action="{{ path('app_group_delete', {'id': group.id}) }}" style="display: none;">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ group.id) }}">
                        </form>
                    </div>
                </div>
                
                <!-- Right Side - Widgets -->
                <div class="group-widgets">
                    {% if weather %}
                    <div class="widget weather-widget">
                        <div class="widget-header">
                            <i class="fa fa-cloud"></i>
                            <h4>Weather in {{ group.city }}</h4>
                        </div>
                        <div class="widget-content">
                            <div class="weather-main">
                                <img src="{{ weather.icon_url }}" alt="{{ weather.description }}" class="weather-icon-large">
                                <div class="weather-info">
                                    <p class="weather-temp-large">{{ weather.temperature }}Â°C</p>
                                    <p class="weather-desc-large">{{ weather.description|capitalize }}</p>
                                </div>
                            </div>
                            <div class="weather-details-grid">
                                <div class="weather-detail-item">
                                    <i class="fa fa-tint"></i>
                                    <div>
                                        <span>Humidity</span>
                                        <p>{{ weather.humidity }}%</p>
                                    </div>
                                </div>
                                <div class="weather-detail-item">
                                    <i class="fa fa-wind"></i>
                                    <div>
                                        <span>Wind</span>
                                        <p>{{ weather.wind_speed }} m/s</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    {% endif %}
                    
                    <!-- Group Quick Info Widget -->
                    <div class="widget quick-info-widget">
                        <div class="widget-header">
                            <i class="fa fa-info-circle"></i>
                            <h4>Quick Info</h4>
                        </div>
                        <div class="widget-content">
                            <div class="quick-info-item">
                                <i class="fa fa-users"></i>
                                <div>
                                    <span>Size</span>
                                    <p>{{ group.size ?? 'Unlimited' }}</p>
                                </div>
                            </div>
                            <div class="quick-info-item">
                                <i class="fa fa-eye"></i>
                                <div>
                                    <span>Visibility</span>
                                    <p>{{ group.visibility }}</p>
                                </div>
                            </div>
                            <div class="quick-info-item">
                                <i class="fa fa-map-marker"></i>
                                <div>
                                    <span>Location</span>
                                    <p>{{ group.city }}</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Admin Actions Widget -->
                    <div class="widget admin-actions-widget">
                        <div class="widget-header">
                            <i class="fa fa-cog"></i>
                            <h4>Admin Actions</h4>
                        </div>
                        <div class="widget-content">
                            <a href="{{ path('app_group_edit', {'id': group.id}) }}" class="admin-action-btn">
                                <i class="fa fa-pencil"></i>
                                Edit Group
                            </a>
                            <a href="#" onclick="event.preventDefault(); if(confirm('Are you sure you want to delete this group?')) document.getElementById('delete-form').submit();" class="admin-action-btn delete-action">
                                <i class="fa fa-trash"></i>
                                Delete Group
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
/* Reset and Base Styles */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

/* System Info Bar */
.system-info-bar {
    background: #f8f9fa;
    padding: 12px 25px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-bottom: 1px solid rgba(6, 34, 100, 0.1);
}

.system-info-item {
    display: flex;
    align-items: center;
    gap: 8px;
    color: #062264;
    font-size: 0.9rem;
    font-weight: 500;
}

/* Group Details Section */
.group-details-section {
    background-color: #f8f9fa;
    min-height: 100vh;
}

.group-details-container {
    padding: 30px;
    max-width: 1100px;
    margin: 0 auto;
}

/* Group Content Layout */
.group-content {
    display: grid;
    grid-template-columns: 1fr 350px;
    gap: 30px;
}

.group-details {
    display: flex;
    flex-direction: column;
    gap: 25px;
}

.group-widgets {
    display: flex;
    flex-direction: column;
    gap: 20px;
}

/* Details Header */
.details-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 30px;
}

.heading_container h2 {
    font-size: 2rem;
    font-weight: bold;
    color: #062264;
}

.heading_container span {
    color: #4b93d1;
}

.header-actions {
    display: flex;
    gap: 10px;
}

/* Details Card */
.details-card {
    background: white;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 4px 15px rgba(6, 34, 100, 0.1);
    padding: 30px;
}

/* Group Header */
.group-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 30px;
    padding-bottom: 20px;
    border-bottom: 1px solid rgba(6, 34, 100, 0.1);
}

.group-name {
    font-size: 1.8rem;
    color: #062264;
    font-weight: 700;
}

.group-badges {
    display: flex;
    gap: 10px;
}

.badge {
    padding: 8px 15px;
    border-radius: 4px;
    font-size: 0.85rem;
    font-weight: 600;
}

.badge-type {
    background-color: #4b93d1;
    color: white;
}

.badge-visibility {
    background-color: #062264;
    color: white;
}

/* Group Info */
.group-info {
    margin-bottom: 30px;
}

.info-section {
    margin-bottom: 25px;
}

.info-section h4 {
    font-size: 1.2rem;
    color: #062264;
    margin-bottom: 15px;
    font-weight: 600;
}

.info-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    gap: 15px;
}

.info-item {
    display: flex;
    align-items: flex-start;
    gap: 10px;
    padding: 15px;
    border-radius: 8px;
    background-color: #f8f9fa;
    transition: transform 0.3s ease;
}

.info-item:hover {
    transform: translateY(-5px);
    box-shadow: 0 5px 15px rgba(0,0,0,0.05);
}

.info-item i {
    color: #4b93d1;
    font-size: 1.2rem;
    min-width: 20px;
}

.info-content {
    flex: 1;
}

.info-content label {
    color: #062264;
    font-weight: 600;
    font-size: 0.9rem;
    display: block;
    margin-bottom: 5px;
}

.info-content p {
    color: #062264;
    line-height: 1.6;
    margin: 0;
    font-size: 1rem;
}

/* Sidebar Styles */
.details-sidebar {
    display: flex;
    flex-direction: column;
    gap: 20px;
}

.sidebar-widget {
    background-color: white;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 4px 15px rgba(6, 34, 100, 0.1);
}

.widget-header {
    display: flex;
    align-items: center;
    gap: 10px;
    padding: 15px 20px;
    background-color: #f8f9fa;
    border-bottom: 1px solid rgba(6, 34, 100, 0.1);
}

.widget-header i {
    font-size: 18px;
    color: #4b93d1;
}

.widget-header h4 {
    margin: 0;
    font-size: 16px;
    font-weight: 600;
    color: #062264;
}

.widget-content {
    padding: 20px;
}

/* Weather Widget Styles */
.weather-widget {
    background: linear-gradient(to bottom, #f8f9fa, white);
}

.weather-main {
    display: flex;
    align-items: center;
    margin-bottom: 15px;
}

.weather-icon-large {
    width: 80px;
    height: 80px;
}

.weather-info {
    flex: 1;
    padding-left: 10px;
}

.weather-temp-large {
    font-size: 2rem;
    font-weight: 700;
    margin: 0;
    line-height: 1;
    color: #062264;
}

.weather-desc-large {
    font-size: 1.1rem;
    color: #4b93d1;
    margin: 5px 0 0 0;
}

.weather-details-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 15px;
    margin-top: 10px;
}

.weather-detail-item {
    display: flex;
    align-items: center;
    gap: 10px;
    background-color: rgba(75, 147, 209, 0.05);
    padding: 10px;
    border-radius: 8px;
}

.weather-detail-item i {
    font-size: 16px;
    color: #4b93d1;
}

.weather-detail-item span {
    display: block;
    font-size: 12px;
    color: #062264;
    opacity: 0.7;
}

.weather-detail-item p {
    margin: 0;
    font-weight: 600;
    color: #062264;
}

/* Quick Info Widget Styles */
.quick-info-widget .widget-content {
    padding: 10px 20px;
}

.quick-info-item {
    display: flex;
    align-items: center;
    gap: 15px;
    padding: 12px 0;
    border-bottom: 1px solid rgba(6, 34, 100, 0.1);
}

.quick-info-item:last-child {
    border-bottom: none;
}

.quick-info-item i {
    font-size: 18px;
    color: #4b93d1;
    width: 20px;
    text-align: center;
}

.quick-info-item span {
    display: block;
    font-size: 12px;
    color: #062264;
    opacity: 0.7;
    margin-bottom: 2px;
}

.quick-info-item p {
    margin: 0;
    font-weight: 600;
    color: #062264;
}

/* Admin Actions Widget */
.admin-actions-widget .widget-content {
    display: flex;
    flex-direction: column;
    gap: 10px;
}

.admin-action-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    padding: 12px;
    border-radius: 8px;
    background-color: #4b93d1;
    color: white;
    text-decoration: none;
    font-weight: 500;
    transition: all 0.3s ease;
}

.admin-action-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 10px rgba(75, 147, 209, 0.3);
    color: white;
    text-decoration: none;
}

.admin-action-btn.delete-action {
    background-color: #dc3545;
}

.admin-action-btn.delete-action:hover {
    box-shadow: 0 4px 10px rgba(220, 53, 69, 0.3);
}

/* Original Weather Styles (kept for compatibility) */
.weather-item {
    grid-column: span 2;
}

.weather-data {
    display: flex;
    align-items: center;
    margin-top: 5px;
}

.weather-icon {
    width: 60px;
    height: 60px;
    margin-right: 10px;
}

.weather-details {
    flex: 1;
}

.weather-temp {
    font-size: 1.5rem;
    font-weight: 700;
    margin-bottom: 2px !important;
}

.weather-desc {
    font-size: 1rem;
    margin-bottom: 5px !important;
}

.weather-extra {
    font-size: 0.85rem;
    color: #4b93d1;
}

.description-box {
    background-color: #f8f9fa;
    padding: 20px;
    border-radius: 8px;
}

.description-box p {
    color: #062264;
    line-height: 1.8;
    white-space: pre-line;
}

/* Group Actions */
.group-actions {
    display: flex;
    gap: 15px;
    margin-top: 30px;
    padding-top: 20px;
    border-top: 1px solid rgba(6, 34, 100, 0.1);
}

/* Action Buttons */
.action-btn {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    padding: 10px 20px;
    border-radius: 4px;
    font-size: 0.95rem;
    font-weight: 500;
    text-decoration: none;
    transition: all 0.3s ease;
    border: none;
    cursor: pointer;
    justify-content: center;
}

.back-btn {
    background-color: #6c757d;
    color: white;
}

.edit-btn {
    background-color: #4b93d1;
    color: white;
}

.delete-btn {
    background-color: #dc3545;
    color: white;
}

.action-btn:hover {
    transform: translateY(-2px);
    opacity: 0.9;
    color: white;
    text-decoration: none;
}

.action-btn i {
    font-size: 0.9rem;
}

/* Flash Messages */
.alert {
    padding: 15px;
    margin-bottom: 20px;
    border-radius: 8px;
    font-weight: 500;
}

.alert-success {
    background-color: #d4edda;
    color: #155724;
    border: 1px solid #c3e6cb;
}

.alert-info {
    background-color: #d1ecf1;
    color: #0c5460;
    border: 1px solid #bee5eb;
}

.alert-warning {
    background-color: #fff3cd;
    color: #856404;
    border: 1px solid #ffeeba;
}

.alert-danger {
    background-color: #f8d7da;
    color: #721c24;
    border: 1px solid #f5c6cb;
}

/* Responsive Design */
@media (max-width: 768px) {
    .system-info-bar {
        flex-direction: column;
        gap: 10px;
        text-align: center;
        padding: 10px 15px;
    }

    .group-details-container {
        padding: 15px;
    }

    .group-content {
        grid-template-columns: 1fr;
    }

    .details-header {
        flex-direction: column;
        gap: 20px;
        text-align: center;
    }

    .header-actions {
        flex-direction: column;
        width: 100%;
    }

    .header-actions .action-btn {
        width: 100%;
    }

    .group-header {
        flex-direction: column;
        gap: 15px;
        text-align: center;
    }

    .info-grid {
        grid-template-columns: 1fr;
    }

    .group-actions {
        flex-direction: column;
    }

    .group-actions .action-btn {
        width: 100%;
    }
    
    .weather-details-grid {
        grid-template-columns: 1fr;
    }
    
    .admin-action-btn {
        width: 100%;
    }
}
</style>
{% endblock %}