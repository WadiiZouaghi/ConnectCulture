{% extends 'baseA.html.twig' %}

{% block title %}Group Details{% endblock %}

{% block body %}
<section class="group-details-section">
    <!-- System Info Bar -->
    <div class="system-info-bar">
        <div class="system-info-item">
            Current Date and Time (UTC - YYYY-MM-DD HH:MM:SS formatted): {{ "now"|date("Y-m-d H:i:s") }}
        </div>
        {% if app.user %}
        <div class="system-info-item">
            Current User's Login: {{ app.user.userIdentifier }}
        </div>
        {% endif %}
    </div>

    <div class="group-details-container">
        <div class="details-header">
            <div class="heading_container">
                <h2>Group <span>Details</span></h2>
            </div>
            <div class="header-actions">
                <a href="{{ path('app_group_index') }}" class="action-btn back-btn">
                    <i class="fa fa-arrow-left"></i>
                    Back to List
                </a>
                <a href="{{ path('app_group_edit', {'id': group.id}) }}" class="action-btn edit-btn">
                    <i class="fa fa-pencil"></i>
                    Edit
                </a>
            </div>
        </div>

        <div class="details-card">
            <div class="group-header">
                <h3 class="group-name">{{ group.name }}</h3>
                <div class="group-badges">
                    <span class="badge badge-type">{{ group.type }}</span>
                    <span class="badge badge-visibility">{{ group.visibility }}</span>
                </div>
            </div>

            <div class="group-info">
                <div class="info-section">
                    <h4>Basic Information</h4>
                    <div class="info-grid">
                        <div class="info-item">
                            <i class="fa fa-tag"></i>
                            <div class="info-content">
                                <label>Category</label>
                                <p>{{ group.category }}</p>
                            </div>
                        </div>
                        
                        <div class="info-item">
                            <i class="fa fa-map-marker"></i>
                            <div class="info-content">
                                <label>City</label>
                                <p>{{ group.city }}</p>
                            </div>
                        </div>
                        
                        <div class="info-item">
                            <i class="fa fa-users"></i>
                            <div class="info-content">
                                <label>Maximum Size</label>
                                <p>{{ group.size ?? 'Unlimited' }}</p>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="info-section">
                    <h4>Dates</h4>
                    <div class="info-grid">
                        <div class="info-item">
                            <i class="fa fa-calendar"></i>
                            <div class="info-content">
                                <label>Start Date</label>
                                <p>
                                    {% if group.startDate %}
                                        {{ group.startDate|date('Y-m-d') }}
                                    {% else %}
                                        Not specified
                                    {% endif %}
                                </p>
                            </div>
                        </div>
                        
                        <div class="info-item">
                            <i class="fa fa-calendar-check-o"></i>
                            <div class="info-content">
                                <label>End Date</label>
                                <p>
                                    {% if group.endDate %}
                                        {{ group.endDate|date('Y-m-d') }}
                                    {% else %}
                                        Not specified
                                    {% endif %}
                                </p>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="info-section">
                    <h4>Description</h4>
                    <div class="description-box">
                        <p>{{ group.description }}</p>
                    </div>
                </div>
            </div>

            <div class="group-actions">
                <a href="{{ path('app_group_edit', {'id': group.id}) }}" class="action-btn edit-btn">
                    <i class="fa fa-pencil"></i>
                    Edit
                </a>
                <a href="#" onclick="event.preventDefault(); if(confirm('Are you sure you want to delete this group?')) document.getElementById('delete-form').submit();" class="action-btn delete-btn">
                    <i class="fa fa-trash"></i>
                    Delete
                </a>
                <form id="delete-form" method="post" action="{{ path('app_group_delete', {'id': group.id}) }}" style="display: none;">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ group.id) }}">
                </form>
            </div>
        </div>
    </div>
</section>

<style>
/* Reset and Base Styles */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

/* System Info Bar */
.system-info-bar {
    background: #f8f9fa;
    padding: 12px 25px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-bottom: 1px solid rgba(6, 34, 100, 0.1);
}

.system-info-item {
    display: flex;
    align-items: center;
    gap: 8px;
    color: #062264;
    font-size: 0.9rem;
    font-weight: 500;
}

/* Group Details Section */
.group-details-section {
    background-color: #f8f9fa;
    min-height: 100vh;
}

.group-details-container {
    padding: 30px;
    max-width: 900px;
    margin: 0 auto;
}

/* Details Header */
.details-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 30px;
}

.heading_container h2 {
    font-size: 2rem;
    font-weight: bold;
    color: #062264;
}

.heading_container span {
    color: #4b93d1;
}

.header-actions {
    display: flex;
    gap: 10px;
}

/* Details Card */
.details-card {
    background: white;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 4px 15px rgba(6, 34, 100, 0.1);
    padding: 30px;
}

/* Group Header */
.group-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 30px;
    padding-bottom: 20px;
    border-bottom: 1px solid rgba(6, 34, 100, 0.1);
}

.group-name {
    font-size: 1.8rem;
    color: #062264;
    font-weight: 700;
}

.group-badges {
    display: flex;
    gap: 10px;
}

.badge {
    padding: 8px 15px;
    border-radius: 4px;
    font-size: 0.85rem;
    font-weight: 600;
}

.badge-type {
    background-color: #4b93d1;
    color: white;
}

.badge-visibility {
    background-color: #062264;
    color: white;
}

/* Group Info */
.group-info {
    margin-bottom: 30px;
}

.info-section {
    margin-bottom: 25px;
}

.info-section h4 {
    font-size: 1.2rem;
    color: #062264;
    margin-bottom: 15px;
    font-weight: 600;
}

.info-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    gap: 15px;
}

.info-item {
    display: flex;
    align-items: flex-start;
    gap: 10px;
    padding: 15px;
    border-radius: 8px;
    background-color: #f8f9fa;
    transition: transform 0.3s ease;
}

.info-item:hover {
    transform: translateY(-5px);
    box-shadow: 0 5px 15px rgba(0,0,0,0.05);
}

.info-item i {
    color: #4b93d1;
    font-size: 1.2rem;
    min-width: 20px;
}

.info-content {
    flex: 1;
}

.info-content label {
    color: #062264;
    font-weight: 600;
    font-size: 0.9rem;
    display: block;
    margin-bottom: 5px;
}

.info-content p {
    color: #062264;
    line-height: 1.6;
    margin: 0;
    font-size: 1rem;
}

.description-box {
    background-color: #f8f9fa;
    padding: 20px;
    border-radius: 8px;
}

.description-box p {
    color: #062264;
    line-height: 1.8;
    white-space: pre-line;
}

/* Group Actions */
.group-actions {
    display: flex;
    gap: 15px;
    margin-top: 30px;
    padding-top: 20px;
    border-top: 1px solid rgba(6, 34, 100, 0.1);
}

/* Action Buttons */
.action-btn {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    padding: 10px 20px;
    border-radius: 4px;
    font-size: 0.95rem;
    font-weight: 500;
    text-decoration: none;
    transition: all 0.3s ease;
    border: none;
    cursor: pointer;
    justify-content: center;
}

.back-btn {
    background-color: #6c757d;
    color: white;
}

.edit-btn {
    background-color: #4b93d1;
    color: white;
}

.delete-btn {
    background-color: #dc3545;
    color: white;
}

.action-btn:hover {
    transform: translateY(-2px);
    opacity: 0.9;
    color: white;
    text-decoration: none;
}

.action-btn i {
    font-size: 0.9rem;
}

/* Responsive Design */
@media (max-width: 768px) {
    .system-info-bar {
        flex-direction: column;
        gap: 10px;
        text-align: center;
        padding: 10px 15px;
    }

    .group-details-container {
        padding: 15px;
    }

    .details-header {
        flex-direction: column;
        gap: 20px;
        text-align: center;
    }

    .header-actions {
        flex-direction: column;
        width: 100%;
    }

    .header-actions .action-btn {
        width: 100%;
    }

    .group-header {
        flex-direction: column;
        gap: 15px;
        text-align: center;
    }

    .info-grid {
        grid-template-columns: 1fr;
    }

    .group-actions {
        flex-direction: column;
    }

    .group-actions .action-btn {
        width: 100%;
    }
}
</style>
{% endblock %}