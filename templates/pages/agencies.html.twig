    <!-- JavaScript -->
    <script>
        // Fetch agencies from the correct API URL
        fetch('http://127.0.0.1:8000/agency/all')
        .then(response => response.json())
        .then(data => {
            const agenciesList = document.getElementById('agencies-list');
            if (data.length > 0) {
                data.forEach(agency => {
                    // Create a new card for each agency
                    const card = document.createElement('div');
                    card.classList.add('col-md-4', 'mb-4');

                    card.innerHTML = `
                        <div class="card shadow-sm">
                            <div class="card-body">
                                <h5 class="card-title text-primary">${agency.name}</h5>
                                <p class="card-text"><strong>Address:</strong> ${agency.address ? agency.address.description : 'N/A'}</p>
                                <p class="card-text"><strong>Latitude:</strong> ${agency.address && agency.address.latitude ? agency.address.latitude : 'N/A'}</p>
                                <p class="card-text"><strong>Longitude:</strong> ${agency.address && agency.address.longitude ? agency.address.longitude : 'N/A'}</p>
                                <p class="card-text"><strong>Service ID:</strong> ${agency.service_id ? agency.service_id : 'N/A'}</p>
                                <a href="/agency/details/${agency.agency_id}" class="btn btn-primary">View Details</a>
                            </div>
                        </div>
                    `;
                    agenciesList.appendChild(card);
                });
            } else {
                agenciesList.innerHTML = '<p>No agencies found.</p>';
            }
        })
        .catch(error => {
            console.error('Error fetching agencies:', error);
        });


    </script>
