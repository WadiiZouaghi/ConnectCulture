document.getElementById('createServiceForm').addEventListener('submit', function (event) {
    event.preventDefault(); // Prevent the form from submitting normally.

    const formData = new FormData();
    const serviceName = document.getElementById('service_name').value;
    const serviceDescription = document.getElementById('service_description').value;

    // Create the data object to send
    const serviceData = {
        name: serviceName,
        description: serviceDescription,
        equipments: []
    };

    const equipmentItems = document.querySelectorAll('.equipment-item');
    let completedRequests = 0; // Track the number of completed requests (i.e., file uploads)

    equipmentItems.forEach((item, index) => {
        const equipmentName = item.querySelector('input[name^="equipments"][name$="[name]"]').value;
        const equipmentDescription = item.querySelector('textarea[name^="equipments"][name$="[description]"]').value;
        const equipmentImage = item.querySelector('input[type="file"]').files[0];

        const equipmentData = {
            name: equipmentName,
            description: equipmentDescription
        };

        if (equipmentImage) {
            // If there's an image, read it as base64
            const reader = new FileReader();
            reader.onloadend = function () {
                equipmentData.imageName = reader.result.split(',')[1]; // Get base64 image data
                serviceData.equipments.push(equipmentData);

                completedRequests++;
                // Check if all equipment items have been processed
                if (completedRequests === equipmentItems.length) {
                    submitServiceData(serviceData); // Submit the data after all images are processed
                }
            };
            reader.readAsDataURL(equipmentImage);
        } else {
            // If no image, push the equipment data directly
            serviceData.equipments.push(equipmentData);

            completedRequests++;
            // Check if all equipment items have been processed
            if (completedRequests === equipmentItems.length) {
                submitServiceData(serviceData); // Submit the data
            }
        }
    });

    function submitServiceData(data) {
        fetch('/service/create', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
                'Accept': 'application/json',
            },
            body: JSON.stringify(data),
        })
        .then((response) => response.json())
        .then((data) => {
            if (data.error) {
                alert(data.error);
            } else {
                alert('Service created successfully');
            }
        })
        .catch((error) => {
            console.error('Error:', error);
            alert('Something went wrong.');
        });
    }
});


     
