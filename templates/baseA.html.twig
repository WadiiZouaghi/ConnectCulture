    {% block stylesheets %}{% endblock %}

    <style>
    /* Pagination Container */
    .pagination-container {
        margin-top: 20px;
        text-align: center; /* Ensures the pagination is centered */
    }

    /* Pagination List */
    body .pagination-container .pagination {
        display: inline-flex;
        list-style: none;
        padding: 0;
        margin: 0;
    }

    /* Pagination List Items */
    .pagination-container .pagination li {
        margin: 0 5px;
    }

    /* Links and Button Styles */
    .pagination-container .pagination li a,
    .pagination-container .pagination li span {
        padding: 8px 14px;
        font-size: 0.9rem;
        background-color: #007bff;
        color: white;
        border-radius: 5px;
        text-decoration: none;
        display: inline-block;
    }

    /* Hover Effect */
    .pagination-container .pagination li a:hover {
        background-color: #0056b3;
    }

    /* Disabled Pagination Items */
    .pagination-container .pagination .disabled a,
    .pagination-container .pagination .disabled span {
        background-color: #e0e0e0;
        color: #a0a0a0;
    }

    /* Active Pagination Item */
    .pagination-container .pagination .active a {
        background-color: #28a745;
        color: white;
    }

    /* Pagination Number Style */
    .pagination-container .pagination li a,
    .pagination-container .pagination li span {
        font-weight: bold;
    }

    .system-info-text {
        font-family: monospace;
        color: #062264;
        font-size: 0.9rem;
        white-space: pre-line;
        padding: 10px;
        background: #f8f9fa;
        border: 1px solid #e9ecef;
        margin: 10px 0;
    }

    .brand-title {
        font-size: 1.5rem;
        font-weight: 600;
        color: #062264;
        text-decoration: none;
        letter-spacing: 0.5px;
    }

    .action-btn {
        background-color: #4b93d1;
        color: white;
        padding: 8px 16px;
        border: none;
        font-size: 0.85rem;
    }

    .action-btn:hover {
        opacity: 0.9;
        color: white;
    }

    .nav-item .nav-link {
        color: #062264;
    }

    .menu-title {
        color: #062264;
    }
    </style>
</head>
<body>
