{% extends 'base.html.twig' %}

{% block title %}Edit Agency{% endblock %}

{% block body %}
    <h1>Edit Agency</h1>

    {{ form_start(form) }}
        {{ form_row(form.name) }}
        {{ form_row(form.location) }}
        {{ form_row(form.email) }}
        {{ form_row(form.latitude) }}
        {{ form_row(form.longitude) }}

        <button class="btn btn-warning mt-3">Update</button>
        <a href="{{ path('agency_index') }}" class="btn btn-secondary mt-3">Back to list</a>
    {{ form_end(form) }}

    <form method="post" action="{{ path('agency_delete', {'id': agency.id}) }}" onsubmit="return confirm('Are you sure?');" class="mt-3">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ agency.id) }}">
        <button class="btn btn-danger">Delete</button>
    </form>
{% endblock %}
