{% extends 'base.html.twig' %}

{% block title %}Create New Agency{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="my-4 text-center">Create New Agency</h1>

        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                {{ form_start(form) }}
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <div class="mb-3">
                                <label for="{{ form.name.vars.id }}" class="form-label">Agency Name</label>
                                {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                            </div>

                            <div class="mb-3">
                                <label for="{{ form.location.vars.id }}" class="form-label">Location</label>
                                {{ form_widget(form.location, {'attr': {'class': 'form-control'}}) }}
                            </div>

                            <div class="mb-3">
                                <label for="{{ form.email.vars.id }}" class="form-label">Email</label>
                                {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                            </div>

                            <div class="mb-3">
                                <label for="{{ form.latitude.vars.id }}" class="form-label">Latitude</label>
                                {{ form_widget(form.latitude, {'attr': {'class': 'form-control'}}) }}
                            </div>

                            <div class="mb-3">
                                <label for="{{ form.longitude.vars.id }}" class="form-label">Longitude</label>
                                {{ form_widget(form.longitude, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            <div class="mb-3">
                            <label for="{{ form.userId.vars.id }}" class="form-label">User ID</label>
                            {{ form_widget(form.userId, {'attr': {'class': 'form-control'}}) }}
                            </div>

                            <div class="mb-3">
                                <label for="{{ form.services.vars.id }}" class="form-label">Services</label>
                                {{ form_widget(form.services, {'attr': {'class': 'form-select', 'multiple': 'multiple'}}) }}
                            </div>


                            <div class="d-flex justify-content-between">
                                <button class="btn btn-success">Create Agency</button>
                                <a href="{{ path('agency_index') }}" class="btn btn-secondary">Back to List</a>
                            </div>
                        </div>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
