{% extends 'baseA.html.twig' %}

{% block title %}Admin Dashboard{% endblock %}

{% block body %}
<div class="content-wrapper">
    <!-- System Info Bar -->
    <div class="system-info-bar mb-4">
        <div class="system-info-item">
        </div>
    </div>

    <div class="row">
        <div class="col-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h4 class="card-title mb-0">{{ page_title }}</h4>
                        <a href="{{ path('admin_user_create') }}" class="action-btn">
                            <i class="mdi mdi-plus"></i> Add New User
                        </a>
                    </div>

                    <!-- Stats Card -->
                    <div class="row mb-4">
                        <div class="col-md-3">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <div class="d-flex align-items-center">
                                        <i class="mdi mdi-account-multiple icon-lg text-primary"></i>
                                        <div class="ms-3">
                                            <h6 class="mb-0">Total Users</h6>
                                            <h3 class="mb-0">{{ user_count }}</h3>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Search Form -->
                    <div class="row mb-4">
                        <div class="col-12">
                            <form method="get" action="{{ path('app_admin') }}" class="search-box">
                                <div class="input-group">
                                    <input type="text" name="search" class="form-control" 
                                           placeholder="Search by name or email" value="{{ search }}"
                                           style="border-radius: 0;">
                                    <button type="submit" class="action-btn">
                                        <i class="mdi mdi-magnify"></i> Search
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>

                    <!-- Users Table -->
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Full Name</th>
                                    <th>Email</th>
                                    <th>Phone</th>
                                    <th>Roles</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for user in users %}
                                    <tr>
                                        <td>{{ user.id }}</td>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <img src="{{ asset('assetsA/images/faces/face8.jpg') }}" 
                                                     class="me-2 rounded-circle" 
                                                     style="width: 30px; height: 30px;" 
                                                     alt="profile">
                                                {{ user.fullName }}
                                            </div>
                                        </td>
                                        <td>{{ user.email }}</td>
                                        <td>{{ user.phone }}</td>
                                        <td>
                                            {% for role in user.roles %}
                                                <span class="badge bg-primary">{{ role }}</span>
                                            {% endfor %}
                                        </td>
                                        <td>
                                            <div class="d-flex gap-2">
                                                <a href="{{ path('admin_user_edit', {'id': user.id}) }}" 
                                                   class="action-btn">
                                                    <i class="mdi mdi-pencil"></i>
                                                </a>
                                                <form action="{{ path('admin_user_delete', {'id': user.id}) }}" 
                                                      method="post" 
                                                      style="display:inline;">
                                                    <input type="hidden" name="_method" value="DELETE">
                                                    <button type="submit" 
                                                            class="action-btn"
                                                            style="background-color: #dc3545;"
                                                            onclick="return confirm('Are you sure you want to delete this user?');">
                                                        <i class="mdi mdi-delete"></i>
                                                    </button>
                                                </form>
                                            </div>
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="6" class="text-center py-4">
                                            <i class="mdi mdi-alert-circle text-warning display-4"></i>
                                            <p class="mt-2">No users found.</p>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .action-btn {
        display: inline-flex;
        align-items: center;
        gap: 6px;
        padding: 8px 16px;
        border-radius: 0;
        font-size: 0.85rem;
        font-weight: 500;
        text-decoration: none;
        transition: all 0.3s ease;
        border: none;
        cursor: pointer;
        background-color: #4b93d1;
        color: white;
    }

    .action-btn:hover {
        opacity: 0.9;
        color: white;
        text-decoration: none;
    }

    .system-info-bar {
        background: #f8f9fa;
        padding: 15px;
        border: 1px solid #e9ecef;
        font-family: monospace;
    }

    .system-info-item {
        color: #062264;
        font-size: 0.9rem;
        margin-bottom: 8px;
    }

    .table th {
        background-color: #f8f9fa;
        color: #062264;
        font-weight: 600;
        border-bottom: 2px solid #e9ecef;
    }

    .table td {
        vertical-align: middle;
        color: #062264;
    }

    .badge {
        font-weight: 500;
        padding: 5px 10px;
        border-radius: 0;
    }

    .search-box .form-control:focus {
        border-color: #4b93d1;
        box-shadow: none;
    }

    .card {
        border-radius: 0;
        box-shadow: 0 0 10px rgba(0,0,0,0.1);
    }

    .card-title {
        color: #062264;
        font-weight: 600;
    }
</style>
{% endblock %}