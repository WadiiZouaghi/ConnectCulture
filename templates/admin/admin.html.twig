      {% block body %}
  <section class="form-section">
    <div class="container">
      <div class="form-container">
        <h2 class="text-center">Create New Event</h2>
        <p class="text-center">Fill out the form below to create a new event.</p>
        <form action="#" method="post">
          <table class="table table-bordered">
            <tr>
              <th>Nom d’événement</th>
              <td>
                <input type="text" id="event-name" name="event-name" class="form-control" placeholder="Enter event name" required>
              </td>
            </tr>
            <tr>
              <th>Description</th>
              <td>
                <textarea id="event-description" name="event-description" class="form-control" rows="5" placeholder="Enter event description" required></textarea>
              </td>
            </tr>
            <tr>
              <th>Date</th>
              <td>
                <input type="datetime-local" id="start-date" name="start-date" class="form-control" required>
              </td>
            </tr>
          
            <tr>
              <th>Location</th>
              <td>
                <input type="text" id="location" name="location" class="form-control" placeholder="Enter event location" required>
              </td>
            </tr>
          </table>
          <div class="text-center">
            <button type="submit" class="btn-submit">Enregistrer</button>
           
          </div>
        </form>
      </div>
    </div>
    {% endblock %}
    <div class="container mt-4">
      {% block title %}Liste d'événements{% endblock %}
  
      {% block Liste %}
          <h1>Liste d'événements</h1>
          <table class="table table-striped table-hover">
              <thead class="thead-dark">
                  <tr>
                      <th>Id</th>
                      <th>Name</th>
                      <th>Description</th>
                      <th>Date</th>
                      <th>Location</th>
                      <th>Actions</th>
                  </tr>
              </thead>
              <tbody>
                {% for event in event %}

                      <tr>
                          <td>{{ event.id }}</td>
                          <td>{{ event.name }}</td>
                          <td>{{ event.description }}</td>
                          <td>{{ event.date ? event.date|date('Y-m-d H:i:s') : '' }}</td>
                          <td>{{ event.location }}</td>
                          <td>
                              <a href="{{ path('admin_event_show', {'id': event.id}) }}">Show</a>
                              <a href="{{ path('admin_event_edit', {'id': event.id}) }}">Edit</a>
                          </td>
                      </tr>
                  {% else %}
                      <tr>
                          <td colspan="6">No records found</td>
                      </tr>
                  {% endfor %}
              </tbody>
          </table>
          <a href="{{ path('admin_event_new') }}">Create new</a>
