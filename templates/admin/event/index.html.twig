{% extends 'base.html.twig' %}

{% block title %}Liste d'événements{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Liste d'événements</h1>

        <table class="table table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>Id</th>
                    <th>Nom</th>
                    <th>Description</th>
                    <th>Date</th>
                    <th>Lieu</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for event in events %}
                <tr>
                    <td>{{ event.id }}</td>
                    <td>{{ event.name }}</td>
                    <td>{{ event.description }}</td>
                    <td>{{ event.date ? event.date|date('Y-m-d H:i:s') : 'Aucune date' }}</td>
                    <td>{{ event.location ? event.location : 'Non spécifié' }}</td>
                    <td>
                        <a href="{{ path('app_event_show', {'id': event.id}) }}" class="btn btn-info btn-sm">Voir</a>
                        <a href="{{ path('app_event_edit', {'id': event.id}) }}" class="btn btn-warning btn-sm">Modifier</a>
                        <form action="{{ path('app_event_delete', {'id': event.id}) }}" method="post" style="display:inline;">
                            <input type="hidden" name="_method" value="DELETE">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ event.id) }}">
                            <button class="btn btn-danger btn-sm" type="submit" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cet événement ?')">Supprimer</button>
                        </form>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6" class="text-center">Aucun événement trouvé</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('app_event_new') }}" class="btn btn-success">Créer un nouvel événement</a>
    </div>
{% endblock %}