{% extends 'baseA.html.twig' %}

{% block title %}Competitions - Culture Connect{% endblock %}

{% block content %}
<div class="content-wrapper">
    <div class="page-header">
        <h3 class="page-title">Competitions List</h3>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="{{ path('admin_tables') }}">Dashboard</a></li>
                <li class="breadcrumb-item active" aria-current="page">Competitions</li>
            </ol>
        </nav>
        
    </div>

    <div class="row">
        <div class="col-lg-12 stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Table with contextual classes</h4>
                    <div class="table-responsive pt-3">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Name</th>
                                    <th>Start Date</th>
                                    <th>End Date</th>
                                    <th>Status</th>
                                    <th>Organizer ID</th>
                                    <th>Delete user</th>
                                    <th>Delete Competition</th>
                                    <th>Modify Competition</th>
                                    <th>Download PDF</th>
                                    <th>Generate QRCode</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for competition in competitions %}
                                    <tr class="table-{{ competition.etat|lower ?: 'secondary' }}">
                                        <td>{{ loop.index }}</td>
                                        <td>{{ competition.nom }}</td>
                                        <td>{{ competition.dateDebut|date('M d, Y') }}</td>
                                        <td>{{ competition.dateFin|date('M d, Y') }}</td>
                                        <td>{{ competition.etat ?: 'Not specified' }}</td>
                                        <td>
                                            {% if competition.organisateur is not null %}
                                                {{ competition.organisateur.id }}
                                            {% else %}
                                                No user assigned
                                            {% endif %}
                                        </td>
                                        <td><a href="{{ path('remove_user_from_competition', {id: competition.idComp}) }}" class="btn btn-warning btn-sm" onclick="return confirm('Are you sure you want to remove the user from this competition?');">Remove User</a></td>
                                        <td> <a href="{{ path('delete_competition', {id: competition.idComp}) }}" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this competition?');">Delete Competition</a></td>
                                        <td> <a href="{{ path('competition_edit', {id: competition.idComp}) }}" class="btn btn-primary btn-sm">Modify Competition</a></td>
                                        </td>
                                        <td>
                                        <a href="{{ path('competition_pdf', {id: competition.idComp}) }}" class="btn btn-info btn-sm">Download PDF</a>
                                        </td>
                                        <td>
                                        <a href="{{ path('competition_qr_code', {id: competition.idComp}) }}" class="btn btn-info btn-sm" target="_blank">Generate QR Code</a>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    <div class="pagination-container">
                        {{ knp_pagination_render(competitions) }}
                    </div>
                    <div class="d-flex justify-content-end mb-3">
                    <a href="{{ path('competition_new') }}" class="btn btn-success btn-sm">Add Competition</a>
                </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
