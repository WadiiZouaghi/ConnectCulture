{% extends 'base.html.twig' %}

{% block title %}Evants index{% endblock %}

{% block body %}
    <h1>Evants index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Date</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for evant in evants %}
            <tr>
                <td>{{ evant.id }}</td>
                <td>{{ evant.name }}</td>
                <td>{{ evant.date ? evant.date|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_evants_show', {'id': evant.id}) }}">show</a>
                    <a href="{{ path('app_evants_edit', {'id': evant.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_evants_new') }}">Create new</a>
{% endblock %}
