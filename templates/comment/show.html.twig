{% extends 'base.html.twig' %}

{% block title %}Comment Details{% endblock %}

{% block body %}
    <h1>Comment Details</h1>

    <div class="card mb-4">
        <div class="card-header">
            <div class="d-flex justify-content-between">
                <span>
                    {% if comment.author %}
                        {{ comment.author.fullName }}
                    {% else %}
                        Anonymous
                    {% endif %}
                </span>
                <span>{{ comment.createdAt ? comment.createdAt|date('F d, Y H:i') : '' }}</span>
            </div>
        </div>
        <div class="card-body">
            <p class="card-text">{{ comment.content }}</p>
            
            {% if comment.blog %}
                <p class="card-text">
                    <small class="text-muted">
                        On blog: <a href="{{ path('blog_show', {id: comment.blog.id}) }}">{{ comment.blog.title }}</a>
                    </small>
                </p>
            {% endif %}
        </div>
    </div>

    <div class="actions">
        <a href="{{ path('comment_edit', {id: comment.id}) }}" class="btn btn-warning">Edit</a>
        <a href="{{ path('comment_index') }}" class="btn btn-secondary">Back to list</a>
        
        {% if comment.blog %}
            <a href="{{ path('blog_show', {id: comment.blog.id}) }}" class="btn btn-info">Back to blog</a>
        {% endif %}
        
        <form method="post" action="{{ path('comment_delete', {id: comment.id}) }}" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this comment?');">
            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ comment.id) }}">
            <button class="btn btn-danger">Delete</button>
        </form>
    </div>
{% endblock %}
