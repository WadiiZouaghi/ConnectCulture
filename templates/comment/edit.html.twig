{% extends 'base.html.twig' %}

{% block title %}Edit Comment{% endblock %}

{% block body %}
    <h1>Edit Comment</h1>

    {{ form_start(form) }}
        {{ form_widget(form) }}
        <button class="btn btn-primary">Update</button>
    {{ form_end(form) }}

    <div class="mt-3">
        <a href="{{ path('comment_index') }}" class="btn btn-secondary">Back to list</a>
        <a href="{{ path('comment_show', {id: comment.id}) }}" class="btn btn-info">Show</a>
        
        {% if comment.blog %}
            <a href="{{ path('blog_show', {id: comment.blog.id}) }}" class="btn btn-info">Back to blog</a>
        {% endif %}
        
        <form method="post" action="{{ path('comment_delete', {id: comment.id}) }}" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this comment?');">
            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ comment.id) }}">
            <button class="btn btn-danger">Delete</button>
        </form>
    </div>
{% endblock %}
