{% extends 'base.html.twig' %}

{% block title %}Edit Service{% endblock %}

{% block body %}
    <h1>Edit Service</h1>

    {{ form_start(form) }}
        {{ form_widget(form) }}
        <button class="btn btn-primary">Update</button>
    {{ form_end(form) }}

    <div class="mt-3">
        <a href="{{ path('service_index') }}" class="btn btn-secondary">Back to list</a>
        <a href="{{ path('service_show', {id: service.id}) }}" class="btn btn-info">Show</a>
        <form method="post" action="{{ path('service_delete', {id: service.id}) }}" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this service?');">
            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ service.id) }}">
            <button class="btn btn-danger">Delete</button>
        </form>
    </div>
{% endblock %}
