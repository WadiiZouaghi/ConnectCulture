{% extends 'base.html.twig' %}

{% block title %}Service List{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Services</h1>

        <a href="{{ path('service_new') }}" class="btn btn-primary mb-3">Create New Service</a>

        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Service Equipment</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for service in services %}
                    <tr>
                        <td>{{ service.name }}</td>
                        <td>{{ service.serviceEquipment }}</td>
                        <td>
                            <a href="{{ path('service_edit', {'id': service.id}) }}" class="btn btn-sm btn-warning">Edit</a>

                            <form method="post" action="{{ path('service_delete', {'id': service.id}) }}" style="display:inline-block;" onsubmit="return confirm('Are you sure?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ service.id) }}">
                                <button class="btn btn-sm btn-danger">Delete</button>
                            </form>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3">No services found.</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
